      --container-gutter: 40px;
      --container-max-width: 1600px;
      --heading-font-family: soehne-kraftig, {{ settings.heading_font.fallback_families }}
    }

    html,body{
     padding: 0;
     margin: 0;
     font-family: 'Saans', sans-serif;
    }
    body img{
      width: 100%;
    }
    .container{
      width: 100%;
      max-width: var(--container-max-width);
      padding-left: var(--container-gutter);
      padding-right: var(--container-gutter);
      --container-outer-margin: 0px;
      margin-left: auto;
      margin-right: auto;
      box-sizing: border-box;
    }
  .member-banner {
    position: relative;
    overflow: hidden;
  }
  .member-banner .member-top {
    position: absolute;
    left: 2.5%;
    top: 11%;
    z-index: 2;
    font-size: 16px;
    line-height: 1.5;
  }
  .member-banner .member-top p{
    margin: 0px;
    font-size: 18px;
    line-height: 1.5;
  }

  .member-banner .img {
    width: 100%;
    position: relative;
    z-index: 1;
    display: block;
  }

  .member-banner .member-banner-cont {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 2;
  }

  .member-banner .member-banner-title {
    color: #190a0a;
    font-size: 42px;
    line-height: 1.2;
    letter-spacing: 0.44px;
    font-family: var(--heading-font-family);
    margin: 0;
    font-weight: normal;
  }

  .member-banner .member-banner-text-p {
    color: #190a0a;
    font-size: 20px;
    line-height: 1.5;
    letter-spacing: 0.2px;
    margin-top: 15px;
  }

  .member-banner .member-banner-form {
    margin-top: 30px;
    max-width: 470px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .member-banner .member-banner-form-item {
    position: relative;
  }

  .member-banner .member-banner-input {
    height: 55px;
    padding: 0 30px;
    border: 1px solid #3f3636;
    background: #fff;
    color: #190a0a;
    font-size: 16px;
    width: 100%;
    outline: none;
    box-sizing: border-box;
  }

  .member-banner .member-banner-input::placeholder {
    color: #9c9c9c;
  }

  .member-banner .member-banner-Verify {
    color: #e0004d;
    font-size: 16px;
    line-height: 1;
    font-family: var(--heading-font-family);
    position: absolute;
    right: 30px;
    height: 53px;
    top: 1px;
    padding: 0 5px;
    background: #fff;
    cursor: pointer;
    z-index: 2;
    display: flex;
    align-items: center;
    user-select: none;
  }

  .member-banner .member-banner-msg {
    color: #e0004d;
    font-size: 14px;
    line-height: 1.5;
    letter-spacing: 0.14px;
    margin-top: 5px;
    display: none;
  }

  .member-banner .member-banner-form-g {
    display: flex;
    align-items: flex-start;
    gap: 8px;
  }

  .member-banner .member-banner-form-checkbox {
    position: relative;
    overflow: hidden;
    width: 15px;
    height: 15px;
    cursor: pointer;
    border-radius: 1.53px;
    border: 0.612px solid #3f3636;
    background: rgba(255, 255, 255, 0.2);
    flex-shrink: 0;
    margin-top: 3px;
  }

  .member-banner .member-banner-checkbox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }

  .member-banner
    .member-banner-form-checkbox
    .member-banner-checkbox:checked
    + span {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 5px;
    height: 9px;
    margin-left: -3px;
    margin-top: -1.5px;
    border-bottom: 0.612px solid #3f3636;
    border-right: 0.612px solid #3f3636;
    transform: rotate(45deg) translate(-50%, -50%);
    pointer-events: none;
  }

  .member-banner .member-banner-form-text {
    color: #3f3636;
    font-size: 14px;
    line-height: 1.5;
    letter-spacing: -0.196px;
  }

  .member-banner .member-banner-form-text p {
    margin: 0;
  }

  .member-banner .member-banner-form-text a {
    color: #3f3636;
    text-decoration: underline;
  }

  .member-banner .member-banner-form-btn {
    height: 47px;
    width: 200px;
    background:rgba(219, 214, 214, 0.8);
    color: #fff;
    font-size: 16px;
    line-height: 1;
    font-family: var(--heading-font-family);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }
  

  .member-banner .member-banner-form-btn:hover {
    opacity: 0.7;
  }

  .member-banner .popup-active .member-banner-form-btn {
    background: #e0004d;
  }

  .member-banner .member-banner-success {
    position: relative;
    max-width: 500px;
    display: none;
  }

  .member-banner .su-bg {
    position: absolute;
    top: 58%;
    left: 53%;
    transform: translate(-50%, -50%);
    z-index: 1;
    width: 160%;
    max-width: none;
    animation: gs 15s linear infinite;
  }

  @keyframes gs {
    0% {
      transform: translate(-50%, -50%) rotate(0);
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  .member-banner .member-banner-success-text {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .member-banner .member-banner-success-text svg {
    width: 46px;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .member-banner .member-banner-success-h3 {
    color: #e0004d;
    font-size: 44px;
    line-height: 1.2;
    letter-spacing: 0.44px;
    font-family: var(--heading-font-family);
    margin-top: 30px;
  }

  .member-banner .member-banner-success-p {
    color: #190a0a;
    font-size: 20px;
    line-height: 1.5;
    letter-spacing: 0.2px;
    margin-top: 15px;
  }


  .member-banner-Verify.loading {
    pointer-events: none; /* 禁止点击 */
  }

