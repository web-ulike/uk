        font-family: "Saans";
        src: url('{{ "Saans-Regular.otf" | asset_url }}') format('opentype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Saans";
        src: url('{{ "Saans-Medium.otf" | asset_url }}') format('opentype');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "soehne-kraftig";
        src: url('{{ "Saans-Medium.otf" | asset_url }}') format('opentype');
        font-style: normal;
        font-display: swap;
    }
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    /* 适用于 Firefox */
    input[type="number"] {
      -moz-appearance: textfield;
    }
