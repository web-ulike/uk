<style>
.email-card{
  padding: 30px 0 105px 0;
  /* background: #000; */
}

.email-card .email-card-cont{
  position: relative;
}

.email-card .bg-img{
  display: block;
  width: 100%;
  position: relative;
  z-index: 1;
}

.email-card .mb-box{
  display: none;
}

.email-card .email-card-flex{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  z-index: 2;
}

.email-card .email-card-img,.email-card .email-card-text{
  width: 50%;
}
.email-card .email-card-img{
  position: relative;
}
.email-card .email-card-text{
  display: flex;
  align-items: center;
}

.email-card .email-card-title{
  color: #000;
  font-size: 40px;
  line-height: 1.25;
  font-family: var(--heading-font-family);
}

.email-card .email-card-p{
  color: #000;
  font-size: 16px;
  line-height: 1.5;
  margin-top: 20px;
  max-width: 527px;
}

.email-card .email-card-btn{
  display: flex;
  width: 167px;
  height: 51px;
  justify-content: center;
  align-items: center;
  border: 1px solid #887156;
  color: #FFF;
  font-size: 14px;
  letter-spacing: 1.4px;
  cursor: pointer;
  background: #000;
  margin-top: 20px;
}

.email-card .email-card-img-list{
  position: absolute;
  height: 100%;
  width: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}

.email-card .bg-one{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 68.7%;
}

.email-card .bg-two{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 91%;
  transform-origin: 15% 10%;
  animation: spinbf 3s linear infinite;
}

.email-card .bg-three{
  display: block;
  position: absolute;
  top: 7%;
  left: 6%;
  z-index: 3;
  width: 22.9%;
}

@keyframes spinbf {
  0% { transform: rotate(0deg); }
  50% { transform: rotate(5deg); }
  100% { transform: rotate(0deg); }
}

@media (max-width:1200px) {
  .email-card .email-card-text{
    padding-right: 30px;
  }
  .email-card .email-card-title{
    font-size: 30px;
  }
  .email-card .email-card-p{
    font-size: 14px;
  }
}

@media (max-width:876px) {
  .email-card{
    padding:30px 0;
  }
  .email-card .mb-box{
    display: block;
  }
  .email-card .pc-box{
    display: none;
  }
  .email-card .email-card-flex{
    flex-direction: column;
  }
  .email-card .email-card-img{
    width: 100%;
    padding-top: 73%;
  }
  .email-card .email-card-text{
    padding: 0;
    width: calc(100% - 50px);
    margin: 0 auto;
    text-align: center;
    justify-content: center;
    margin-top: 40px;
  }
  .email-card .email-card-title{
    font-size: 22px;
  }
  .email-card .email-card-p{
    max-width: none;
  }
  .email-card .email-card-btn{
    width: 100%;
    height: 50px;
  }

  .email-card .bg-one{
    width: 76.7%;
  }
  .email-card .bg-two{
    width: 118%;
    max-width: none;
    top: -5%;
    left: -2%;
  }

  .email-card .bg-three{
    width: 28.9%;
    top: 5%;
  }

}
</style>
<section class="section-box">
  <div class="email-card">
    <div class="container">
      <div class="email-card-cont">
        {%- if section.settings.image != blank -%}
           <img loading="lazy" class="bg-img pc-box" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" {% render 'image-attributes', image: section.settings.image %} alt="{{ section.settings.image.alt | escape }}" >
        {%- endif -%}
        {%- if section.settings.image1 != blank -%}
           <img loading="lazy" class="bg-img mb-box" width="{{ section.settings.image1.width }}" height="{{ section.settings.image1.height }}" {% render 'image-attributes', image: section.settings.image1 %} alt="{{ section.settings.image1.alt | escape }}" >
        {%- endif -%}
        <div class="email-card-flex">
          <div class="email-card-img">
            <div class="email-card-img-list">
              {%- if section.settings.image2 != blank -%}
                 <img loading="lazy" class="bg-one" width="{{ section.settings.image2.width }}" height="{{ section.settings.image2.height }}" {% render 'image-attributes', image: section.settings.image2 %} alt="{{ section.settings.image2.alt | escape }}" >
              {%- endif -%}
              {%- if section.settings.image3 != blank -%}
                 <img loading="lazy" class="bg-two" width="{{ section.settings.image3.width }}" height="{{ section.settings.image3.height }}" {% render 'image-attributes', image: section.settings.image3 %} alt="{{ section.settings.image3.alt | escape }}" >
              {%- endif -%}
              {%- if section.settings.image4 != blank -%}
                 <img loading="lazy" class="bg-three" width="{{ section.settings.image4.width }}" height="{{ section.settings.image4.height }}" {% render 'image-attributes', image: section.settings.image4 %} alt="{{ section.settings.image4.alt | escape }}" >
              {%- endif -%}
            </div>
          </div>
          <div class="email-card-text">
            <div>
              {%- if section.settings.text != blank -%}
                <div class="email-card-title">{{ section.settings.text }}</div>
              {%- endif -%}
              {%- if section.settings.text1 != blank -%}
                <div class="email-card-p">{{ section.settings.text1 }}</div>
              {%- endif -%}
              {%- if section.settings.text2 != blank -%}
                <a href="{{ section.settings.link }}" class="email-card-btn">{{ section.settings.text2 }}</a>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
    window.addEventListener('load',function(){
      $('#shopify-section-{{ section.id }} .email-card .email-card-btn').click(function(){
        if('shopify-section-{{ section.id }}'== 'shopify-section-template--21577236545823__26444997-88a7-4af4-9286-ed41e202ede9'){
           commonGtmEvent('gift_bounce','','')
        } else {
           commonGtmEvent('Gift-LearnMore','','')
        }
      })
    })
  </script>
