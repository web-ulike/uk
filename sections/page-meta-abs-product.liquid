<script>
  (function () {
    let swiperId = new Swiper('#ad-thumbs-{{ section.id }}', {
      pagination: {
        el: '.swiper-pagination-{{ section.id }}',
      },
    });

    let productId_1 = '{{section.settings.product_id_1}}';
    let productId_2 = '{{section.settings.product_id_2}}';
    let productId_3 = '{{section.settings.product_id_3}}';
    let productId_4 = '{{section.settings.product_id_4}}';
    let productId_5 = '{{section.settings.product_id_5}}';
    let productId_6 = '{{section.settings.product_id_6}}';

    let checkProductId = '';

    document
      .getElementById('shopify-section-{{section.id}}')
      .querySelectorAll('.img-list-btn')
      .forEach((colorButton, index) => {
        colorButton.addEventListener('click', function (e) {
          console.log('index', index);
          document
            .getElementById('shopify-section-{{section.id}}')
            .querySelectorAll('.img-list-btn')
            .forEach((list) => {
              list.classList.remove('active');
            });

          if (index == 0 && document.querySelector('.select-plug-box').dataset.selectPlugId == 0) {
            checkProductId = productId_1;
          } else if (index == 0 && document.querySelector('.select-plug-box').dataset.selectPlugId == 1) {
            checkProductId = productId_2;
          } else if (index == 1 && document.querySelector('.select-plug-box').dataset.selectPlugId == 0) {
            checkProductId = productId_3;
          } else if (index == 1 && document.querySelector('.select-plug-box').dataset.selectPlugId == 1) {
            checkProductId = productId_4;
          } else if (index == 2 && document.querySelector('.select-plug-box').dataset.selectPlugId == 0) {
            checkProductId = productId_5;
          } else if (index == 2 && document.querySelector('.select-plug-box').dataset.selectPlugId == 1) {
            checkProductId = productId_6;
          }
          this.classList.add('active');
          document.querySelector('.meta-abs-color').dataset.selectColorId = index;
          swiperId.slideTo(index, 500);
        });
      });

    document
      .getElementById('shopify-section-{{section.id}}')
      .querySelectorAll('.select-plug-list')
      .forEach((plugButton, index) => {
        plugButton.addEventListener('click', function (e) {
          document
            .getElementById('shopify-section-{{section.id}}')
            .querySelectorAll('.select-plug-list')
            .forEach((pluglist) => {
              pluglist.classList.remove('active');
            });
          this.classList.add('active');
          document.querySelector('.select-plug-box').dataset.selectPlugId = index;

          if (index == 0 && document.querySelector('.meta-abs-color').dataset.selectColorId == 0) {
            checkProductId = productId_1;
          } else if (index == 1 && document.querySelector('.meta-abs-color').dataset.selectColorId == 0) {
            checkProductId = productId_2;
          } else if (index == 0 && document.querySelector('.meta-abs-color').dataset.selectColorId == 1) {
            checkProductId = productId_3;
          } else if (index == 1 && document.querySelector('.meta-abs-color').dataset.selectColorId == 1) {
            checkProductId = productId_4;
          } else if (index == 0 && document.querySelector('.meta-abs-color').dataset.selectColorId == 2) {
            checkProductId = productId_5;
          } else if (index == 1 && document.querySelector('.meta-abs-color').dataset.selectColorId == 2) {
            checkProductId = productId_6;
          }
        });
      });

    document.getElementById('shopify-section-{{section.id}}').querySelector('.img-list-btn').click();
    document.getElementById('shopify-section-{{section.id}}').querySelector('.select-plug-list').click();

    $('#image_score').on('click', function () {
      var target = $(this).data('target');
      var targetPosition = $(target).offset().top - $(this).height();
      $('html, body').animate({ scrollTop: targetPosition }, 'slow');
      /* buyProduct('43695950823665') */
    });

    $('#meta-ads_addtochart_{{ section.id }}').on('click', function () {
      addToCart(checkProductId, this);
    });

    // 现在购买
    $('#air3BuyNow_{{ section.id }}').click(function () {
      buyProduct(checkProductId);
    });

    var cpnBtn = document.getElementById('codying_btn{{ section.id }}');
    if (cpnBtn) {
      var cpnCode = document.getElementById('backschoolcpnCode{{ section.id }}');
      cpnBtn.onclick = function () {
        navigator.clipboard.writeText(cpnCode.innerHTML);
        cpnBtn.innerHTML = 'Copied';
        cpnBtn.classList.add('copyActive');
        setTimeout(() => {
          cpnBtn.innerHTML = 'Copy and Buy';
          cpnBtn.classList.remove('copyActive');
        }, 6000);
      };
    }
    // 定义滚动事件处理程序
    function scrollHandler() {
      const element = document.querySelector('.meta-abs-price');
      const elementTop = element.getBoundingClientRect().top;
      if (elementTop <= 0) {
        document.querySelector('.schoop-shop-btn').classList.add('active');
      } else {
        document.querySelector('.schoop-shop-btn').classList.remove('active');
      }
    }

    // 添加滚动事件监听器
    if ($(window).width() < 650 && document.querySelector('.year_end-fixed')) {
      window.addEventListener('scroll', scrollHandler);
    }
  })();
</script>

