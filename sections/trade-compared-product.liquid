                          <img class="{% if block.settings.mobile_product1_image3 %}pc-box{% endif %}" src="{{ block.settings.product1_image3 | image_url }}" alt="" srcset="">
                          {%- endif -%}
                       </div>
                      <div class="select_val-box">
                        {%- if block.settings.product1_color1 != blank -%}
                        <div class="select_val-item active" data-index="{{ forloop.index }}">
                          <div class="select_val-label" style="background: {{ block.settings.product1_color1 }}"></div>
                        </div>
                        {%- endif -%}
                        {%- if block.settings.product1_color2 != blank -%}
