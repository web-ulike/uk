<section>
  <div class="compared_prdt-wrapper section-{{ section.id }}-padding {{section.settings.class_name}}" style="background:{{ section.settings.background_color }}">
    <div class="container">
      <div class="compared_prd-box">
        {%- if section.settings.title != blank -%}
          <h3 class="to-top">{{ section.settings.title | escape }}</h3>
        {%- endif -%}
        <div class="compared-prd-right to-top" style="transition-delay: 0.2s">
          <div class="compared_prd-table">
