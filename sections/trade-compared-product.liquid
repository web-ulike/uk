                      </div>
                    {%- if block.settings.product_name1 != blank -%}
                      <div class="prd_name">{{ block.settings.product_name1 }} 
                        {%- if block.settings.tag_name != blank -%}
                          <div class="tag-box">{{ block.settings.tag_name }}</div>
                        {%- endif -%}
                      </div>
                      {%- endif -%}
                      {%- if block.settings.product_price1 != blank -%}
