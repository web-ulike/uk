                          {%- endif -%}
                         {%- if block.settings.product1_image1 -%}
                          <img class="{% if block.settings.mobile_product1_image1 %}pc-box{% endif %}" src="{{ block.settings.product1_image1 | image_url }}" alt="" srcset="">
                          {%- endif -%}
