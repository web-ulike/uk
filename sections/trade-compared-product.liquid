                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      init{{ section.id | replace: "template--", "" }}();
    });
  } else {
    init{{ section.id | replace: "template--", "" }}();
  }
  
function init{{ section.id | replace: "template--", "" }} () {
  

document.querySelectorAll('.compared_prd-bix').forEach( function(item, index) {
  item.querySelectorAll('.select_val-item').forEach(function(ie, id){
    ie.addEventListener('click', function(ies) {
    item.querySelectorAll('.select_val-item').forEach(function(er){
      er.classList.remove('active')
    })
    item.querySelectorAll('.picture').forEach(function(pic){
      pic.style.display = "none"
    })
    item.querySelectorAll('.picture')[id].style.display = "block"
    this.classList.add('active')

      
  })

  })
});


  
}

</script>
