<style>
.a2-p-md3 {
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.a2-p-md3 .img {
  position: relative;
  z-index: 1;
  width: 100%;
}

.a2-p-md3 .a2-p-md3-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.a2-p-md3 .a2-p-md3-cont {
  position: relative;
  z-index: 1;
  padding-top: 5.2vw;
}

.a2-p-md3 .a2-p-md3-txt {
  width: 36.8%;
  max-width: 560px;
  margin-left: auto;
  margin-right: 0;
}

.a2-p-md3 .a2-p-md3-h3 {
  color: #000;
  font-size: 48px;
  line-height: 1.1;
  margin: 0;
  font-weight: normal;
  margin-bottom: 20px;
}

.a2-p-md3 .a2-p-md3-h3 p {
  margin: 0;
}

.a2-p-md3 .a2-p-md3-p {
  color: #3f3636;
  font-size: 18px;
  line-height: 1.3;
}

.a2-p-md3 .icon-img {
  width: 538px;
  margin-top: 60px;
}

.a2-p-md3 .a2-p-md3-label {
  position: absolute;
  left: 40%;
  top: 18vw;
}

.a2-p-md3 .a2-p-md3-t {
  color: #000;
  font-size: 24px;
  line-height: 1.2;
}

.a2-p-md3 .a2-p-md3-num {
  color: #569ac9;
  font-size: 80px;
  line-height: 1.2;
}

.a2-p-md3 .a2-p-md3-msg {
  color: #7e7e7e;
  font-size: 14.5px;
  line-height: 1.2;
}

@media (max-width: 1600px) {
  .a2-p-md3 .a2-p-md3-h3 {
    font-size: 40px;
  }

  .a2-p-md3 .a2-p-md3-p {
    font-size: 16px;
  }

  .a2-p-md3 .a2-p-md3-label {
    left: 42%;
  }

  .a2-p-md3 .a2-p-md3-num {
    font-size: 60px;
  }

  .a2-p-md3 .icon-img {
    margin-top: 40px;
  }
}

@media (max-width: 1200px) {
  .a2-p-md3 .a2-p-md3-num {
    font-size: 50px;
  }
  .a2-p-md3 .a2-p-md3-t {
    font-size: 18px;
  }
  .a2-p-md3 .a2-p-md3-msg {
    font-size: 12px;
  }
}

@media (max-width: 991px) {
  .a2-p-md3-text .container,
  .a2-p-md3 .a2-p-md3-cont {
    height: 100%;
  }
  .a2-p-md3 .a2-p-md3-cont {
    padding: 50px 0 20px 0;
  }
  .a2-p-md3 .a2-p-md3-h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }
  .a2-p-md3 .a2-p-md3-p {
    font-size: 12px;
  }
  .a2-p-md3 .a2-p-md3-txt {
    width: calc(100% + 10px);
    max-width: none;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
    height: 100%;
    margin-left:-5px;
  }
  .a2-p-md3 .icon-img {
    max-width: none;
    width: 100%;
  }
  .a2-p-md3 .a2-p-md3-label {
    position: absolute;
    left: 55%;
    top: 69vw;
  }
  .a2-p-md3 .a2-p-md3-t {
    font-size: 13px;
  }
  .a2-p-md3 .a2-p-md3-num {
    font-size: 53px;
  }
}
</style>
<section class="section-box">
  <div class="a2-p-md3">
    {%- if section.settings.image != blank or section.settings.image1 != blank -%}
        <picture>
        <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
        <img loading="lazy"
            class="img"
            width=""
            height=""
            {% render 'image-attributes', image: section.settings.image %}
            alt="{{ section.settings.image.alt | escape }}">
        </picture>
    {%- endif -%}
    <div class="a2-p-md3-text">
      <div class="container">
        <div class="a2-p-md3-cont">
          <div class="a2-p-md3-txt">
            <div>
                {%- if section.settings.text != blank -%}
                    <h3 class="a2-p-md3-h3">{{ section.settings.text }}</h3>
                {%- endif -%}
                {%- if section.settings.text1 != blank -%}
                    <div class="a2-p-md3-p">{{ section.settings.text1 }}</div>
                {%- endif -%}
            </div>
            {%- if section.settings.image2 != blank -%}
                <img loading="lazy"
                class="icon-img"
                width=""
                height=""
                {% render 'image-attributes', image: section.settings.image2 %}
                alt="{{ section.settings.image2.alt | escape }}">
            {%- endif -%}
          </div>
          <div class="a2-p-md3-label">
            {%- if section.settings.text2 != blank -%}
                <div class="a2-p-md3-t">{{ section.settings.text2 }}</div>
            {%- endif -%}
            {%- if section.settings.text3 != blank -%}
                <div class="a2-p-md3-num">{{ section.settings.text3 }}</div>
            {%- endif -%}
            {%- if section.settings.text4 != blank -%}
                <div class="a2-p-md3-msg">{{ section.settings.text4 }}</div>
            {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
{% schema %}
{
  "name": "a2-p-md3",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "image_picker",
        "id": "image1",
        "label": "M Image"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
        "type": "image_picker",
        "id": "image2",
        "label": "Icon"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text4",
      "label": "Text"
    },
  ],
  "presets": [
    {
      "name": "a2-p-md3",
      "blocks": []
    }
  ]
}
{% endschema %}
