<style>
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
#shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
}
.live_text-wrapper{
  position: relative;
}
.live_img{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  min-height: 350px;
  height: 100%;
}
.live_box {
    display: flex;
    padding: 50px 0;
    align-items: center;
    justify-content: space-evenly;
}
.live_left {
    flex-basis: 33%;
}
.live_box .live_left .live_left-tle{
  font-size: 32px;
  line-height: 1;
  margin-bottom: 20px;
  color: #fff;
}
.live_box .live_left .live_left-txt{
  font-size: 16px;
  line-height: 1.3;
  margin-bottom: 20px;
  color: #fff;
}
.live_box .live_left .live_link{
  display: inline-flex;
  font-size: 14px;
  line-height: 1.5;
  padding: 15px 38px;
  color: #000000;
  text-transform: uppercase;
  background: #ffffff;
  align-items: center;
    gap: 10px;
}
  section.text_with-live {
    padding: 50px 0;
}

 .live_box .live_left .live_link:after {
   content: "";
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    z-index: -1;
   background: #000000;
    transition: transform 0.5s;
    top: 0;
    transform: scaleX(0);
    transform-origin: right;
}
.live_box .live_left .live_link:hover:after {
    transition: transform 0.5s;
    transform: scaleX(1);
    transform-origin: left;
}
  .live_box .live_left .live_link:hover {
    color:#fff;
}
@media screen and (max-width: 992px){
  .live_box{
    flex-direction: column;
  }
  .text_with-live .container{
    padding: 0;
  }
  .live_box{
    padding: 60px 33px;
  }
  .live_left{
    text-align: center;
    margin-bottom: 40px;
  }
  .live_box .live_left .live_left-tle{
    font-size: 28px;
    margin-bottom: 15px;
  }
  .live_box .live_left .live_left-txt{
    font-size: 14px;
    margin-bottom: 15px;
  }
    section.text_with-live {
    padding: 0;
}
}
</style>

<section class="text_with-live{% if section.settings.custom_class != blank %} {{section.settings.custom_class}}{% endif %}">
  <div class="text_live-box">
    <div class="container">
      <div class="live_text-wrapper to-top">
      {%- if section.settings.image != blank -%}
        <img class="live_img hidden-pocket" src="{{ section.settings.image | image_url }}">
      {%- endif -%}
      {%- if section.settings.image_mobile != blank -%}
        <img class="live_img hidden-lap-and-up" src="{{ section.settings.image_mobile | image_url }}">
      {%- endif -%}
      <div class="live_box">
        <div class="live_left">
          {%- if section.settings.title != blank -%}
            <div class="live_left-tle to-top" style="transition-delay: 0.1s">
              {{ section.settings.title | escape }}
            </div>
          {%- endif -%}
          {%- if section.settings.logo_tle != blank -%}
            <div class="live_left-txt to-top" style="transition-delay: 0.2s">
            {{ section.settings.logo_tle | escape }}
            </div>
          {%- endif -%}
          {%- if section.settings.button_txt != blank -%}
            <a href="{{ section.settings.button_url }}" class="live_link to-top" style="transition-delay: 0.3s">{{ section.settings.button_txt }}
              <svg xmlns="http://www.w3.org/2000/svg" width="10" height="12" viewBox="0 0 10 12" fill="none">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M8.9033 4.32917C9.86384 4.90413 9.86384 6.29587 8.9033 6.87083L2.24207 10.8581C1.25486 11.449 0.000281334 10.7378 0.000281334 9.58728L0.000281334 1.61272C0.000281334 0.462159 1.25486 -0.249034 2.24207 0.341893L8.9033 4.32917Z" fill="currentColor"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
        <div class="live_right">
          {%- if section.settings.live_image != blank -%}
            <a href="{{ section.settings.button_url }}" class="live_link-img">
            <img class="live_img-right" src="{{ section.settings.live_image | image_url }}">
            </a>
          {%- endif -%}
        </div>
      </div>
      </div>
    </div>
  </div>
</section>

