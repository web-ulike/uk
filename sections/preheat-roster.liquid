@media (max-width:1200px) {
  .preheat-roster .preheat-roster-title{
    font-size: 40px;
  }
}

@media (max-width:991px) {
  .preheat-roster{
    padding: 60px 0;
  }
  .preheat-roster .preheat-roster-cont{
    flex-direction: column;
    gap: 32px;
  }
  .preheat-roster .preheat-roster-left{
    width: 100%;
    text-align: center;
  }
  .preheat-roster .preheat-roster-title{
    font-size: 24px;
  }
  .preheat-roster .preheat-roster-sub{
    font-size: 14px;
  }
  .preheat-roster .preheat-roster-right{
    padding: 30px 5px;
  }
.preheat-roster .preheat-roster-dec{
  max-height: 170px;
}
  .preheat-roster .preheat-roster-list{
    padding: 0 20px;
  }
  .preheat-roster .preheat-roster-list ul{
    gap: 20px;
  }
  .preheat-roster .preheat-roster-list li{
    font-size: 14px;
    width: calc(50% - 10px);
  }
}
</style>

<section class="section-box">
  <div class="preheat-roster">
    <div class="container">
      <div class="preheat-roster-cont">
        <div class="preheat-roster-left">
          <div class="preheat-roster-title line-top"> {{ section.settings.text }} </div>
          <div class="preheat-roster-sub line-top"> {{ section.settings.text1 }} </div>
        </div>
        <div class="preheat-roster-right to-top">
          <div class="preheat-roster-dec">
            <div class="preheat-roster-list">
              {{ section.settings.text2 }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  function seamlessScroll(interval) {
    const container = document.querySelector('.preheat-roster');
    const content = container.querySelector('.preheat-roster-list');
    let scrollInterval =null
    let scrollHeight = 0;
    content.querySelector('ul').innerHTML += content.querySelector('ul').innerHTML;
    function scrollUp() {
      scrollHeight += 0.3;
      if (scrollHeight >= content.scrollHeight / 2) {
        scrollHeight = 0;
      }
      content.style.transform = `translateY(-${scrollHeight}px)`;
    }

    function startScrolling() {
      scrollInterval = setInterval(scrollUp, interval);
    }

    content.addEventListener('mouseenter', () => {
      clearInterval(scrollInterval);
    });

    content.addEventListener('mouseleave', () => {
      scrollInterval = setInterval(scrollUp, interval);
    });

    startScrolling();
  }
  seamlessScroll(16);
</script>
