<style>
.preheat-roster{
  padding: 80px 0;
}

.preheat-roster .preheat-roster-cont{
  display: flex;
  align-items: center;
  gap: 12%;
}

.preheat-roster .preheat-roster-left{
  width: 26.4%;
  color: #3F3636;
}

.preheat-roster .preheat-roster-title{
  font-size: 50px;
  line-height: 1.2;
}

.preheat-roster .preheat-roster-sub{
  font-size: 16px;
  line-height: 1.5;
  margin-top: 16px;
}

.preheat-roster .preheat-roster-right{
  padding: 70px 5px;
  border-radius: 10px;
  background: #FBFAF4;
  flex: 1;
}
.preheat-roster .preheat-roster-dec{
