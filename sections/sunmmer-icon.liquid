    gap: 40px;
  }
  .sunmmer-icon .sunmmer-icon-item{
    flex: none;
    width: 275px;
    flex-shrink: 0;
    flex-direction: row;
    text-align: left;
    max-width: none;
  }
  .sunmmer-icon .sunmmer-icon-dot{
    display: flex;
  }
