  }
}

@media (max-width:991px) {
  .sunmmer-icon{
    padding: 60px 0 40px 0;
    overflow: hidden;
  }
  .sunmmer-icon .sunmmer-icon-cont{
    flex-direction: column;
    gap: 60px;
    align-items: flex-start;
  }
  .sunmmer-icon .sunmmer-icon-left{
    width: 100%;
    text-align: center;
  }

  .sunmmer-icon .sunmmer-icon-title{
    font-size: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: none;
    flex: 1;
  }
  .sunmmer-icon .title-img{
    width: 105px;
    bottom: auto;
    position: relative;
  }

  .sunmmer-icon .sunmmer-icon-sub{
    font-size: 14px;
    text-align: center;
    margin-top: 10px;
  }
  .sunmmer-icon .sunmmer-icon-p{
    font-size: 14px;
  }
  .sunmmer-icon .sunmmer-icon-btn{
    font-size:12px;
  }
