  line-height: 1.5;
}

.sunmmer-icon .sunmmer-icon-right{
  display: flex;
  justify-content: space-between;
  gap: 20px;
  flex: 1;
}

.sunmmer-icon .sunmmer-icon-item{
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-width: 220px;
  align-items: center;
  text-align: center;
  flex: 1;
}

.sunmmer-icon .sunmmer-icon-p{
  color: #190A0A;
  font-size: 18px;
  line-height: 1.25;
}

.sunmmer-icon .sunmmer-icon-dot{
  display: none;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-top: 30px;
}

.sunmmer-icon .sunmmer-icon-dot-item{
  width: 5px;
  height: 5px;
  border-radius: 30px;
  background: #D9D9D9;
}

.sunmmer-icon .sunmmer-icon-dot-item.active{
  background: #7A7A7A;
}

.sunmmer-icon .sunmmer-icon-btn{
  display: inline-flex;
  height: 48px;
  align-items: center;
  padding: 0 20px;
  gap: 10px;
  background: #190A0A;
  color: #FBFAF4;
  font-size: 16px;
  line-height: 1;
  font-family: var(--heading-font-family);
  margin-top:20px;
  cursor: pointer;
  border-radius: 50px;
}
  
