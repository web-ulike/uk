  <script>
    document.querySelector('.sunmmer-icon .sunmmer-icon-btn').addEventListener('click', function() {
      const targetId = this.getAttribute('data-id');
      const targetElement = document.querySelector(`#${targetId}`);
      
      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });

    window.addEventListener('load', function () {
      function sunmmerIconSwiper() {
        let $p = $('.sunmmer-icon')
        let $list = $p.find('.sunmmer-icon-right')
        const content = document.querySelector('.sunmmer-icon .sunmmer-icon-right');
        let length = $list.find('.sunmmer-icon-item').length
        let width = $list.find('.sunmmer-icon-item')[0].offsetWidth
        let $dot = $p.find('.sunmmer-icon-dot-item')
        let index = 0
        let pWidth = $p[0].offsetWidth
        let marginW = 40
        let lWidth = length * (width + marginW) + $list[0].offsetLeft
        let translateX = 0

        function changeTransform(num) {
          index += num
          translateX += (width + marginW) * num
          if (translateX > lWidth - pWidth) {
            translateX = lWidth - pWidth
            index = length - 1
          }
          if (translateX < 0) translateX = 0
          if (index < 0) index = 0
          $dot.removeClass('active')
          $dot.eq(index).addClass('active')
          $list.css({
            transform: 'translateX(-' + translateX + 'px)',
            transition: 'all 1s cubic-bezier(0.645, 0.045, 0.355, 1) 0s'
          })
        }
        detectSwipe(content, () => {
          changeTransform(1)
        }, () => {
          changeTransform(-1)
        });

        function detectSwipe(element, onSwipeLeft, onSwipeRight) {
          let startX = 0;

          const getEventX = (event) => {
            return event.touches ? event.touches[0].clientX : event.clientX;
          };

          const handleTouchStart = (e) => {
            startX = getEventX(e);
          };

          const handleTouchMove = (e) => {
            const deltaX = getEventX(e) - startX;
            if (Math.abs(deltaX) > 10 && e.cancelable) {
              e.preventDefault();
            }
          };

          const handleTouchEnd = (e) => {
            const deltaX = getEventX(e.changedTouches ? e.changedTouches[0] : e) - startX;
            if (deltaX > 10) {
              onSwipeRight();
            } else if (deltaX < -10) {
              onSwipeLeft();
            }
          };

          element.addEventListener('touchstart', handleTouchStart);
          element.addEventListener('touchmove', handleTouchMove);
          element.addEventListener('touchend', handleTouchEnd);

          // Add mouse event listeners for PC compatibility
          element.addEventListener('mousedown', handleTouchStart);
          element.addEventListener('mousemove', handleTouchMove);
          element.addEventListener('mouseup', handleTouchEnd);
        }
      }
      if (window.innerWidth < 641) {
        sunmmerIconSwiper()
      }
    })
  </script>
