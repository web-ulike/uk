<style>
.twin-lamps {
  position: relative;
}

.twin-lamps .img {
  width: 100%;
  position: relative;
  z-index: 1;
}

.twin-lamps .twin-lamps-cont {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 100%;
  z-index: 2;
}

.twin-lamps .twin-lamps-text {
  max-width: 40.94%;
  color: #fff;
}

.twin-lamps .twin-lamps-tag {
  font-size: 14px;
  line-height: 1;
}

.twin-lamps .twin-lamps-title {
  font-size: 60px;
  line-height: 1;
  font-family: var(--heading-font-family);
}

.twin-lamps .twin-lamps-p {
  font-size: 20px;
  line-height: 1.1;
  margin-top: 15px;
}

  .twin-lamps .twin-lamps-msg{
    color: #9FA6AF;
    font-size: 14px;
    margin-top:130px
  }

.twin-lamps .twin-lamps-list {
  display: flex;
  gap: 80px;
  margin-top: 30px;
  text-align: center;
}

.twin-lamps .twin-lamps-num {
  font-size: 60px;
  line-height: 1;
  color: #E0004D;
}

.twin-lamps .twin-lamps-t {
  font-size: 18px;
  line-height: 1.1;
  margin-top: 5px;
}

@media (max-width: 1500px) {
  .twin-lamps .twin-lamps-p {
    font-size: 16px;
  }
  .twin-lamps .twin-lamps-msg{
    font-size: 12px;
    margin-top:60px
  }
  .twin-lamps .twin-lamps-list {
    gap: 60px;
  }
  .twin-lamps .twin-lamps-t {
    font-size: 15px;
  }
}

  @media (max-width: 1300px) {
    .twin-lamps .twin-lamps-title {
      font-size:40px;
    }
    .twin-lamps .twin-lamps-num {
      font-size:40px;
    }
    .twin-lamps .twin-lamps-msg{
      font-size: 12px;
      margin-top:30px
    }
  }

@media (max-width: 991px) {
  .twin-lamps .twin-lamps-cont {
    top: 0;
    transform: translateY(0);
    bottom: 0;
    padding:40px 0 25px 0;
  }

  .twin-lamps .container{
    height:100%;
  }
  
  .twin-lamps .twin-lamps-text {
    max-width: 100%;
    height:100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .twin-lamps .twin-lamps-tag {
    font-size: 12px;
  }
  .twin-lamps .twin-lamps-title {
    font-size: 28px;
  }
  .twin-lamps .twin-lamps-p {
    font-size: 14px;
    margin-top: 15px;
  }
  .twin-lamps .twin-lamps-msg{
    font-size: 12px;
  }
  .twin-lamps .twin-lamps-list {
    margin-top: 10px;
    gap: 40px;
    text-align: left;
  }
  .twin-lamps .twin-lamps-num {
    font-size: 28px;
  }
  .twin-lamps .twin-lamps-t {
    font-size: 14px;
  }
}
</style>

<section class="section-box">
   <div class="twin-lamps to-top">
     <picture>
        <source srcset="{{ section.settings.image1 | image_url }}" media="(max-width: 991px)">
        <img class="img" width="" height="" src="{{ section.settings.image | image_url }}">
      </picture>
      <div class="twin-lamps-cont">
        <div class="container">
          <div class="twin-lamps-text to-top">
            <div>
              {%- if section.settings.text != blank -%}
                <div class="twin-lamps-tag">{{ section.settings.text }}</div>
              {%- endif -%}
              <div class="twin-lamps-title">{{ section.settings.text1 }}</div>
              <div class="twin-lamps-p">{{ section.settings.text2 }}</div>
              <div class="twin-lamps-list">
                <div class="twin-lamps-item">
                  <div class="twin-lamps-num">{{ section.settings.text3 }}</div>
                  <div class="twin-lamps-t">{{ section.settings.text4 }}</div>
                </div>
                <div class="twin-lamps-item">
                  <div class="twin-lamps-num">{{ section.settings.text5 }}</div>
                  <div class="twin-lamps-t">{{ section.settings.text6 }}</div>
                </div>
              </div>
            </div>
            {%- if section.settings.text7 != blank -%}
              <div class="twin-lamps-p twin-lamps-msg">{{ section.settings.text7 }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
</section>
