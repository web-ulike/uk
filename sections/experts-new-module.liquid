<style>
.experts-new-module {
  padding: 50px 0 30px 0;
  background: #f6f6f6;
}

.experts-new-module .experts-new-module-title {
  color: #190a0a;
  font-size: 50px;
  line-height: 1.18;
  margin-bottom: 28px;
  font-family: var(--heading-font-family);
}

.experts-new-module .experts-new-module-cont {
  display: flex;
  background: #fff;
  gap: 12.368%;
}

.experts-new-module .experts-new-module-img {
  width: 31.118%;
  position: relative;
}
.experts-new-module .experts-new-module-img-box{
  width:100%;
  padding-top:164.5%;
}
.experts-new-module .experts-new-module-img img {
  display: block;
  width: 100%;
  height: 100%;
  top:0;
  left:0;
  object-fit: cover;
  position: absolute;
  z-index: 1;
}

.experts-new-module .experts-new-module-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 2;
}

.experts-new-module .experts-new-module-txt {
  flex: 1;
  max-width: 620px;
  padding: 40px 40px 40px 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.experts-new-module .experts-new-module-txt-title {
  color: #190a0a;
  font-size: 60px;
  line-height: 1;
  font-family: var(--heading-font-family);
}

.experts-new-module .experts-new-module-sub {
  color: #756b6e;
  font-size: 24px;
  line-height: 1.33;
  margin-top: clamp(20px, 6.67vw, 128px);
}

.experts-new-module .experts-new-module-p {
  color: #e0004d;
  font-size: 20px;
  line-height: 1.8;
  margin-top: clamp(20px, 4.167vw, 80px);
}

.experts-new-module .experts-new-module-name {
  color: #190a0a;
  font-size: 36px;
  line-height: 1.16;
  margin-top: 8px;
  padding-bottom: 16px;
  border-bottom: 1px solid #eeeded;
  font-family: var(--heading-font-family);
}

@media (max-width: 1400px) {
  .experts-new-module .experts-new-module-cont {
    gap: 6%;
  }
}

@media (max-width: 991px) {
  .experts-new-module .experts-new-module-title {
    font-size: 28px;
    line-height: 1.4;
    text-align: center;
  }
  .experts-new-module .experts-new-module-cont {
    flex-direction: column;
    gap: 30px;
    background: none;
  }
  .experts-new-module .experts-new-module-img {
    width: 100%;
  }
  .experts-new-module .experts-new-module-txt {
    flex: none;
    max-width: none;
    padding: 0;
  }
  .experts-new-module .experts-new-module-txt-title {
    display: none;
  }
  .experts-new-module .experts-new-module-sub {
    margin-top: 0;
    font-size: 16px;
    line-height: 1.5;
  }
  .experts-new-module .experts-new-module-p {
    font-size: 16px;
    line-height: 1.5;
    margin-top: 16px;
  }
  .experts-new-module .experts-new-module-name {
    font-size: 24px;
    margin-top: 8px;
    line-height: 1.3;
  }
}
</style>
<section class="section-box">
  <div class="experts-new-module">
    <div class="container">
      {%- if section.settings.text != blank -%}
        <div class="experts-new-module-title">{{ section.settings.text }}</div>
      {%- endif -%}
      <div class="experts-new-module-cont">
        <div class="experts-new-module-img">
          <div class="experts-new-module-img-box">
          {%- if section.settings.image != blank -%}
              <img class="img" width="" height="" src="{{ section.settings.image | image_url }}">
          {%- endif -%}
          {%- if section.settings.video != blank -%}
            {% assign img_url =  section.settings.image | image_url  %}
              <native-video autoplay class="experts-new-module-video video-wrapper video-wrapper--native video-wrapper--native-custom">
                {{-
                  section.settings.video
                  | video_tag:
                    controls: false,
                    autoplay: true,
                    playsinline: true,
                    muted: true,
                    loop: true,
                    poster: img_url
                -}}
              </native-video>
            {%- endif -%}
            </div>
        </div>
        <div class="experts-new-module-txt">
          {%- if section.settings.text != blank -%}
            <div class="experts-new-module-txt-title">{{ section.settings.text1 }}</div>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="experts-new-module-sub">{{ section.settings.text2 }}</div>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="experts-new-module-p">{{ section.settings.text3 }}</div>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="experts-new-module-name">{{ section.settings.text4 }}</div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>                
{% schema %}
{
  "name": "experts-new-module",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "标题"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text4",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "experts-new-module"
    }
  ]
}
{% endschema %}
