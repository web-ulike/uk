<style>
.a2-p-md5 {
  padding: 97px 0;
}

.a2-p-md5 .a2-p-md5-cont {
  display: flex;
  gap: 40px;
}

.a2-p-md5 .a2-p-md5-left {
  flex: 1;
}

.a2-p-md5 .a2-p-md5-txt {
  max-width: 540px;
}

.a2-p-md5 .a2-p-md5-h3 {
  color: #000;
  font-size: 48px;
  line-height: 1.1;
  font-weight: normal;
  margin: 0;
  margin-bottom: 20px;
}

.a2-p-md5 .a2-p-md5-h3 p {
  margin: 0;
}

.a2-p-md5 .a2-p-md5-p {
  color: #3f3636;
  font-size: 18px;
  line-height: 1.3;
  margin-bottom: 20px;
}

.a2-p-md5 .a2-p-md5-msg {
  color: #7f7f7f;
  font-size: 14px;
  line-height: 1.3;
}

.a2-p-md5 .a2-p-md5-left .img {
  width: 168px;
  margin-top: 43px;
}

.a2-p-md5 .a2-p-md5-right {
  width: 52.9%;
  display: flex;
  gap: 10px;
}

.a2-p-md5 .a2-p-md5-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.a2-p-md5 .a2-p-md5-item:first-child {
  width: 32.6%;
  flex: none;
}

.a2-p-md5 .a2-p-md5-img-list {
  display: flex;
  gap: 10px;
  flex: 1;
}

.a2-p-md5 .a2-p-md5-img {
  flex: 1;
  position: relative;
  z-index: 1;
  overflow: hidden;
  border-radius: 10px;
  height: 100%;
}

.a2-p-md5 .a2-p-md5-img .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.a2-p-md5 .a2-p-md5-tag {
  color: #fff;
  font-size: 20px;
  line-height: 1.58;
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  height: 42px;
  padding: 0 20px;
  border-radius: 42px;
  border: 1px solid #fff;
  z-index: 2;
}

.a2-p-md5 .a2-p-md5-item-txt {
  position: relative;
  margin-top: 20px;
  padding-left: 20px;
}

.a2-p-md5 .a2-p-md5-item-txt::before,
.a2-p-md5 .a2-p-md5-item-txt::after {
  content: '';
  position: absolute;
  background: #4396d6;
}

.a2-p-md5 .a2-p-md5-item-txt::before {
  top: 0;
  left: 6px;
  width: 4px;
  height: 100%;
}

.a2-p-md5 .a2-p-md5-item-txt::after {
  top: 0;
  left: 0;
  width: 16px;
  height: 16px;
  border-radius: 0 0 50% 50%;
}

.a2-p-md5 .a2-p-md5-h4 {
  color: #4396d6;
  font-size: 24px;
  line-height: 1.3;
  font-family: var(--heading-font-family);
  font-weight: normal;
  margin: 0;
}

.a2-p-md5 .a2-p-md5-item-p {
  color: rgba(63, 54, 54, 0.8);
  font-size: 20px;
  line-height: 1.3;
}

.a2-p-md5 .a2-p-md5-b {
  color: #fff;
  font-size: 22px;
  line-height: 1;
  font-family: var(--heading-font-family);
  height: 40px;
  padding: 0 15px;
  display: flex;
  align-items: center;
  border-radius: 8px;
  margin-top: 20px;
  background: linear-gradient(90deg, #4396d6 0%, #6fc0ff 100%);
}

.a2-p-md5 .a2-p-md5-item:nth-child(n + 2) .a2-p-md5-b {
  justify-content: center;
}

@media (max-width: 1400px) {
  .a2-p-md5 .a2-p-md5-h3 {
    font-size: 40px;
  }
  .a2-p-md5 .a2-p-md5-p {
    font-size: 18px;
  }
  .a2-p-md5 .a2-p-md5-msg {
    font-size: 12px;
  }
  .a2-p-md5 .a2-p-md5-left .img {
    width: 140px;
    margin-top: 20px;
  }
  .a2-p-md5 .a2-p-md5-tag {
    font-size: 16px;
    height: 30px;
    top: 15px;
  }
  .a2-p-md5 .a2-p-md5-h4 {
    font-size: 18px;
  }
  .a2-p-md5 .a2-p-md5-item-p {
    font-size: 14px;
  }
  .a2-p-md5 .a2-p-md5-b {
    font-size: 16px;
  }
}

@media (max-width: 991px) {
  .a2-p-md5 {
    padding: 50px 0;
  }
  .a2-p-md5 .a2-p-md5-cont {
    flex-direction: column;
  }

  .a2-p-md5 .a2-p-md5-txt {
    max-width: none;
    text-align: center;
  }

  .a2-p-md5 .a2-p-md5-h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .a2-p-md5 .a2-p-md5-p {
    font-size: 12px;
    max-width: 252px;
    margin: 0 auto;
    margin-bottom: 10px;
  }

  .a2-p-md5 .a2-p-md5-left .img {
    width: 220px;
    margin-top: 25px;
  }

  .a2-p-md5 .a2-p-md5-right {
    width: 100%;
  }
  .a2-p-md5 .a2-p-md5-h4 {
    font-size: 14px;
  }
  .a2-p-md5 .a2-p-md5-item-p {
    font-size: 12px;
  }
  .a2-p-md5 .a2-p-md5-b {
    font-size: 12px;
    height: 25px;
    margin-top: 13px;
    border-radius: 5px;
  }
  .a2-p-md5 .a2-p-md5-item-txt::after {
    width: 10px;
    height: 10px;
  }
  .a2-p-md5 .a2-p-md5-item-txt::before {
    width: 2px;
    left: 4px;
  }
  .a2-p-md5 .a2-p-md5-item-txt {
    padding-left: 15px;
    margin-top: 12px;
  }
}

@media (max-width: 560px) {
  .a2-p-md5 .a2-p-md5-item {
    flex-shrink: 0;
    flex: none;
  }
  .a2-p-md5 .a2-p-md5-item:first-child {
    width: 163px;
  }

  .a2-p-md5 .a2-p-md5-img {
    width: 163px;
    flex: none;
    flex-shrink: 0;
  }
  .a2-p-md5 .a2-p-md5-right {
    padding-bottom: 35px;
    overflow-x: scroll;
  }
  .a2-p-md5 .a2-p-md5-right::-webkit-scrollbar {
    height: 4px; /* 横向滚动条高度 */
  }
  .a2-p-md5 .a2-p-md5-right::-webkit-scrollbar-track {
    /* background: #eee; */
  }
  .a2-p-md5 .a2-p-md5-right::-webkit-scrollbar-thumb {
    background: #190a0a;
  }
}
</style>
<section class="section-box">
  <div class="a2-p-md5">
      <div class="container">
        <div class="a2-p-md5-cont">
          <div class="a2-p-md5-left">
            <div class="a2-p-md5-txt">
              {%- if section.settings.text != blank -%}
                  <h3 class="a2-p-md5-h3">{{ section.settings.text }}</h3>
              {%- endif -%}
              {%- if section.settings.text1 != blank -%}
                <div class="a2-p-md5-p">{{ section.settings.text1 }}</div>
              {%- endif -%}
              {%- if section.settings.text2 != blank -%}
                <div class="a2-p-md5-msg">{{ section.settings.text2 }}</div>
              {%- endif -%}
              {%- if section.settings.image != blank or section.settings.image1 != blank -%}
                <picture>
                <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
                <img loading="lazy"
                    class="img"
                    width=""
                    height=""
                    {% render 'image-attributes', image: section.settings.image %}
                    alt="{{ section.settings.image.alt | escape }}">
                </picture>
            {%- endif -%}
            </div>
          </div>
          <div class="a2-p-md5-right">
            {%- for block in section.blocks -%}
                <div class="a2-p-md5-item">
                <div class="a2-p-md5-img-list">
                    {%- if block.settings.image != blank -%}
                        <div class="a2-p-md5-img">
                            <img loading="lazy"
                            class="img"
                            width=""
                            height=""
                            {% render 'image-attributes', image: block.settings.image %}
                            alt="{{ block.settings.image.alt | escape }}">
                            {%- if block.settings.text != blank -%}
                                <div class="a2-p-md5-tag">{{ block.settings.text }}</div>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- if block.settings.image1 != blank -%}
                        <div class="a2-p-md5-img">
                            <img loading="lazy"
                            class="img"
                            width=""
                            height=""
                            {% render 'image-attributes', image: block.settings.image1 %}
                            alt="{{ block.settings.image1.alt | escape }}">
                            {%- if block.settings.text1 != blank -%}
                                <div class="a2-p-md5-tag">{{ block.settings.text1 }}</div>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                </div>
                <div class="a2-p-md5-item-txt">
                    {%- if block.settings.text2 != blank -%}
                        <h4 class="a2-p-md5-h4">{{ block.settings.text2 }}</h4>
                    {%- endif -%}
                    {%- if block.settings.text3 != blank -%}
                        <div class="a2-p-md5-item-p">{{ block.settings.text3 }}</div>
                    {%- endif -%}
                    {%- if block.settings.text4 != blank -%}
                        <div class="a2-p-md5-b">{{ block.settings.text4 }}</div>
                    {%- endif -%}
                </div>
                </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
</section>

{% schema %}
{
  "name": "a2-p-md5",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Tag"
        },
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Tag"
        },
        
        {
          "type": "text",
          "id": "text2",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text3",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text4",
          "label": "Text"
        },
      ]
    }
  ],
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Icon"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "M Icon"
    }
  ],
  "presets": [
    {
      "name": "a2-p-md5",
      "blocks": []
    }
  ]
}
{% endschema %}
