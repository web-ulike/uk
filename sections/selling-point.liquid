.selling-point .container {
  max-width: 1680px;
}

.selling-point .selling-point-list {
  display: flex;
  gap: 19.5px;
  flex-wrap: wrap;
}

.selling-point .selling-point-item {
  border-radius: 10px;
  overflow: hidden;
  position: relative;
  width: calc(28.94% - 13px);
}

.selling-point .popup-item {
  cursor: pointer;
}

.selling-point .selling-point-item:nth-child(1),
.selling-point .selling-point-item:nth-child(5) {
  width: calc(42.062% - 13px);
}

.selling-point .selling-point-item .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.selling-point .selling-point-text {
  position: absolute;
  width: 100%;
  left: 0;
  padding: 35px 30px;
  bottom: 0;
  color: #fff;
}

.selling-point .selling-point-item:nth-child(-n + 3) .selling-point-text {
  bottom: auto;
  top: 0;
  color: #000;
}

.selling-point .selling-point-title {
  font-size: 30px;
  line-height: 1;
  font-family: var(--heading-font-family);
}

.selling-point .selling-point-sub {
  font-size: 18px;
  line-height: 1.1;
  margin-top: 15px;
}

.selling-point .selling-point-sub p {
  margin: 0;
}

.selling-point .selling-point-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #b7aade;
  font-size: 25px;
  line-height: 1;
  color: transparent;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  margin-top: 15px;
  position: relative;
  transition: background 0.3s ease-in;
  animation: pulse-shadow 2s infinite;
}

.selling-point .selling-point-btn:before,
  .selling-point .selling-point-btn:after{
    content: '';
    display: block;
    width: 15px;
    height: 2px;
    background: #fff;
    left: 50%;
    transform: translate(-50%,-50%);
    position: absolute;
    top: 50%;
    z-index: 2;
  }
.selling-point .selling-point-btn:after{
  transform: translate(-50%,-50%) rotate( 90deg);
}
.selling-point .selling-point-btn:hover {
  background: #9a8bc5;
}

@keyframes pulse-shadow {
  0% {
    box-shadow: 0 0 0 0 rgba(183, 170, 222, 0.7);
  }

  70% {
    box-shadow: 0 0 0 10px rgba(183, 170, 222, 0);
  }

  100% {
    box-shadow: 0 0 0 0 rgba(183, 170, 222, 0);
  }
}
  @keyframes white-pulse-shadow {
      0% {
          box-shadow: 0 0 0 0 rgba(224,0,77, 0.7);
      }

      70% {
          box-shadow: 0 0 0 10px rgba(224,0,77, 0);
      }

      100% {
          box-shadow: 0 0 0 0 rgba(224,0,77, 0);
      }
  }
.selling-point .selling-point-ratio {
  display: flex;
  position: relative;
}

.selling-point .selling-point-ratio::before {
  content: '';
  display: block;
  width: 2px;
  height: 100%;
  background: #c2c2c2;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  top: 0;
  z-index: 2;
}

.selling-point .selling-point-ratio-item {
  flex: 1;
  position: relative;
}

.selling-point .selling-point-ratio-tag {
  font-size: 20px;
  display: flex;
  width: 120px;
  height: 36px;
  border-radius: 36px;
  max-width: 100%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  border: 1.5px solid #fff;
}

.equal-width .selling-point-item {
  width: auto;
  flex: 1;
}

.equal-width .selling-point-item:nth-child(odd) .selling-point-text {
  top: 0;
  bottom: auto;
  color: #000;
}

.equal-width .selling-point-item:nth-child(even) .selling-point-text {
  top: auto;
  bottom: 0;
  color: #fff;
}
