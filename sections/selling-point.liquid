    }
      .white-sell .selling-point .selling-point-sub {
        font-size: 12px;
        font-weight: 300;
        line-height: normal;
    }
  .val-2025 .selling-point .selling-point-text{
    height: 100%;
  }
    .val-2025 .selling-point .selling-point-item:nth-child(1) .selling-point-btn, .val-2025 .selling-point .selling-point-item:nth-child(2) .selling-point-btn {
    bottom: 20px;
    top: auto;
    position: absolute;
}
  .val-2025 .selling-point .selling-point-item:nth-child(4) .selling-point-btn {
    margin-top: 30px;
}
  .valte-2025 .selling-point .selling-point-item:nth-child(3), .valte-2025 .selling-point .selling-point-item:nth-child(4), .valte-2025 .selling-point .selling-point-item:nth-child(5), .valte-2025 .selling-point .selling-point-item:nth-child(6){
    width:100% !important
  }
  .valte-2025 .selling-point .selling-point-item:nth-child(4) .selling-point-text{
        top: auto !important;
    bottom: 0 !important;
  }
}
}
</style>
<section class="section-box{% if section.settings.custom_class != blank %} {{section.settings.custom_class}}{% endif %}">
  <div class="selling-point {% if section.settings.isMax %}equal-width{% endif %} to-top section-{{ section.id }}-padding">
    <div class="container">
      {% if section.settings.tle != blank %}
        <div class="sell_tle">{{ section.settings.tle }}</div>
      {%- endif -%}
      {% if section.settings.tle != blank %}
        <div class="sell_p">{{ section.settings.text }}</div>
      {%- endif -%}
      <div class="selling-point-list">
        {%- for block in section.blocks -%}
          {% if block.type == 'item' %}
            <div class="selling-point-item popup-item to-top" data-popup="{{ block.settings.text2 }}" style="transition-delay: 0.{{ forloop.index }}s">
              <picture>
                <source srcset="{{ block.settings.image1 | image_url }}" media="(max-width: 991px)">
                <img class="img" width="" height="" loading="lazy" src="{{ block.settings.image | image_url }}">
              </picture>
              <div class="selling-point-text">
                <div class="selling-point-title">{{ block.settings.text }}</div>
                {%- if block.settings.text1 != blank -%}
                  <div class="selling-point-sub">
                    {{ block.settings.text1 }}
                  </div>
                {%- endif -%}
                {%- if block.settings.text2 != blank -%}
                  <div class="selling-point-btn">
                    +
                  </div>
                {%- endif -%}
              </div>
            </div>
          {% endif %}
          {% if block.type == 'ratio' %}
            <div class="selling-point-item selling-point-ratio to-top" style="transition-delay: 0.{{ forloop.index }}s">
              <div class="selling-point-ratio-item">
                <picture>
                  <source srcset="{{ block.settings.image1 | image_url }}" loading="lazy" media="(max-width: 991px)">
                  <img class="img" width="" height="" loading="lazy" src="{{ block.settings.image | image_url }}">
                </picture>
                {%- if block.settings.text != blank -%}
                  <div class="selling-point-ratio-tag">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}
              </div>
              <div class="selling-point-ratio-item">
                <picture>
                  <source srcset="{{ block.settings.image3 | image_url }}" media="(max-width: 991px)">
                  <img class="img" width="" height="" loading="lazy" src="{{ block.settings.image2 | image_url }}">
                </picture>
                {%- if block.settings.text1 != blank -%}
                  <div class="selling-point-ratio-tag">
                    {{ block.settings.text1 }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {% endif %}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>
