  text-align: center;
  font-size: 44px;
  font-style: normal;
  font-weight: 400;
  line-height: 125%; 
  margin-bottom:50px;
}
.sell_p{
  color: #3F3636;
  text-align: center;
  font-size: 18px;
  line-height: 1.58;
  margin-top:16px;
}
