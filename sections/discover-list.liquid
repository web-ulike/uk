<style>
.discover-list {
  padding: 80px 0 95px 0;
}

.discover-list .discover-list-h3 {
  color: #190a0a;
  font-size: 44px;
  line-height: 1.2;
  text-align: center;
  font-family: var(--heading-font-family);
  font-weight: normal;
  margin: 0;
}

.discover-list .discover-list-sub {
  color: #190a0a;
  font-size: 18px;
  text-align: center;
  line-height: 1.5;
  margin-top: 20px;
}

.discover-list .discover-list-cont {
  display: flex;
  gap: 20px;
  margin-top: 60px;
}

.discover-list .discover-list-item {
  flex: 1;
}

.discover-list .img {
  width: 100%;
  margin-bottom: 30px;
}

.discover-list .discover-list-h4 {
  color: #190a0a;
  font-size: 28px;
  line-height: 1.2;
  font-family: var(--heading-font-family);
  font-weight: normal;
  margin: 0;
}

.discover-list .discover-list-p {
  color: #190a0a;
  font-size: 18px;
  line-height: 1.5;
  margin-top: 10px;
}

@media (max-width: 991px) {
  .discover-list {
    padding: 58px 0 0;
  }
  .discover-list .discover-list-h3 {
    font-size: 24px;
    text-align: left;
  }

  .discover-list .discover-list-sub {
    font-size: 12px;
    text-align: left;
    margin-top: 10px;
  }

  .discover-list .discover-list-cont {
    flex-direction: column;
    margin-top: 30px;
  }

  .discover-list .img {
    margin-bottom: 10px;
  }

  .discover-list .discover-list-h4 {
    font-size: 18px;
  }

  .discover-list .discover-list-p {
    font-size: 12px;
    margin-top: 10px;
  }
}
</style>
<section class="section-box">
    <div class="discover-list">
    <div class="container">
        {%- if section.settings.text != blank -%}
            <h3 class="discover-list-h3">{{ section.settings.text }}</h3>
        {%- endif -%}
        {%- if section.settings.text1 != blank -%}
            <div class="discover-list-sub">{{ section.settings.text1 }}</div>
        {%- endif -%}
      <div class="discover-list-cont">
        {%- for block in section.blocks -%}
            <div class="discover-list-item">
                {%- if block.settings.image != blank -%}
                    <img loading="lazy"
                        class="img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image %}
                        alt="{{ block.settings.image.alt | escape }}">
                {%- endif -%}
                <div class="discover-list-item-txt">
                    {%- if block.settings.text != blank -%}
                        <h4 class="discover-list-h4">{{ block.settings.text }}</h4>
                    {%- endif -%}
                    {%- if block.settings.text1 != blank -%}
                        <div class="discover-list-p">{{ block.settings.text1 }}</div>
                    {%- endif -%}
                </div>
            </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "discover-list",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "discover-list",
      "blocks": []
    }
  ]
}
{% endschema %}
