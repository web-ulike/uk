  @media screen and (max-width: 769px) {
  .shave-expect-image{
    display:none;
  }
  .shave-expect-mobileimage{
    display:block;
  }
  .expect-image{
    position:relative;
    margin:auto;
  }
  .expect-title{
    color:#fff;
    padding:52px 39px 10px 30px;
    font-family: var(--heading-font-family);
    font-size: 26px;
    line-height: 34px;
    letter-spacing: 0em;
    text-align: center;
    position:absolute;
    width:100%;
    z-index:3;
    height:76px;

  }
  .expect-content{
    position:absolute;
    width:calc(100% - 60px);
    z-index:3;
    color: #FFF;
    text-align: center;
    font-family: var(--text-font-family);;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    margin-left: 30px;
    padding-top: 100px;
    line-height: 150%; /* 21px */
  }
}
  .shave-expect{
    background-color:#111;
  }
</style>

<section class="shopify-section shave-section shopify-section--video">
  <div class=" shave-section--{% if section.settings.background_type == 'boxed' %}boxed{% else %}full{% endif %}  shave-expect">
    <div class="expect-title">{{ section.settings.title }}</div>
    <div class="expect-content">{{ section.settings.content }}</div>
    <div class="expect-image">
      {%- for block in section.blocks -%}
          {%- if block.settings.image != blank -%}
            {{- block.settings.image | image_url: width: 3000 | image_tag: loading: loading_attribute_value, draggable: false, class: 'shave-expect-image', sizes: '100vw', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000' -}}
          {%- endif -%}
          {%- if block.settings.mobileimage != blank -%}
            {{- block.settings.mobileimage | image_url: width: 3000 | image_tag: loading: loading_attribute_value, draggable: false, class: 'shave-expect-mobileimage', sizes: '100vw', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000' -}}
          {%- endif -%}
          {%- endfor -%}
    </div>
    
  </div>
  
</section>
{% schema %}
{
  "name": "Shave-expect",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobileimage",
          "label": "mobileImage"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Shave title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "footurl",
      "label": "Foot Url"
    },
    {
      "type": "select",
      "id": "shave_size",
      "label": "shave size",
      "options": [
        {
          "value": "auto",
          "label": "Original ratio"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "auto"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "shave mode",
      "options": [
        {
          "value": "full_width",
          "label": "Full width"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "full_width"
    }
  ],
  "presets": [
    {
      "name": "Shave-expect"
    }
  ]
}
{% endschema %}
