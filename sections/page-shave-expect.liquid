   .shave-section--full.shave-section--small {
    height: 600px;
  }
  .expect-image{
    position:relative;
    margin:auto;
    width: calc(100% - 50px);
    padding-top: 219px;
    padding-bottom: 80px;
  }
  .shave-expect-image{
    display:block;
  }
  .shave-expect-mobileimage{
    display:none;
  }
  shave-section--full.shave-section--medium {
    height: 700px;
  }

  .shave-section--full.shave-section--large {
    height: 850px;
  }
  .expect-title{
    width:750px;
    text-align:center;
    color:#fff;
    font-family: var(--heading-font-family);
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: 125%;
    margin:auto;
    position:absolute;
    left: calc((100% - 750px) /2);
    z-index:3;
    top:91px;
    height:55px;
    margin-bottom:20px;
  }
   .expect-content{
    width:800px;
    margin:auto;
    text-align:center;
    color:#fff;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    position:absolute;
    left: calc((100% - 750px) /2);
    z-index:3;
    top:160px;
    height:76px;
  }
}
  
