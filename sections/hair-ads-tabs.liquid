<style>
.hair-ads-tabs{
  padding: 82px 0;
  background: #FBFAF4;
}

.hair-ads-tabs .hair-ads-tabs-top{
  display: flex;
  justify-content: space-between;
  gap: 10px;
  color: #3F3636;
}

.hair-ads-tabs .hair-ads-tabs-title{
  font-size: 50px;
  line-height: 1.2;
  letter-spacing: -0.26px;
  max-width: 570px;
}

.hair-ads-tabs .hair-ads-tabs-sub{
  font-size: 18px;
  line-height: 1.5;
}

.hair-ads-tabs .hair-ads-tabs-cont{
  display: flex;
  gap: 20px;
  margin-top: 52px;
}

.hair-ads-tabs .hair-ads-tabs-left,
.hair-ads-tabs .hair-ads-tabs-right{
  flex: 1;
}

.hair-ads-tabs .hair-ads-tabs-p{
  color: #3F3636;
  font-size: 28px;
  line-height: 1.5;
  border-bottom: 0.7px solid #3F3636;
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  gap: 10px;
  justify-content: space-between;
  padding-bottom: 12px;
  position: relative;
  --left-num:0;
  --width-num:0;
}

.hair-ads-tabs .hair-ads-tabs-p-item{
  cursor: pointer;
}

.hair-ads-tabs .hair-ads-tabs-left .hair-ads-tabs-p,.hair-ads-tabs .hair-ads-tabs-p .active{
  font-family: var(--heading-font-family);
  color: #E0004D;
}

.hair-ads-tabs .hair-ads-tabs-p .active{
  color: #3F3636;
}

.hair-ads-tabs .hair-ads-tabs-flex-m{
  margin-bottom: 22px;
}

.hair-ads-tabs .hair-ads-tabs-select-txt{
  display: none;
}

.hair-ads-tabs .hair-ads-tabs-text-p{
  color: #3F3636;
  font-size: 24px;
  line-height: 1;
  letter-spacing: 0.24px;
  display: flex;
  align-items: center;
  gap: 25px;
  padding: 17px 0;
  border-bottom: 0.7px solid #E4DDDD;
  
}

.hair-ads-tabs .img{
  width: 100%;
}

.hair-ads-tabs .mb-box{
  display: none;
}

.hair-ads-tabs .hair-ads-tabs-img-list .img-box{
  display: none;
}

.hair-ads-tabs .hair-ads-tabs-img-list .active{
  display: block;
}

.hair-ads-tabs .hair-ads-tabs-item{
  display: none;
}

.hair-ads-tabs .hair-ads-tabs-item.active{
  display: block;
}

.hair-ads-tabs .hair-ads-tabs-p-span{
  position: absolute;
  height: 4px;
  width: var(--width-num);
  left: var(--left-num);
  bottom: 0;
  background: #3F3636;
  transition: all .4s ease;
}

@media (max-width:1600px) {
  .hair-ads-tabs .hair-ads-tabs-p{
    font-size: 20px;
  }
  .hair-ads-tabs .hair-ads-tabs-text-p{
    font-size: 20px;
  }
  .hair-ads-tabs .hair-ads-tabs-text-p svg{
    zoom: .8;
  }
}

@media (max-width:1280px) {
  .hair-ads-tabs .hair-ads-tabs-p{
    font-size: 16px;
  }
  .hair-ads-tabs .hair-ads-tabs-text-p{
    font-size: 14px;
    gap: 15px;
  }
  .hair-ads-tabs .hair-ads-tabs-text-p svg{
    zoom: .7;
  }
  .hair-ads-tabs .hair-ads-tabs-p-span{
    height: 2px;
  }
}

@media (max-width:991px) {
  .hair-ads-tabs{
    padding: 50px 0;
  }
  .hair-ads-tabs .pc-box{
    display: none;
  }
  .hair-ads-tabs .mb-box{
    display: block;
  }
  .hair-ads-tabs .hair-ads-tabs-title{
    max-width: none;
    font-size: 24px;
  }
  .hair-ads-tabs .hair-ads-tabs-sub{
    font-size: 14px;
  }
  .hair-ads-tabs .hair-ads-tabs-top{
    flex-direction: column;
  }
  .hair-ads-tabs .hair-ads-tabs-cont{
    margin-top: 25px;
    gap: 11px;
  }
  .hair-ads-tabs .hair-ads-tabs-flex-m{
    display: flex;
    flex-direction: column-reverse;
    margin-bottom: 0;
    padding-top: 10px;
    border-top: 1px solid #3F3636;
