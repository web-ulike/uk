<script>
  window.addEventListener('load', function() {
    function hairAdsTabs() {
      let $p = $('.hair-ads-tabs');
      let $items = $p.find('.hair-ads-tabs-item');
      let $tap = $p.find('.hair-ads-tabs-p-item');
      let $imgs = $p.find('.hair-ads-tabs-img-list .img-box');
      let $txtP = $p.find('.hair-ads-tabs-right .hair-ads-tabs-p');
      $tap.on('click', function(e) {
        setTab($(this).index())
      })
  
      function setTab(index) {
        if(window.innerWidth>991){
          let left = $tap.eq(index)[0].offsetLeft
          let width = $tap.eq(index)[0].offsetWidth
          $txtP.attr('style', '--left-num: '+ left +'px; --width-num: '+ width +'px')
        }else{
          $tap.parents('.hair-ads-tabs-p').slideUp()
          $tap.parents('.hair-ads-tabs-p').siblings('.hair-ads-tabs-select-txt').find('span').text($tap.eq(index).text())
        }
        $tap.eq(index).addClass('active').siblings().removeClass('active');
        $imgs.eq(index).addClass('active').siblings().removeClass('active');
        $items.eq(index).addClass('active').siblings().removeClass('active');
      }
  
      setTab(0)
      if(window.innerWidth<991){
        $p.find('.hair-ads-tabs-select-txt').click(function(){
          $(this).siblings('.hair-ads-tabs-p').slideDown()
        })
      }
    }
    hairAdsTabs()
  })
</script>
