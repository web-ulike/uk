<style>
.features-box{
      position: relative;
      z-index: 2;
      overflow: hidden;
      top: 80px !important;
      margin-bottom:50px;
  }
  .features-box .container{
      flex: 1;
      position: relative;
      z-index: 3;
  }
  .features-box .text-mark{
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      height: calc(100vh - 80px);
      top: 0;
      z-index: 0;
  }
  .features-box .text-mark-txt{
      font-size: 161px;
      color: transparent;
      max-width: 678px;
      text-align: center;
      line-height: 1.1;
      margin: 0 auto;
      background-clip: text;
      -webkit-background-clip: text;
      background-repeat: no-repeat;
      background-image: url({{ section.settings.image | image_url }});
      background-size:100% 200%;
      background-position: 0% 0%;
  }
  .features-box .text-mark-txt p{
    margin:0;
  }
  .features-box .features-box-step{
      width: 100%;
      height: calc(100vh - 80px);
      top: 0px;
      position: absolute;
      z-index: 1;
      overflow: hidden;
      transform-origin: top center;
  }
  .features-box .product-img{
      position: absolute;
      /* width: auto;
      height: 242.3%; */
      
      max-width: none;
      z-index: 0;
      top: 100%;
      right: 100%;
  }
  .features-box .product-img,.features-box .four-img{
      width: 65.78vw;
      height: auto;
  }
  .features-box .features-box-two-text{
      max-width: 300px;
      position: absolute;
      z-index: 1;
      top: 52%;
      left: 49%;
      margin-top: 30px;
      opacity: 0;
  }
  .features-box .features-box-two-text .svg-icon-box{
      position: absolute;
      right: 100%;
      top: -30px;
  }
  .features-box .features-box-three-text{
      max-width: 340px;
      position: absolute;
      z-index: 1;
      top: 55%;
      left: 25%;
      margin-top: 30px;
      opacity: 0;
  }
  
  .features-box .features-box-three-text .svg-icon-box{
      position: absolute;
      left: 100%;
      top: -30px;
  }
  
  .features-box .features-box-four-text{
      max-width: 350px;
      position: absolute;
      z-index: 1;
      top: 58%;
      left: 22%;
      margin-top: 30px;
      opacity: 0;
      color: #fff;
  }
  
  .features-box .features-box-four-text .svg-icon-box{
      position: absolute;
      left: 100%;
      top: -40px;
  }
  
  .features-box .mb-box{
      display: none;
  }
  
  .features-box .features-box-title{
      font-size: 30px;
      line-height: 1.5;
  }
  
  .features-box .features-box-sub{
      font-size: 16px;
      line-height: 1.5;
      margin-top: 20px;
  }
  .features-box .features-box-sub p{
      margin: 0;
  }
  
  .features-box .features-box-sub strong{
      font-weight: normal;
      font-family: var(--heading-font-family);
  }
  .features-box .four-img-box{
      position: absolute;
      top: 100%;
      right: 100%;
  }
  .features-box .four-img-light{
      position: absolute;
      width: 100%;
      top:80%;
      right: 72%;
  }
  .features-box .four-img{
      /* width: 132.35%; */
      max-width: none;
      /* height: auto; */
      /* height: 242.3%; */
      
  }
  
  .features-box .features-box-four-ov{
      height: calc(100vh - 80px);
      top: 0px;
      width: 100%;
      position: absolute;
      overflow: hidden;
      left: 0;
      clip-path: polygon(0% 100%, 100% 100%, 100% 100%, 0% 100%);
      z-index: 6;
      transform-origin: top center;
      background: linear-gradient(120deg, #54575E 24.96%, #141417 91.85%);
  }
  
  @media (max-width:1920px) {
      .features-box .features-box-three-text{
          left: 10%;
      }
      .features-box .features-box-four-text{
          left: 8%;
      }
  }
  @media (max-width:1700px) {
      .features-box .features-box-two-text{
          left: 55%;
          top: 58%;
          max-width: 400px;
      }
      .features-box .features-box-three-text{
          left: 12%;
          top: 59%;
      }
      .features-box .features-box-four-text{
          left: 12%;
          top: 62%;
      }
  }
  
  @media (max-width:1500px) {
