<script>
  function initGASP(){
    let pam = {
            right1:'78%',
            right2:'162%',
            top1:'-70.5%',
            top2:'-125%'
        }
        if(window.innerWidth<1921){
            pam.right1 = '75%'
            pam.right2 = '152%'
            pam.top1 = '-75%'
            pam.top2 = '-128%'
        }
        
        if(window.innerWidth<1601){
            pam.right1 = '79%'
            pam.right2 = '162%'
            pam.top1 = '-70%'
            pam.top2 = '-125%'
        }
        if(window.innerWidth<1537){
            pam.right1 = '79%'
            pam.right2 = '162%'
            pam.top1 = '-65%'
            pam.top2 = '-120%'
        }
        if(window.innerWidth<1500){
            pam.right1 = '79%'
            pam.right2 = '162%'
            pam.top1 = '-77%'
            pam.top2 = '-128%'
        }
        if(window.innerWidth<1370){
            pam.right1 = '77%'
            pam.right2 = '162%'
            pam.top1 = '-72%'
            pam.top2 = '-125%'
        }
        if(window.innerWidth<1281){
            pam.right1 = '72%'
            pam.right2 = '165%'
            pam.top1 = '-61%'
            pam.top2 = '-118%'
        }
        // if(window.innerWidth<1030){
        // 	pam.right1 = '51%'
        // 	pam.right2 = '92%'
        // 	pam.top1 = '-50%'
        // 	pam.top2 = '-85%'
        // }
        if(window.innerWidth<640){
            pam.right1 = '30%'
            pam.right2 = '108%'
            pam.top1='-83%',
            pam.top2='-140%'
        }
    ScrollTrigger.create({
        trigger: ".features-box",
        start: "top top",
        end: "+=260%",
        scrub: true,
        pin: true,
        animation:
        gsap.timeline()
        .to(".text-mark-txt",{'background-position': '0% 100%','opacity':0,ease:'power2.inOut'})
        .to(".product-img",{'transform': 'translate('+pam.right1+','+pam.top1+')',ease:'power2.inOut'},'<')
        .to(".four-img-box",{'transform': 'translate('+pam.right1+','+pam.top1+')',ease:'power2.inOut'},'<')
        .to(".features-box-two-text", {'opacity': 1,'margin-top':'0',ease:'power2.inOut'})
        .to(".features-box-two-text", {'opacity': 0,'margin-top':'-30px',ease:'power2.inOut'})
        .to(".product-img", {'transform': 'translate('+pam.right2+','+pam.top2+')'})
        .to(".four-img-box",{'transform': 'translate('+pam.right2+','+pam.top2+')'},'<')
        .to(".features-box-three-text",{'opacity': 1,'margin-top':'0'})
        .to(".features-box-four-ov",{'clip-path': 'polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)'})
        .to(".features-box-four-text",{'opacity': 1,'margin-top':'0'},'-=0.5')
        .to(".features-box", {'opacity': .5})
        .to(".features-box-step",{'transform':'scale(.9)'},'<')
        .to(".features-box-four-ov", {'transform':'scale(.9)'},'<')
    })
  }
  window.addEventListener('load', () => {
    initGASP()
  })
</script>
