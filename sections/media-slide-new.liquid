    width: 100% !important;
}
  .media_new-wrapper{
    flex-direction: column;
  }
  .media_new-right{
    width: 100%;
  }
  .media_new-left{
    width: 100%;
    text-align: center;
  }
  .media_new-right{
    margin-top: 20px;
  }

  
