    position: relative;
  }
  .media_new-box .check_swiper-new{
    position: absolute;
    top: 37%;
    left: 50%;
    transform: translate(-50%, 0%);
    width: 100%;
    z-index: 2;
    gap: 0;
    max-width: 100%;
    margin-top: 0;
  }
  .media_new-box .check_swiper-new .next_prev-bix svg{
    color: #ffff;
    
  }
