<section class="section_media-new">
  <div class="media_new-box{{ section.settings.class_text }}">
    <div class="container">
      <div class="media_new-wrapper">
        <div class="media_new-left">
          <div class="media_new-title text-top">{{ section.settings.title }}</div>
          <div class="media_new-txt text-top">{{ section.settings.sub_title }}</div>
          {%- if section.settings.image_logo != blank -%}
            <img
              loading="lazy"
              width="{{ section.settings.image_logo.width }}"
              height="{{ section.settings.image_logo.height }}"
              {% render 'image-attributes', image: section.settings.image_logo %}
            class="to-top"
              alt="{{ section.settings.image_logo.alt | escape }}"
            >
          {%- endif -%}
        </div>
        <div class="media_new-right to-top">
          <div class="image_swiper-bix">
            <div class="swiper" id="image_swiper--{{ section.id}}">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                  <div class="swiper-slide to-top" style="transition-delay: 0.{{ forloop.index }}s">
                    <div class="media-evaluation-real-img">
                      {%- if block.settings.image != blank -%}
                        <div class="media-real-img-item">
                          <img
                            loading="lazy"
                            width="{{ block.settings.image.width }}"
                            height="{{ block.settings.image.height }}"
                            {% render 'image-attributes', image: block.settings.image, sizes: '600' %}
                            alt="{{ block.settings.image.alt | escape }}"
                          >
                          <div class="media-real-tag">
                            {{ block.settings.label_txt }}
                          </div>
                        </div>
                      {%- endif -%}
                      {%- if block.settings.image1 != blank -%}
                        <div class="media-real-img-item">
                          <img
                            loading="lazy"
                            width="{{ block.settings.image1.width }}"
                            height="{{ block.settings.image1.height }}"
                            {% render 'image-attributes', image: block.settings.image1, sizes: '600' %}
                            alt="{{ block.settings.image1.alt | escape }}"
                          >
                          <div class="media-real-tag">
                            {{ block.settings.label_txt1 }}
                          </div>
                        </div>
                      {%- endif -%}
                    </div>

                    <div class="media-evaluation-real-cont">
                      {%- if block.settings.title != blank -%}
                        <div class="media-evaluation-real-title text-top">
                          {{ block.settings.title }}
                        </div>
                      {%- endif -%}
                      <div class="media-evaluation-real-right">
                        <div class="media-evaluation-real-star to-top appear" data-num="5">★★★★★</div>
                        {%- if block.settings.content != blank -%}
                          <div class="media-evaluation-real-p text-top" style="transition-delay: 0.1s">
                            {{ block.settings.content }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.name != blank -%}
                          <div class="media-evaluation-real-name text-top" style="transition-delay: 0.6s">
                            <span class="span">-</span>
                            {{ block.settings.name }}
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            </div>
          </div>

            <div class="check_swiper-new">
              <div class="swiper-scrollbar" id="swiper-scrollbar--{{ section.id}}"></div>
              <div class="next_prev-bix">
                <div class="mobile_ev">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="13"
                  height="22"
                  viewBox="0 0 13 22"
                  fill="none"
                  class="swiper-button-prev--{{ section.id}}"
                >
                  <path d="M10.9717 1.99999L1.99998 10.9717L10.9717 19.9434" stroke="currentColor" stroke-width="2" stroke-linecap="square"/>
                </svg>
                </div>
                <div class="mobile_ev mobile_ev-nxt">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="13"
                  height="22"
                  viewBox="0 0 13 22"
                  fill="none"
                  class="swiper-button-next--{{ section.id}}"
                >
                  <path d="M1.97169 1.99999L10.9434 10.9717L1.97169 19.9434" stroke="currentColor" stroke-width="2" stroke-linecap="square"/>
                </svg>
                </div>
              </div>
            </div>

          </div>
        </div>
        </div>
    </div>
  </div>
</section>
<script src="{{ 'swiper-bundle.min.aio.min.js' | asset_url }}"></script>
<script>

window.addEventListener('resize', function() {
  // 获取屏幕宽度
  var screenWidth = $(window).width();
  
  // 获取 div 元素距离左边的宽度和本身的宽度
  var $divElement = $('.media_new-left');
  var divOffsetLeft = $divElement.offset().left;
  var divWidth = $divElement.outerWidth();

  // 计算差值
  var difference = screenWidth - (divOffsetLeft + divWidth);

  if (screenWidth > 991) {
    $('.media_new-right').width(difference);
  } else{
    $('.media_new-right').css({width:'auto'})
  }
});


  window.addEventListener('load', function () {
  window.dispatchEvent(new Event('resize'));
  let imageswiper = new Swiper('#image_swiper--{{ section.id }}', {
    centeredSlides: true,
        loop: true, 
        slidesPerView: 1,
        spaceBetween: 20,
        autoplay: {
    delay: 2000,
  },
        pagination: {
        el: '#swiper-scrollbar--{{ section.id}}'
      },
      breakpoints:{
        991: {
          slidesPerView: 'auto',
          spaceBetween:50,
          pagination: {
            type: 'progressbar'
          }
        }
      },
        navigation: {
          nextEl: '.swiper-button-next--{{ section.id }}',
          prevEl: '.swiper-button-prev--{{ section.id }}',
        }
      });


  });
</script>
