<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@sheerid/jslib@1/sheerid.css" type="text/css"/>
<style>
.special-occ-banner{
  position: relative;
  z-index: 2;
}

.special-occ-banner .container{
  display: flex;
  justify-content: flex-end;
}

.special-occ-banner .img{
  width: 100%;
  display: block;
}

.special-occ-banner .mb-box{
  display: none;
}

.special-occ-banner .banner-cont {
  position: absolute;
  width: 100%;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  z-index: 3;
}

.special-occ-banner .banner-txt {
  max-width: 470px;
  /* padding-right: 35px; */
  box-sizing: border-box;
}

.special-occ-banner .title-diy {
  color: #000;
  line-height: 1;
  margin-bottom: 20px;
  text-align: left;
}

.special-occ-banner .sub-txt {
  font-size: 20px;
  color: #000;
  line-height: 1.2;
  margin-bottom: 30px;
  max-width: 326px;
}
.special-occ-banner .sub-txt h6{
  margin:0;
}
.special-occ-banner .sub-txt strong {
  font-weight: normal;
  font-family: var(--heading-font-family);
}

.special-occ-banner .select-box {
  display: flex;
  position: relative;
}

.special-occ-banner .select-box .select-o {
  background-color: #fff;
  height: 40px;
  border: 2px solid #e7004c;
  padding: 0 8px;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #000;
  margin-right: 20px;
  flex: 1;
  box-sizing: border-box;
  cursor: pointer;
  z-index:2;
}

.special-occ-banner .select-box .select-o::before {
  position: absolute;
  content: '';
  display: block;
  width: 11px;
  height: 11px;
  border-right: 2px solid #e7004c;
  border-bottom: 2px solid #e7004c;
  right: 15px;
  top: 50%;
  margin-top: -4px;
  transform: rotate(45deg) translateY(-50%);
}

.special-occ-banner .select-box .select-list {
  display: none;
  position: absolute;
  background: #fff;
  width: calc(100% + 4px );
  left: -2px;
  top: calc(100% - 6px);
  z-index: 3;
  overflow: hidden;
  border: 2px solid #e7004c;
  border-top: 0;
}

.special-occ-banner .select-box .select-item {
  padding: 10px;
  font-size: 14px;
  color: #000;
  transition: all .4s ease;
}

.special-occ-banner .select-box .select-item:hover,
.special-occ-banner .select-box .select-item.active {
  background: #eee;
}

.special-occ-banner .select-box .select-btn {
  width: 136px;
  background: #e7004c;
  border: 2px solid #e7004c;
  color: #fff;
  cursor: pointer;
  font-size: 14px;
}

.special-occ-banner .select-box .select-btn:hover .btn-txt::before{
  color: #e7004c;
}

.special-occ-banner .msg-one {
  position: absolute;
  left: 0;
  top: 100%;
  width: 100%;
  background: #e7004c;
  color: #fff;
  font-size: 14px;
  padding: 8px 10px;
  margin-top: 15px;
  display: none;
}

.sid-modal__wrapper {
  width: 95% !important;
  max-width: 760px;
  box-shadow: none;
  border-radius: 0;
}

.js .no-focus-outline *:focus {
  outline: none;
}

.sid-modal__close-button .sid-modal__close-icon{
  filter: brightness(100%) !important;
  background-image: none !important;
  background: #000 !important;
  border-radius: 50%;
  position: relative;
}

.sid-modal__close-button .sid-modal__close-icon::before,
.sid-modal__close-button .sid-modal__close-icon::after{
  position: absolute;
  content: '';
  display: block;
  width: 12px;
  height: 2px;
  background: #fff;
}

.sid-modal__close-button .sid-modal__close-icon::before {
  transform: rotate(45deg);
  top: 9px;
  left: 4px;
}

.sid-modal__close-button .sid-modal__close-icon::after {
  transform: rotate(-45deg);
  top: 9px;
  left: 4px;
}

.sid-modal__overlay.fade-in{
  background: #000;
  opacity: .5;
}
.breadcrumbs-box{
  display:none;
}
  @media (max-width:1200px) {
    .special-occ-banner .banner-txt{
      max-width:430px;
    }
    .special-occ-banner .title-diy{
      font-size:35px;
    }
  }
@media (max-width:991px) {
  .special-occ-banner .banner-cont{
    top: auto;
    transform: translateY(0);
    bottom: 40px;
  }
  .special-occ-banner .mb-box {
      display: block;
  }

  .special-occ-banner .pc-box {
      display: none;
  }

  .special-occ-banner .banner-txt {
      width: 100%;
      max-width: none;
      padding: 0;
  }

  .special-occ-banner .sub-txt {
      margin-bottom: 20px;
      font-size: 18px;
  }

  .special-occ-banner .select-box {
      display: block;
  }

  .special-occ-banner .select-box .select-o {
      margin: 0;
      height: 50px;
  }

  .special-occ-banner .select-box .select-btn {
      margin-top: 20px;
      width: 100%;
      height: 50px;
  }
  .special-occ-banner .select-box .select-o::before {
    width: 13px;
    height: 13px;
    margin-top: -5px;
  }
}
</style>
