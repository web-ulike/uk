<script defer src="https://cdn.jsdelivr.net/npm/@sheerid/jslib@1/sheerid.js"></script>
<section class="section-box">
  <div class="special-occ-banner">
    {%- if section.settings.image != blank -%}
       <img loading="lazy" class="img pc-box to-opacity" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" {% render 'image-attributes', image: section.settings.image %} alt="{{ section.settings.image.alt | escape }}" >
    {%- endif -%}
    {%- if section.settings.image1 != blank -%}
       <img loading="lazy" class="img mb-box to-opacity" width="{{ section.settings.image1.width }}" height="{{ section.settings.image1.height }}" {% render 'image-attributes', image: section.settings.image1 %} alt="{{ section.settings.image1.alt | escape }}" >
    {%- endif -%}
    <div class="banner-cont">
      <div class="container">
          <div class="banner-txt">
              <div class="title-diy to-top">{{ section.settings.text }}</div>
              <div class="sub-txt to-top" style="transition-delay: 0.1s">
                {{ section.settings.text1 }}
              </div>
              {% comment %} <div class="select-box to-top" style="transition-delay: 0.2s">
                {%- if section.settings.text2 != blank -%}
                  <div class="select-o">
                      <span>{{ section.settings.text2 }}</span>
                      <div class="select-list">
                        {%- for block in section.blocks -%}
                         <div class="select-item" data-url="{{ block.settings.text1 }}">{{ block.settings.text }}</div>
                        {%- endfor -%}
                      </div>
                  </div>
                {%- endif -%}
                {%- if section.settings.text3 != blank -%}
                  <div class="select-btn btn-diy">
                    <div class="btn-txt" text="{{ section.settings.text3 }}">
                      <span>{{ section.settings.text3 }}</span>
                    </div>
                  </div>
                {%- endif -%}
                <div class="msg-one">
                    {{ section.settings.text4 }}
                </div>
              </div> {% endcomment %}
              {% comment %} {% assign link_to_landing_page = shop.metafields.display_options.page_slug | append: "?utm_source=shopify&utm_content=code_snippet" %} {% endcomment %}
              <div class="sb-cs__wrapper to-top" style="transition-delay: 0.2s">
                <div class="sb-cs__cart">
                  <a href="https://accounts.studentbeans.com/oauth/authorize?client_id=9b4d2cac-6dda-44a2-a0bb-c78b125ed61a&country=uk&redirect_uri=https%3A%2F%2Fsh.studentbeans.com%2Foauth%2Fcallback%2Fulikeunitedkingdom.myshopify.com&response_type=code&utm_source=shopify&utm_content=landing_page_button" target="_blank" class="sb-cs__link">
                    <div class="sb-cs__link-container">
                      <img src="https://sh.studentbeans.com/assets/ID.svg" alt="Beans ID logo", width="32", height="18">
                      <span class="sb-cs__vertical-divider"></span>
                      <span>Exclusive Discount Available</span>
                    </div>
                  </a>
                  </div>
              </div>
  
          </div>
      </div>
    </div>
  </div>
</section>
<script>
  window.addEventListener('load',function(){
    let msgOneTimer = null
    $('.special-occ-banner .select-o').click(function () {
      $(this).find('.select-list').slideToggle(300)
    })
    $('.special-occ-banner .select-o .select-item').click(function () {
      $(this).siblings().removeClass('active').end().addClass('active')
      $(this).parents('.select-o').find('span').html($(this).text())
    })
    $('.special-occ-banner .select-btn').click(function () {
      let url = $(this).siblings('.select-o').find('.active').data('url')
      if (url) {
        displayVerification(url)
      } else {
        clearTimeout(msgOneTimer)
        $('.special-occ-banner .msg-one').fadeIn(300)
        msgOneTimer = setTimeout(() => {
            $('.special-occ-banner .msg-one').fadeOut(300)
        }, 2000);
      }
    })
  
    function displayVerification(url) {
      const verificationUrl = url
      sheerId.loadInModal(
      verificationUrl, {
        mobileRedirect: false
      });
    };
  })
</script>
