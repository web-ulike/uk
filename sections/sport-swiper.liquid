  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
 
  #shopify-section-{{ section.id }} {
  }
    /* carousel start */
    .carousel-box{
      overflow: hidden;
      padding: 145px 0;
      background: linear-gradient(180deg, #FDF8FF 0%, #FFF 100%);
    }
    .carousel-top{
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-bottom: 74px;
    }
    .carousel-top .top_tle{
      color:  #190A0A;
      font-size: 48px;
      font-style: normal;
      font-weight: 500;
      line-height: normal;
      margin-bottom: 20px;
    }
    .carousel-top .top_txt {
      color: #190A0A;
      font-size: 18px;
      font-style: normal;
      font-weight: 300;
      line-height: 150%;
    }
    .top_rt{
      display: flex;
      gap: 60px;
    }
    .top_rt svg.swiper-button-disabled{
      opacity: 0.25;
    }
    .carousel-d1 img{
      width: 100%;
      object-fit: cover;
    }
    .carousel-d1 .car-name{
      color:  #3F3636;
      font-size: 18px;
      font-style: normal;
      font-weight: 500;
      line-height: 120%; /* 21.6px */
      margin-top: 28px;
    }
    .carousel-d1 .car-cate{
      color:  #3F3636;
      font-size: 14px;
      font-style: normal;
      font-weight: 380;
      line-height: 120%;
      opacity: 0.5;
      margin-top: 5px;
    }
    .carousel-box .carousel-item{
      width: 250px;
    }
    .carousel-box .carousel-item.swiper-slide.swiper-slide-active{
      width: 325px;
    }
   .carousel-item .carsoule_img{
      height: 650px;
      display: flex;
      align-items: end;
    }
    .carousel-item .carsoule_img img{
      width: 250px;
      height: 250px;
      transition: all 1s ease;
      opacity: 0.6;
      cursor: pointer;
    }
  .carousel-item .carsoule_img img.img_oe {
    position: relative;
}
    .carousel-item .carsoule_img img.img_to {
    position: absolute;
      z-index: -1;
      opacity: 0;
}
     .carousel-item.swiper-slide.swiper-slide-active .carsoule_img img{
      opacity: 1;
      height: 650px;
        width: 325px;
    }
  .carousel-item.swiper-slide.swiper-slide-active .carsoule_img img.img_oe{
     position: absolute;
      z-index: -1;
    opacity: 0;
  }
    .carousel-item.swiper-slide.swiper-slide-active .carsoule_img img.img_to{
     position: relative;
      z-index: 0;
      opacity: 1;
  }
    .carousel-cnt {
      align-items: flex-end;
    }
   .carousel-d2 {
    left: -120%;
    position: absolute;
    top: 0;
    width: 120%;
    text-align: right;
}
.carousel-d2_box{
padding: 38px 20px;
}
.carousel-d2 .d2-p1{
  color:  #3F3636;
font-size: 18px;
font-style: normal;
font-weight: 570;
line-height: 140%;
margin-bottom: 7px;
}
.carousel-d2 .d2-link{
  display: block;
  color:  #E0004D;
font-size: 16px;
font-style: normal;
font-weight: 300;
line-height: 140%;
text-decoration-line: underline;
margin-bottom: 26px;
}
.d2-box{
  display: inline-flex;
  gap: 15px;
  align-items: center;
}
.d2-box .d2-name{
  color:  #3F3636;
font-size: 18px;
font-style: normal;
font-weight: 570;
line-height: 120%;
}
.d2-box .d2-txt{
  color:  #3F3636;
font-size: 14px;
font-style: normal;
font-weight: 400;
line-height: 120%;
opacity: 0.5;
margin-top: 6px;
}
.carousel-item.swiper-slide.swiper-slide-active .carousel-d2 .animate_tl {
  -webkit-clip-path: inset(0% 0 0 0);
  clip-path: inset(0% 0 0 0);
  transform: translateY(0);
  opacity: 1;
  transition: all 0.6s cubic-bezier(.06,.66,.37,.98);
  transition-delay: 0.5s;
}
.carousel-d2 .animate_tl {
  -webkit-clip-path: inset(100% 0 0 0);
  clip-path: inset(100% 0 0 0);
  transform: translateY(20px);
  opacity: 0;
}
.top_rt svg{
  cursor: pointer;
}
.main-thumbs-swiper{
  display: none;
}
.d2-avt{
  width: 48px;
  height: 48px;
  border-radius: 50%;
}
.d2-avt img{
  width: 100%;
  object-fit: cover;
  border-radius: 50%;
}
.carousel-box .swiper-scrollbar{
  display: none;
}
.carousel-box .swiper-scrollbar {
    background: #DEDEDE;
    height: 2px;
    margin-top: 70px;
}
.carousel-box .swiper-pagination-progressbar .swiper-pagination-progressbar-fill {
    background: #000000;
}
  .img_oe-mb,.img_to-mb{
    display: none;
  }
@media (max-width: 768px) {
  .img_oe-mb,.img_to-mb{
    display: block;
  }
  .img_oe-des,.img_to-des{
     display: none;
  }
  .main-thumbs-swiper{
  display: block;
