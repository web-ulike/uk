  padding-bottom: 35vw;
}
.carousel-thb-cnt{
  display: flex;
}
.carousel-item-thb img{
  display: block;
width: 100%;
}
.carousel-item.swiper-slide.swiper-slide-active .carsoule_img img {
    height: auto;
          width: 100%;
}
.carousel-item .carsoule_img img {
    width: 100%;
    height: auto;
}
.carousel-d2 {
  left: 0;
