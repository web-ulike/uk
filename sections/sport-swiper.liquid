}
.top_rt{
  display: none;
}
.carousel-top .top_txt{
  font-size: 14px;
}
.carousel-item .carsoule_img{
  height: auto;
}
.carousel-d1 .car-name,.carousel-d1 .car-cate{
  display: none;
}
.carousel-d2 .d2-p1{
  font-size: 14px;
