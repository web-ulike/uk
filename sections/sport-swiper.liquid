}
.carousel-box{
  padding: 56px 0;
}
.carousel-box .swiper-scrollbar{
  display: block;
}
}
/* carousel end */
</style>

<section class="{% if section.settings.custom_class != blank %}{{section.settings.custom_class}}{% endif %}">
    <div class="carousel-box to-top">
      <div class="carousel-wrapper container">
        <div class="carousel-top">
          <div class="top_lt">
              {%- if section.settings.carousel_tle != blank -%}
        <div class="top_tle">{{ section.settings.carousel_tle }}</div>
            {%- endif -%}
            {%- if section.settings.carousel_text != blank -%}
            <div class="top_txt">{{ section.settings.carousel_text }}</div>
              {%- endif -%}
          </div>
          <div class="top_rt">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="39" viewBox="0 0 50 39" fill="none" class="carousel_left" id="carousel_left--{{ section.id}}">
              <g clip-path="url(#clip0_4883_82)">
                <path d="M0 19.8203C0 20.1228 0.112194 20.4228 0.326828 20.6521L17.4 38.9447L19.1829 37.2813L4.02439 21.0399H50C50 19.6935 48.9073 18.6008 47.561 18.6008H1.27561C0.814632 18.6008 0.365852 18.8325 0.146343 19.2399C0.0463409 19.4228 0 19.6228 0 19.8203Z" fill="#190A0A"/>
                <path d="M2.55125 15.5446C3.50491 16.4958 5.04881 16.4958 6.00003 15.5446L19.1561 2.39089L17.4317 0.666504L2.55369 15.5446H2.55125Z" fill="#190A0A"/>
              </g>
              <defs>
                <clipPath id="clip0_4883_82">
                  <rect width="50" height="38.2805" fill="white" transform="matrix(-1 0 0 1 50 0.666504)"/>
                </clipPath>
              </defs>
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="39" viewBox="0 0 50 39" fill="none" class="carousel_right" id="carousel_right--{{ section.id}}">
              <g clip-path="url(#clip0_4883_78)">
                <path d="M50 19.8203C50 20.1228 49.8878 20.4228 49.6732 20.6521L32.6 38.9447L30.8171 37.2813L45.9756 21.0399H0C0 19.6935 1.09268 18.6008 2.43902 18.6008H48.7244C49.1854 18.6008 49.6341 18.8325 49.8537 19.2399C49.9537 19.4228 50 19.6228 50 19.8203Z" fill="#190A0A"/>
                <path d="M47.4487 15.5446C46.4951 16.4958 44.9512 16.4958 44 15.5446L30.8439 2.39089L32.5683 0.666504L47.4463 15.5446H47.4487Z" fill="#190A0A"/>
              </g>
              <defs>
                <clipPath id="clip0_4883_78">
                  <rect width="50" height="38.2805" fill="white" transform="translate(0 0.666504)"/>
                </clipPath>
              </defs>
            </svg>
          </div>
        </div>
        <div class="main-swiper" id="main-swiper--{{ section.id}}">
          <div class="carousel-cnt swiper-wrapper">

            {%- for block in section.blocks -%}
            <div class="carousel-item swiper-slide">
              <div class="carousel-li">
                <div class="carousel-d1">
                  <div class="carsoule_img">
                     {%- if block.settings.image1 -%}
                    <img src="{{ block.settings.image1 |image_url }}" alt="" class="img_oe img_oe-des">
                      {%- endif -%}
                    {%- if block.settings.image2 -%}
                     <img src="{{ block.settings.image2 |image_url }}" alt="" class="img_to img_to-des">
                      {%- endif -%}

                     {%- if block.settings.mobile_image1 -%}
                    <img src="{{ block.settings.mobile_image1 |image_url }}" alt="" class="img_oe img_oe-mb">
                      {%- endif -%}
                    {%- if block.settings.mobile_image1 -%}
                     <img src="{{ block.settings.mobile_image1 |image_url }}" alt="" class="img_to img_to-mb">
                      {%- endif -%}
                  </div>
                  <div class="car-name">{{ block.settings.avtor }}</div>
                  <div class="car-cate">{{ block.settings.avtor_cate }}</div>
                </div>
                <div class="carousel-d2">
                 <div class="carousel-d2_box">
                  <div class="d2-p1 animate_tl">{{ block.settings.des }}</div>
                 <div class="d2_link-box">
                  <a href="{{ block.settings.button_link }}" class="d2-link animate_tl" target="_blank">{{ block.settings.link_txt }}</a>
                  <div class="d2-box animate_tl">
                    <div class="d2-avt">
                      <img src="{{ block.settings.image1 |image_url }}" alt="">
                    </div>
                    <div class="d2-rt">
                      <div class="d2-name">{{ block.settings.avtor }}</div>
                      <div class="d2-txt">{{ block.settings.avtor_cate }}</div>
                    </div>
                  </div>
                 </div>
                 </div>
                </div>
              </div>
            </div>
            {%- endfor -%}

            
          </div>
        </div>
        <div class="main-thumbs-swiper" id="main-thumbs--{{ section.id}}">
          <div class="carousel-thb-cnt swiper-wrapper">
              {%- for block in section.blocks -%}
            <div class="carousel-item-thb swiper-slide">
               <img src="{{ block.settings.image1 |image_url }}" alt="">
            </div>
              {%- endfor -%}
          </div>
        </div>
        <div class="swiper-scrollbar" id="swiper-scrollbar--{{ section.id}}"></div>
      </div>
    </div>
</section>
<script src="{{ 'swiper-bundle.min.aio.min.js' | asset_url }}"></script>
<script>
var thumbSport = new Swiper('#main-thumbs--{{ section.id}}',{
  spaceBetween: 10,
  slidesPerView: 5,
  watchSlidesVisibility: true
})
   var mainSport = new Swiper('#main-swiper--{{ section.id}}', {
    watchSlidesProgress: true,
    slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      centeredSlides: true,
      speed:500,
     slideToClickedSlide: true,
     autoplay: {
                    delay: 2000,
                    disableOnInteraction: true
        },
      pagination: {
        el: '#swiper-scrollbar--{{ section.id}}',
        type: 'progressbar'
      },
      breakpoints: {
    768: {
      slidesPerView: 'auto',
      speed:1000,
    }
  },
      navigation: {
            nextEl: '#carousel_right--{{ section.id}}',
            prevEl: '#carousel_left--{{ section.id}}',
        },
        thumbs: {
    swiper: thumbSport,
  }
  });
</script>
