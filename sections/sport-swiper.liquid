  justify-content: space-between;
}
.carousel-box .carousel-item-thb.swiper-slide{
  opacity: 0.5;
}
.carousel-box .carousel-item-thb.swiper-slide.swiper-slide-thumb-active{
  opacity: 1;
}
.carousel-box .carousel-item.swiper-slide.swiper-slide-active .carousel-d2 .animate_tl{
