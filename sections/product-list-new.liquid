"name": "product-list-new",
"blocks": [
  {
    "name": "item",
    "type": "item",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image M"
      },
      {
        "type": "text",
        "id": "text5",
        "label": "Tag"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Title Text"
      },
      {
        "type": "text",
        "id": "text1",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "text2",
        "label": "Price"
      },
      {
        "type": "text",
        "id": "text3",
        "label": "Btn Text"
      },
      {
        "type": "text",
        "id": "text4",
        "label": "Product ID"
      }
    ]
  }
],
"settings": [
  {
    "type": "text",
    "id": "text",
    "label": "Title"
  }
],
  "presets": [
  {
    "name": "product-list-new",
    "blocks": []
  }
]
}
{% endschema %}