      "id": "image1",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "text",
      "label": "标签"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "标题"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "副标题"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "按钮文字"
    },
    {
      "type": "text",
      "id": "text4",
      "label": "跳转ID"
    }
  ],
  "presets": [
    {
      "name": "comparison-banner"
    }
  ]
}
{% endschema %}
