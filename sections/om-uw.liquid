<style>
.om-uw {
  padding: 84px 0 67px 0;
}

.om-uw .om-uw-cont {
  display: flex;
  gap: 5%;
}

.om-uw .om-uw-left {
  flex: 1;
}

.om-uw .om-uw-h3 {
  color: #190a0a;
  font-size: 44px;
  font-weight: normal;
  font-family: var(--heading-font-family);
  line-height: 1;
  letter-spacing: 0.44px;
  margin: 0;
  margin-bottom: 15px;
}

.om-uw .om-uw-p {
  color: #190a0a;
  font-size: 20px;
  line-height: 1.5;
  letter-spacing: 0.2px;
  max-width: 404px;
}

.om-uw .om-uw-btn {
  display: inline-flex;
  height: 47px;
  align-items: center;
  padding: 0 40px;
  color: #fff;
  font-size: 16px;
  line-height: 1;
  font-family: var(--heading-font-family);
  background: #e0004d;
  cursor: pointer;
  margin-top: 50px;
  transition: all 0.4s ease;
}

.om-uw .om-uw-btn:hover {
  opacity: 0.7;
}

.om-uw .om-uw-msg {
  color: #3f3636;
  font-size: 14px;
  line-height: 1.5;
  letter-spacing: -0.196px;
  margin-top: 10px;
}

.om-uw .om-uw-msg strong {
  font-weight: normal;
  text-decoration: underline;
  cursor: pointer;
}

.om-uw .om-uw-right {
  width: 61.8%;
  display: flex;
  gap: 20px;
}

.om-uw .om-uw-item {
  flex: 1;
  text-align: center;
}

.om-uw .img {
  width: 100%;
  border-radius: 5px;
}

.om-uw .om-uw-h4 {
  color: #e0004d;
  font-size: 24px;
  line-height: 1.5;
  font-weight: normal;
  font-family: var(--heading-font-family);
  margin: 0;
  margin-top: 20px;
}

.om-uw .om-uw-sub {
  color: #3f3636;
  font-size: 18px;
  line-height: 1.2;
  letter-spacing: 0.54px;
}

.om-uw .om-uw-sub p {
  margin:0;
}

.om-uw-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.om-uw-popup .om-uw-popup-cont {
  position: relative;
  width: 1090px;
  max-width: 95%;
}

.om-uw-popup .om-uw-popup-close {
  position: absolute;
  width: 46px;
  top: 36px;
  right: 36px;
  z-index: 2;
  cursor: pointer;
}

.om-uw-popup .om-uw-popup-close svg {
  display: block;
  width:100%;
  height:auto;
}

.om-uw-popup .om-uw-popup-t {
  padding: 2.5vw 13.4% 20px 13.4%;
  background: #fff;
  border-radius: 10px;
}

.om-uw-popup .om-uw-popup-h3 {
  color: #000;
  text-align: center;
  font-size: 32px;
  line-height: 1.25;
  font-weight: normal;
  font-family: var(--heading-font-family);
  margin: 0;
}

.om-uw-popup .om-uw-popup-s {
  font-size: 14px;
  color: #000;
  margin-top: 40px;
  max-height: 50vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: auto; /* 取消惯性隐藏的触感滚动（iOS） */
  scrollbar-width: auto; /* Firefox */
}

/* WebKit 浏览器 — 让滚动条更明显 */
.om-uw-popup .om-uw-popup-s::-webkit-scrollbar {
  width: 8px; /* 横向滚动条高度 */
}

.om-uw-popup .om-uw-popup-s::-webkit-scrollbar-track {
  background: none;
}

.om-uw-popup .om-uw-popup-s::-webkit-scrollbar-thumb {
  background: #959595;
  border-radius: 4px;
}

.om-uw-popup .om-uw-popup-s ul,
.om-uw-popup .om-uw-popup-s ol{
    padding-left:15px;
}

.om-uw-popup .om-uw-popup-btn {
  display: none;
  justify-content: center;
  align-items: center;
  height: 54px;
  background: #000;
  color: #fff;
  font-size: 16px;
  line-height: 1.5;
  font-family: var(--heading-font-family);
  margin-top: 10px;
}

@media (max-width: 1300px) {
  .om-uw .om-uw-h3 {
    font-size: 30px;
  }

  .om-uw .om-uw-p {
    font-size: 16px;
  }

  .om-uw .om-uw-btn {
    height: 40px;
    font-size: 14px;
    margin-top: 30px;
  }

  .om-uw .om-uw-h4 {
    font-size: 18px;
    margin-top: 10px;
  }

  .om-uw .om-uw-sub {
    font-size: 14px;
  }
}

@media (max-width: 991px) {
  .om-uw {
    padding: 56px 0 28px 0;
  }
  .om-uw .om-uw-cont {
    gap: 38px;
    flex-direction: column;
  }

  .om-uw .om-uw-left {
    text-align: center;
  }

  .om-uw .om-uw-h3 {
    font-size: 28px;
    margin-bottom: 10px;
  }

  .om-uw .om-uw-p {
    font-size: 14px;
    max-width: 100%;
  }

  .om-uw .om-uw-btn {
    height: 46px;
    margin-top: 20px;
  }

  .om-uw .om-uw-right {
    width: 100%;
    flex-wrap: wrap;
    gap: 11px;
    row-gap: 30px;
  }
  .om-uw .om-uw-item:first-child {
    width: 100%;
    flex: none;
  }
  .om-uw .om-uw-h4 {
    font-size: 16px;
  }
  .om-uw .om-uw-sub {
    font-size: 12px;
  }

  .om-uw .om-uw-msg {
    font-size: 12px;
  }

  .om-uw-popup .om-uw-popup-t {
    padding: 37px 24px 24px;
    border-radius: 0;
  }

  .om-uw-popup .om-uw-popup-h3 {
    font-size: 18px;
  }
  .om-uw-popup .om-uw-popup-s {
    font-size: 12px;
    margin-top: 20px;
  }
  .om-uw-popup .om-uw-popup-close {
    width: 35px;
    top: 10px;
    right: 10px;
    {% comment %} display: none; {% endcomment %}
  }
  .om-uw-popup .om-uw-popup-btn {
    display: flex;
  }
}
</style>
<section class="section-box">
 <div class="om-uw">
    <div class="container">
      <div class="om-uw-cont">
        <div class="om-uw-left">
            {%- if section.settings.text != blank -%}
                <h3 class="om-uw-h3">{{ section.settings.text }}</h3>
            {%- endif -%}
            {%- if section.settings.text1 != blank -%}
                <div class="om-uw-p">{{ section.settings.text1 }}</div>
            {%- endif -%}
            {%- if section.settings.text2 != blank -%}
                <div class="om-uw-btn">{{ section.settings.text2 }}</div>
            {%- endif -%}
            {%- if section.settings.text3 != blank -%}
                <div class="om-uw-msg">{{ section.settings.text3 }}</div>
            {%- endif -%}
        </div>
        <div class="om-uw-right">
            {%- for block in section.blocks -%}
            <div class="om-uw-item">
                {%- if block.settings.image != blank or block.settings.image1 != blank -%}
                    <picture>
                    <source srcset="{{block.settings.image1 | image_url }}" media="(max-width: 991px)">
                    <img loading="lazy"
                        class="img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image %}
                        alt="{{ block.settings.image.alt | escape }}">
                    </picture>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                    <h4 class="om-uw-h4">{{ block.settings.text }}</h4>
                {%- endif -%}
                {%- if block.settings.text1 != blank -%}
                    <div class="om-uw-sub">{{ block.settings.text1 }}</div>
                {%- endif -%}
            </div>
        {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
  <div class="om-uw-popup">
    <div class="om-uw-popup-cont">
      <div class="om-uw-popup-close">
        <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" viewBox="0 0 46 46" fill="none">
          <path
            d="M23 0C10.304 0 0 10.304 0 23C0 35.696 10.304 46 23 46C35.696 46 46 35.696 46 23C46 10.304 35.696 0 23 0ZM23 44.16C11.316 44.16 1.84 34.684 1.84 23C1.84 11.316 11.316 1.84 23 1.84C34.684 1.84 44.16 11.316 44.16 23C44.16 34.684 34.684 44.16 23 44.16Z"
            fill="#959595" />
          <path
            d="M30.452 15.5481C30.084 15.1801 29.532 15.1801 29.164 15.5481L23 21.7121L16.836 15.5481C16.468 15.1801 15.916 15.1801 15.548 15.5481C15.18 15.9161 15.18 16.4681 15.548 16.8361L21.712 23.0001L15.548 29.1641C15.18 29.5321 15.18 30.0841 15.548 30.4521C15.732 30.6361 16.008 30.7281 16.192 30.7281C16.376 30.7281 16.652 30.6361 16.836 30.4521L23 24.2881L29.164 30.4521C29.348 30.6361 29.624 30.7281 29.808 30.7281C29.992 30.7281 30.268 30.6361 30.452 30.4521C30.82 30.0841 30.82 29.5321 30.452 29.1641L24.288 23.0001L30.452 16.8361C30.82 16.4681 30.82 15.9161 30.452 15.5481Z"
            fill="#959595" />
        </svg>
      </div>
      <div class="om-uw-popup-t">
        {%- if section.settings.text4 != blank -%}
            <h3 class="om-uw-popup-h3">{{ section.settings.text4 }}</h3>
        {%- endif -%}
        {%- if section.settings.text5 != blank -%}
            <div class="om-uw-popup-s">{{ section.settings.text5 }}</div>
        {%- endif -%}
      </div>
      <div class="om-uw-popup-btn">CLOSE</div>
    </div>
  </div>
</section>
<script>
    document.querySelector(".om-uw .om-uw-msg").addEventListener("click", function () {
        const popup = document.querySelector(".om-uw-popup");
        if (popup) {
        popup.style.display = "flex";
        }
    });

    document.querySelector(".om-uw-popup").addEventListener("click", function (e) {
        if (e.target.closest(".om-uw-popup-btn") || e.target.closest(".om-uw-popup-close")) {
        const popup = document.querySelector(".om-uw-popup");
        if (popup) {
            popup.style.display = "none";
        }
        }
    });

 document.querySelector(".om-uw .om-uw-btn").addEventListener("click", function () {
    if (!window.omnisend) {
      console.warn("Omnisend SDK 未加载");
      return;
    }

    // 你在 Omnisend 后台生成的 Form ID
    const formIdPc = "673ae0d06c95faeac01d7548";  
    const formIdMobile = "673ae0d56c95faeac01d7549";  

    const formId = window.innerWidth < 991 ? formIdMobile : formIdPc;

    window.omnisend.push(["openForm", formId]);
  });
</script>
