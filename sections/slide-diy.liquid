<style>
 .slide-diy{
  padding: 100px 0;
}

.slide-diy .slide-diy-title{
  color: #000;
  text-align: center;
  font-size: 44px;
  font-family: var(--heading-font-family);
  line-height: 1.25;
}

.slide-diy .slide-diy-sub{
  color: #000;
  text-align: center;
  font-size: 16px;
  line-height: 1.5;
  max-width: 750px;
  margin: 0 auto;
  margin-top: 15px;
}

.slide-diy .slide-diy-cont{
  margin-top: 50px;
  display: flex;
}

.slide-diy .slide-diy-left{
  width: 46.8%;
  display: flex;
  overflow: hidden;
  border-radius: 20px;
  position: relative;
  flex-shrink: 0;
}

.slide-diy .slide-diy-left::after{
  position: absolute;
  content: '';
  height: 100%;
  width: 1px;
  background: #fff;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  z-index: 2;
}

.slide-diy .slide-diy-img{
  width: 50%;
  position: relative;
  z-index: 1;
}

.slide-diy .slide-diy-img-item{
  position: absolute;
  z-index: 1;
  height: 100%;
  width: 100%;
}

.slide-diy .slide-diy-img-item .img{
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slide-diy .slide-diy-img-item.close{
  left: 0;
  top: 0;
  z-index: 3;
  overflow: hidden;
  width: 0;
  transition: width 0.7s cubic-bezier(0.4, 0.2, 0.2, 1);
}

.slide-diy .slide-diy-img-item.close .img{
  width: auto;
}

.slide-diy .slide-diy-img-item.active{
  position: relative;
  z-index: 2;
}

.slide-diy .slide-diy-img-txt{
  color: #fff;
  font-size: 13px;
  font-weight: 500;
  line-height: 1;
  letter-spacing: 1px;
  font-family: var(--heading-font-family);
  position: absolute;
  z-index: 4;
  right: 0;
  bottom: 80px;
  background: rgba(0, 0, 0, 0.50);
  padding: 8px 10px;
}

.slide-diy .slide-diy-img:nth-child(2) .slide-diy-img-txt{
  background: #E0004D;
}

.slide-diy .slide-diy-right{
  margin-left: 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: calc(53.2% - 50px);
}

.slide-diy .slide-diy-img-list{
  overflow: hidden;
  position: relative;
}

.slide-diy .slide-diy-img-list::after {
  position: absolute;
  content: '';
  display: block;
  width: 70%;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 3;
  --background: 255,255,255;
  background: linear-gradient(to left, rgb(var(--background)), rgba(var(--background), 0));
  pointer-events: none;
}

.slide-diy .slide-diy-list{
  display: flex;
}

.slide-diy .slide-diy-list .img{
  display: block;
  width: 38.7%;
  flex-shrink: 0;
  margin-right: 25px;
  border-radius: 20px;
  cursor: pointer;
}

.slide-diy .slide-diy-bottom{
  display: flex;
  align-items: flex-end;
  gap: 42px;
  margin-top: 30px;
  flex: 1;
}

.slide-diy .slide-diy-arraw{
  display: flex;
  gap: 22px;
}

.slide-diy .slide-diy-arraw-item{
  width: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.slide-diy .slide-diy-arraw-item svg{
  display: block;
}

.slide-diy .slide-diy-text{
  background: #F9F9F9;
  border-radius: 20px;
  padding: 50px 30px 30px 70px;
  flex: 1;
  position: relative;
  height: 100%;
  display: flex;
  overflow: hidden;
}

.slide-diy .slide-diy-text::before{
  position: absolute;
  content: '“';
  font-size: 200px;
  line-height: 1;
  color: #E6E6E6;
  left: 25px;
  top: -10px;
  z-index: 0;
}

.slide-diy .slide-diy-txt-item{
  position: relative;
  z-index: 2;
  color: #000;
  font-size: 16px;
  line-height: 1.5;
  flex-shrink: 0;
  width: 100%;
  margin-right: 100px;
}

.slide-diy .slide-diy-dot{
  display: none;
  align-items: center;
  justify-content: center;
  margin-top: 26px;
}

.slide-diy .slide-diy-dot-item{
  width: 5px;
  height: 5px;
  background: #D9D9D9;
  margin: 0 5px;
  border-radius: 50%;
}

.slide-diy .slide-diy-dot-item.active{
  background: #7A7A7A;
}

.wom-2025 .slide-diy-left,
.wom-2025 .slide-diy-list .img{
  border-radius: 5px;
}

.wom-2025 .slide-diy-img{
  width:100%;
}

.wom-2025 .slide-diy-img:nth-child(2),
.wom-2025 .slide-diy-left::after,
.wom-2025 .slide-diy-img-txt{
  display: none;
}

@media (max-width:1300px) {
  .slide-diy .slide-diy-right{
    margin-left: 30px;
    width: calc(53.2% - 30px);
  }
  .slide-diy .slide-diy-text{
    padding: 30px;
    padding-left: 50px;
    font-size: 14px;
  }
  .slide-diy .slide-diy-text::before{
    font-size: 160px;
    left: 12px;
    top: -17px;
  }
}

@media (max-width:991px) {
  .slide-diy{
    padding: 50px 0;
    padding-top:0;
  }
  .slide-diy .slide-diy-title{
    font-size: 28px;
  }
  .slide-diy .slide-diy-sub{
    margin-top: 20px;
    font-size: 14px;
  }

  .slide-diy .slide-diy-cont{
    display: block;
    margin-top: 25px;
  }
  .slide-diy .slide-diy-left{
    width: 100%;
    border-radius: 16px 16px 0px 0px;
    pointer-events: none;
  }
  
  .slide-diy .slide-diy-right{
    margin-left: 0;
    width: 100%;
  }
  .slide-diy .slide-diy-img-txt{
    bottom: 24px;
  }
  .slide-diy .slide-diy-txt-item{
    text-align: center;
    font-size: 14px;
  }
  .slide-diy .slide-diy-img-list{
    display: none;
  }
  .slide-diy .slide-diy-bottom{
    margin-top: 0;
  }
  .slide-diy .slide-diy-arraw{
    display: none;
  }
  .slide-diy .slide-diy-text{
    border-radius: 0px 0px 16px 16px;
    padding: 52px 36px 45px 36px;
  }
  .slide-diy .slide-diy-text::before {
    font-size: 200px;
    left: 12px;
    top: -10px;
  }
  .slide-diy .slide-diy-dot{
    display: flex;
  }

  .wom-2025 .slide-diy-left{
    border-radius: 5px 5px 0px 0px;
  }

  .wom-2025 .slide-diy-text{
    border-radius: 0px 0px 5px 5px;
    padding: 48px 36px 45px 36px;
  }
}
