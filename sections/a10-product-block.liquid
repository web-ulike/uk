{%- liquid
  assign se_id = section.id
  assign se_bks = section.blocks
  assign se_stts = section.settings
  assign product = se_stts.product
-%}

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<div id="top-bar" class="toolbar-block">
  <div class="container">
    <div class="product-toolbar">
      <div class="navbar">
        <div class="box-price">
          <div class="dis-price">
            {{ product.price | money }}
            <span class="price m-show">{{ product.compare_at_price | money }}</span>
          </div>
          <div class="original-price p-hide">
            <div class="price ">{{ product.compare_at_price | money }}</div>
            <div class="group-purchase-offer">Group ends in</div>
          </div>
        </div>
        <div class="box-countdown">
          <span class="m-show ends-text">Group ends in</span>
          <div id="countdown-bar" class="countdown">
            <div class="countdown__item">
              <div class="countdown__bix">
                <span class="countdown-time-bar countdown-hours">01</span>
              </div>
              <span class="countdown_txt">Hours</span>
            </div>
            <div class="countdown__er">:</div>
            <div class="countdown__item">
              <div class="countdown__bix">
                <span class="countdown-time-bar countdown-minutes">20</span>
              </div>
              <span class="countdown_txt">minutes</span>
            </div>
            <div class="countdown__er">:</div>
            <div class="countdown__item">
              <span class="countdown__bix ">
                <span class="countdown-time-bar countdown-seconds">10</span>
              </span>
              <span class="countdown_txt">seconds</span>
            </div>
          </div>
        </div>
      </div>
      <div class="right-panel">
        <div class="btn-add-cart">
          <span class="loader-button__text">ADD TO CART</span>
          <span class="loader-button__loader" hidden>
            <div class="spinner">
              <svg focusable="false" width="24" height="24" class="icon icon--spinner" viewBox="25 25 50 50">
                <circle cx="50" cy="50" r="20" fill="none" stroke="currentColor" stroke-width="5"></circle>
              </svg>
            </div>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="product-components">
  <div class="product-left-panel">
    <!-- 左侧轮播 -->
    <div class="thumbs-swiper">
      <div class="swiper myThumbs">
        <div class="swiper-wrapper">
          <!-- 缩略图 -->
          {% for item in product.images %}
            {% comment %} {% if block.type == 'product-image' %} {% endcomment %}
            {% comment %} {% assign img = block.settings.image %} {% endcomment %}
            <div class="swiper-slide">
              {{- item | image_url: width: item.width | image_tag: loading: 'lazy', draggable: false -}}
            </div>
            {% comment %} {% endif %} {% endcomment %}
          {% endfor %}
          <!-- 更多缩略图 -->
        </div>
      </div>
    </div>
    <div class="main-image-swiper">
      <!-- Swiper主图 -->
      <div class="swiper myGallery">
        <div class="swiper-wrapper">
          <!-- 主图 -->
          {% for item in product.images %}
            <div class="swiper-slide">
              {{- item | image_url: width: item.width | image_tag: loading: 'lazy', draggable: false -}}
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
  <div class="product-right-panel">
    <div class="tags">
      <div class="new-tag">{{ se_stts.new }}</div>
    </div>
    <div class="title">{{ se_stts.title }}</div>
    <div class="sub-title">{{ se_stts.desc }}</div>
    <a href="#looxReviews">
      <div
        class="loox-rating"
        data-id="{{ product.id }}"
        data-rating="{{ product.metafields.loox.avg_rating }}"
        data-raters="{{ product.metafields.loox.num_reviews }}"
      ></div>
    </a>
    <div class="info-list">
      <ul class="description">
        {% for block in se_bks %}
          {% if block.type == 'product-desc' %}
            <li>{{ block.settings.name }}</li>
          {% endif %}
        {% endfor %}
      </ul>
      <div class="read-more">{{ se_stts['read-more'] }} +</div>
    </div>
    <div
      class="variants-list"
      handle="{{ product.handle }}"
    >
      {%- assign color_swatch_config = settings.color_swatch_config | newline_to_br | split: '<br />' -%}
      {%- for option in product.options_with_values -%}
        {%- assign option_name = option.name -%}
        {% if option_name == 'Colour' %}
          <div class="color-block swatch_{{ option_name}}">
            <div class="name">
              {{ option_name }}: <lable>{{ option.values | first }}</lable>
            </div>
            <div class="color-swatch-list">
              {% for value in option.values %}
                {%- assign variant_for_value = product.variants | where: 'option1', value | first -%}
                <div
                  class="color-swatch  {% if value == option.selected_value %} active {% endif%}"
                  id="{{ variant_for_value.id }}"
                  inventory_quantity="{{ variant_for_value.inventory_quantity }}"
                  position="{{ variant_for_value.featured_media.position }}"
                  name="{{ value }}"
                >
                  <input
                    class="color-swatch__radio visually-hidden"
                    type="radio"
                    name="option1"
                    {% if value == option.selected_value %}
                      checked="checked"
                    {% endif %}
                    value="{{ value}}"
                  >
                  <label
                    class="color-swatch__item"

                    style="{% render 'color-swatch-style', color_swatch_config: color_swatch_config, value: value %}"
                  >
                    <span class="visually-hidden">{{ value }}</span>
                  </label>
                </div>
              {% endfor %}
            </div>
          </div>
        {% else %}
          <div class="plug-block swatch_{{ option_name}}">
            <div class="name">
              {{ option_name }}: <label>{{ option.values | first }}</label>
            </div>
            <div class="plug-list">
              {% for value in option.values %}
                {%- assign variant_for_value = product.variants | where: 'option2', value | first -%}
                <div
                  class="item {% if forloop.index0 == 0 %} active {% endif %}"
                  id="{{ variant_for_value.id }}"
                  name="{{ value }}"
                >
                  <div class="text">{{ value }}</div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      <div class="product-tips">restocking</div>
    </div>

    <div class="price-block">
      <div class="price">
        <div class="dis-price">{{ product.price | money }}</div>
        {% if product.compare_at_price %}
          <div class="original-price">{{ product.compare_at_price | money }}</div>
        {% endif %}
      </div>
    </div>

    <div class="custom-reasons-block">
      <div class="item">
        <img class="img-2" src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/mask-group.svg?v=1711459813">
        <div class="desc">Free 2-Day Shipping</div>
      </div>
      <div class="item">
        <img class="img-2" src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/2-year.svg?v=1711459860">
        <div class="desc">Lifetime Warranty</div>
      </div>
      <div class="item">
        <img class="img-2" src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/group-3116.svg?v=1711459860">
        <div class="desc">90-Day Easy Money back</div>
      </div>
    </div>

    <div class="group-sharing">
      <div class="detail">
        <div class="left-box">
          <div class="info">
            <span class="user"><span>0</span> Users</span>
            <span class="text"> Group-Purchased</span>
          </div>
          <p class="text-desc">Get Best Offer with Group Purchase</p>
        </div>
        <div class="right-box">
          <div class="main-content">
            <img
              class="vector-2"
              src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/vector-115.svg?v=1711459504"
            >
            <div class="current-text">
              <div class="text">Current</div>
              <div class="text-price">£{{ product.price | divided_by: 100 | floor }}</div>
            </div>
            <div class="offer-ends">
              <div class="text">Offer Ends</div>
              <div class="text-price">£{{ product.compare_at_price | divided_by: 100 | floor }}</div>
            </div>
          </div>
        </div>
      </div>

      <div class="winning-info">
        <div class="group-wrapper">
          <div class="m-image-block">
            <img class="vector" src="https://cdn.shopify.com/s/files/1/0740/5882/6015/files/people.svg?v=1711459194">
            <div class="name">Amy **</div>
          </div>
          <p class="desc">
            <span class="text">initiated a group purchase, join in and enjoy the best offer, ends in soon </span>
            <span class="time">00:00</span>
          </p>
        </div>
        <div class="btn-group-purchase">
          <span class="loader-button__text">{{ se_stts['group-purchase'] }}</span>
          <span class="loader-button__loader" hidden>
            <div class="spinner">
              <svg focusable="false" width="24" height="24" class="icon icon--spinner" viewBox="25 25 50 50">
                <circle cx="50" cy="50" r="20" fill="none" stroke="currentColor" stroke-width="5"></circle>
              </svg>
            </div>
          </span>
        </div>
      </div>
    </div>

    <div class="pay-block">
      <div class="btn-purchase">
        <span class="loader-button__text">{{ se_stts['btn-purchase'] }}</span>
        <span class="loader-button__loader" hidden>
          <div class="spinner">
            <svg focusable="false" width="24" height="24" class="icon icon--spinner" viewBox="25 25 50 50">
              <circle cx="50" cy="50" r="20" fill="none" stroke="currentColor" stroke-width="5"></circle>
            </svg>
          </div>
        </span>
      </div>
      <div class="more-payment">
        <div class="text">More payment options</div>
        <div class="payment-methods-list">
          {% for block in se_bks %}
            {% if block.type == 'payment-list' %}
              {{-
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag: loading: 'lazy', draggable: false
              -}}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var pid = '{{ product.variants[0].id }}';
  document.addEventListener('DOMContentLoaded', function () {
    const galleryThumbs = new Swiper('.myThumbs', {
      spaceBetween: isMobile() ? 8 : 15,
      slidesPerView: 'auto',
      freeMode: true,
      watchSlidesVisibility: true,
      watchSlidesProgress: true,
      direction: isMobile() ? 'horizontal' : 'vertical',
    });
    const galleryTop = new Swiper('.myGallery', {
      spaceBetween: 10,
      pagination: {
        el: '.swiper-pagination',
      },
      thumbs: {
        swiper: galleryThumbs,
      },
    });

    //查看更多
    $(document).on('click', '.read-more', function () {
      $('.description').toggleClass('expanded');
      if ($('.description').is('.expanded')) {
        $(this).text('{{se_stts.read-more }} -');
      } else {
        $(this).text('{{se_stts.read-more }} +');
      }
    });

    // 原价商品
    $(document).on('click', '.btn-purchase', function () {
      if ($(this).attr('disabled') != 'disabled') {
        addToCart('44752575922463', $(this)[0]);
      }
    });

    // 拼团商品
    $(document).on('click', '.btn-group-purchase', function () {
      if ($(this).attr('disabled') != 'disabled') {
        addToCart(pid, $(this)[0]);
      }
    });

    // 底部置顶栏 添加购物车
    $(document).on('click', '.btn-add-cart', function () {
      if ($(this).attr('disabled') != 'disabled') {
        addToCart(pid, $(this)[0]);
      }
    });

    // 颜色切换
    $(document).on('click', '.product-components .color-swatch', function () {
      var inventory_quantity = $(this).attr('inventory_quantity');
      let _position =  $(this).attr('position');
      var thatVariant = $(this).closest('.variants-list');
      if(inventory_quantity > 0){
        $('.color-swatch-list .color-swatch__radio[name="option1"]').removeAttr('checked');
        $(this).find('.color-swatch__radio[name="option1"]').attr('checked', 'checked');
        // 修改标题
        $(this).closest('.color-block').find('.name lable').text($(this).find('.color-swatch__radio').val());
        // 获取pid
        pid = $(this).attr('id');

        // 图片跳转
        galleryTop.slideTo(_position);
      } else {
        // 没有库存
        console.log('out of stock');
        $(thatVariant).find('.product-tips').show();
        setTimeout(function(){
          $(thatVariant).find('.product-tips').fadeOut();
        }, 3000)
        galleryTop.slideTo(_position);
      }
    });

    //规格切换
    $(document).on('click', '.product-components .plug-list .item', function () {
      var list = $(this).closest('.plug-block');
      console.log(list);
      list.find('.item').removeClass('active');
      $(this).addClass('active');
      // 修改标题
      console.log($(this).attr('name'));
      list.find('.name label').text($(this).attr('name'));

      pid = $(this).attr('id');
    });

    // more payment
    $(document).on('click', '.product-components .more-payment', function () {
      $(this).find('.payment-methods-list').toggleClass('active');
    });
    randomName();
    fixBottomBar();
  });

  function startCountdown(endTime, $element,type,callback) {
    var countdownInterval = setInterval(function () {
      // 获取当前时间
      const now = new Date();
      // 计算剩余时间（毫秒）
      const difference = endTime - now;
      // 如果时间到了，清除定时器并输出结束信息
      if (difference <= 0) {
          clearInterval(countdownInterval);
          console.log("倒计时结束!");
          if (typeof callback === 'function') {
            callback();
          }
          return;
      }
      const days = Math.floor(difference / (1000 * 60 * 60 * 24));
      const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((difference % (1000 * 60)) / 1000);

      var displayMinutes = minutes < 10 ? '0' + minutes : minutes;
      var displaySeconds = seconds < 10 ? '0' + seconds : seconds;

      if(type == 1){
        var displayDays = days > 0 ? days + ':' : '';
        var displayHours = hours > 0 ? hours + ':' : '';
        var newTime = displayDays + displayHours + displayMinutes + ':' + displaySeconds + '';
        // 淡出旧时间，更新文本，然后淡入新时间
        $element.fadeOut(200, function () {
          $element.html(newTime).fadeIn(200);
        });
      }else if(type == 2){
        var displayhours = hours < 10 ? '0' + hours : hours;
        $($element).find('.countdown-hours').text(displayhours);
        $($element).find('.countdown-minutes').text(displayMinutes);
        $($element).find('.countdown-seconds').text(displaySeconds);
      }
    }, 1000);
  }
  function generateRandomName() {
    // 定义一个随机名称的长度，例如从 5 到 10 个字符
    const nameLength = Math.floor(Math.random() * 6) + 5;
    // 定义一个包含字母的字符串，用于生成名称
    const letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz';
    // 随机生成一个名称
    let name = '';
    for (let i = 0; i < nameLength; i++) {
      name += letters.charAt(Math.floor(Math.random() * letters.length));
    }
    return name;
  }


  {% comment %} 置底栏 {% endcomment %}
  function fixBottomBar() {
    $(window).scroll(function() {
      var topBar = $("#top-bar");
      if ($(this).scrollTop() > 100) {
          topBar.addClass("toolbar-fixed");
      } else {
          topBar.removeClass("toolbar-fixed");
      }
    });
  }

  function randomName() {
    var userCount = Math.floor(Math.random() * 301);
    // 随机生成用户名称，3个词左右后面跟xxx
    var userName = '';
    for (var i = 0; i < 3; i++) {
        let randomCharCode = Math.floor(Math.random() * 26) + 97;
        userName += String.fromCharCode(randomCharCode);
    }
    userName += '**';
    $('.group-sharing .user span').text(userCount);
    $('.group-sharing .winning-info .name').text(userName);
    $('.a10-product-cart-group .name lable').text(userName);
    var endTime = new Date(new Date().getTime() + 15 * 60000).getTime();

     // 倒计时
     var $countdown = $('.winning-info .time');
     startCountdown(endTime, $countdown, 1, function () {
       console.log('倒计时结束！');
       $countdown.hide();
     });

     var $countdown1 = $('.box-countdown .countdown');
     startCountdown(endTime, $countdown1, 2, function () {
      console.log('倒计时结束！');
      $countdown.hide();
    });
    setCookie('groupName', userName, 1);
    setCookie('groupTime', endTime, 1);
  }
</script>

