<style>
  .sgs-box{
    background: #fff;
    position: relative;
    z-index: 1;
}
.sgs-box .sgs-box-cont{
    position: relative;
}
.sgs-box .sgs-img{
    position: relative;
    z-index: 1;
    display: block;
    margin: 0;
    width:100%;
}
.sgs-box .mb-box{
    display: none;
}
.sgs-box .sgs-text_new{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    z-index: 2;
    max-width: 772px;
}

.sgs-box .big-box{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 3;
}

.sgs-box .big-box .container{
  position: relative;
  height: 100%;
}
.big_new-box h2.h2{
font-size: 44px;
line-height: 1.25;
margin-bottom: 26px;
max-width: 610px;
}
.big_new-box .bg_sub{
margin-bottom: 56px;
font-size: 16px;
line-height: 1.5;
max-width: 646px;
}

@media (max-width:991px) {
    .sgs-box .mb-box{
        display: block;
    }
    .sgs-box .pc-box{
        display: none;
    }
    .sgs-box .sgs-text_new{
      left: 50%;
      transform: translate(-50%,0%);
      text-align: center;
      top: 56px;
      color: #000000;
      width: 100%;
    padding: 0 40px;
    }
    .big_new-box h2.h2{
      font-size: 24px;
      line-height: 1.2;
      margin-bottom: 15px;
    }
    .big_new-box .bg_sub{
      margin-bottom: 38px;
      font-size: 14px;
      line-height: 1.5;
    }
}
</style>
<section class="section-box">
  <div class="sgs-box to-top">
      <div class="sgs-box-cont">
        {%- if section.settings.image != blank -%}
          <img loading="lazy" class="sgs-img pc-box to-opacity" width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}" {% render 'image-attributes' , image: section.settings.image %}
            alt="{{ section.settings.image.alt | escape }}">
        {%- endif -%}
        {%- if section.settings.image_m != blank -%}
          <img loading="lazy" class="sgs-img mb-box to-opacity" width="{{ section.settings.image_m.width }}"
            height="{{ section.settings.image_m.height }}" {% render 'image-attributes' , image: section.settings.image_m %}
            alt="{{ section.settings.image_m.alt | escape }}">
        {%- endif -%}
          <div class="big-box big_new-box">
            <div class="container">
              <div class="">
              <div class="sgs-text_new">
                {%- if section.settings.title != blank -%}
                  <h2 class="h2 to-top" style="transition-delay: 0.1s">{{ section.settings.title | escape }}</h2>
                {%- endif -%}
                {%- if section.settings.sub_header != blank -%}
                  <div class="bg_sub to-top" style="transition-delay: 0.2s">{{ section.settings.sub_header | escape }}</div>
                {%- endif -%}
                {%- if section.settings.image_logo != blank -%}
                  <img class="bg_sub-img pc-box to-top" src="{{ section.settings.image_logo | image_url }}" style="transition-delay: 0.3s">
                {%- endif -%}
                {%- if section.settings.image_logo_mobile != blank -%}
                  <img class="bg_sub-img mb-box to-top" src="{{ section.settings.image_logo_mobile | image_url }}" style="transition-delay: 0.3s">
                {%- endif -%}

              </div>
              </div>
            </div>
          </div>
      </div>
  </div>
</section>
{% schema %}
  {
    "name": "Background Text Extend",
    "class": "background-with-text",
    "blocks": [],
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_m",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "sub_header",
        "label": "SubHeading"
      },
      {
        "type": "image_picker",
        "id": "image_logo",
        "label": "Image Logo"
      },
      {
        "type": "image_picker",
        "id": "image_logo_mobile",
        "label": "Mobile Image Logo"
      }
    ],
    "presets": [
      {
        "name": "Background Text Extend",
        "blocks": []
      }
    ]
  }
{% endschema %}