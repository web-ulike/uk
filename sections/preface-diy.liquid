<style>
  .preface-box {
    padding: 100px 0;
    background: #f9f9f9;
    position: relative;
    z-index: 3;
  }

  .preface-box .preface-cont {
    display: flex;
    max-width: 1400px;
    margin: 0 auto;
  }

  .preface-box .preface-left {
    width: 43.6%;
    border-right: 1px solid #e4e4e4;
    padding-right: 30px;
  }

  .preface-box.contact-diy .preface-left {
    border:0;
  }

  .preface-box.contact-diy .container{
    max-width: 1400px;
  }

  .preface-box .preface-title {
    font-size: 40px;
    font-family: var(--heading-font-family);
    color: #000;
    line-height: 1.2;
    max-width: 390px;
  }
  .preface-box .preface-title p{
    margin:0;
  }
  .preface-box .preface-right {
    flex: 1;
    font-size: 25px;
    color: #525252;
    line-height: 1.8;
    padding-left: 118px;
  }

  .preface-box.contact-diy .preface-right{
    font-size: 20px;
  }

  .preface-box .preface-right p {
    margin: 0;
  }

  .shipping-policy-box .preface-right{
    color:#595959;
    font-size:16px;
    line-height: 1.5;
  }
  .shipping-policy-box .preface-cont {
    max-width: 1600px;
  }
  .shipping-policy-box .preface-left {
    width:30%;
  }
  @media(max-width: 1300px) {
    .preface-box .preface-right {
      padding-left: 60px;
    }
    .preface-box .preface-title {
      max-width: none;
    }
  }

  @media(max-width: 991px) {
    .preface-box {
      padding: 50px 0;
    }
    .preface-box .preface-cont {
      flex-direction: column;
    }
    .preface-box .preface-left ,.shipping-policy-box .preface-left {
      width: 100%;
      border: 0;
      padding: 0;
    }
    .preface-box .preface-title {
      font-size: 28px;
    }
    .preface-box .preface-right {
      padding: 0;
      margin-top: 20px;
      font-size: 14px;
      line-height: 1.4;
    }
    .shipping-policy-box{
      background:#f9f9f9 !important;
    }
  }
</style>
<section class="section-box">
  <div class="preface-box {{ section.settings.custom_cls }}" style="background:{{ section.settings.background }};">
    <div class="container">
      <div class="preface-cont">
        <div class="preface-left">
          <div class="preface-title text-top">{{ section.settings.title }}</div>
        </div>
        <div class="preface-right text-top">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "preface-diy",
    "class": "preface-diy",
    "blocks": [],
    "settings": [
      {
        "type": "richtext",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "custom_cls",
        "label": "Custom Class"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#f9f9f9"
      }
    ],
    "presets": [
      {
        "name": "preface-diy",
        "blocks": []
      }
    ]
  }
{% endschema %}