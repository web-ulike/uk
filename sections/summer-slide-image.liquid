<style>
             .section-{{ section.id }}-padding {
              padding-top: calc({{ section.settings.padding_top }}px);
              padding-bottom: calc({{ section.settings.padding_bottom }}px);
            }
            @media screen and (max-width: 768px){
            .section-{{ section.id }}-padding {
              padding-top: calc({{ section.settings.mobile_padding_top }}px);
              padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px);
            }
          }
          .summer_slide-img-container {
            width: 100%;
            max-width: 1576px;
            margin-left: auto;
            margin-right: auto;
            padding-left: var(--container-gutter);
            padding-right: var(--container-gutter);
            --container-outer-margin: 0px;
          }
          .summer_slide-box {
            display: flex;
        }
          .summer_slide-left {
            flex-basis: 50%;
            padding-right: 210px;
        }
          .summer_slide-right {
            flex-basis: 50%;
        }
        .summer_slide-left h2{
          color:  #190A0A;
          font-size: 48px;
          font-style: normal;
          font-weight: 380;
          line-height: 120%;
          margin-bottom: 64px;
        }
        .summer_slide-top{
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 24px 0px;
          cursor: pointer;
        }
        .summer_slide-list {
          border-bottom: 1px solid #86868B;
         }
        .summer_slide-top h3{
          color:#190A0A;
          leading-trim: both;
          text-edge: cap;
          font-size: 28px;
          font-style: normal;
          font-weight: 380;
          line-height: normal;
          }
         .summer_slide-bt{
         color: #190A0A;
      font-size: 18px;
      font-style: normal;
      font-weight: 300;
      line-height: 150%;
        padding-bottom: 67px;
          display: none;
          }
      .summer_slide-list .summer_slide-top svg{
        transition: all 0.3s;
      }
      .summer_slide-list.is-active .summer_slide-top svg{
            transform: rotate(180deg);
      }
      .summer_slide-left .summer_slide-list:nth-of-type(1) .summer_slide-bt{
      display: block;
    }
    .summer_slide-right .summer_slide-pic{
       display: none;
    }
    .summer_slide-right .summer_slide-pic:nth-of-type(1){
      display: block;
    }
  .summer_slide-bt .summer_slide-img{
    display: none;
    margin-top: 30px;
  }
          @media screen and (max-width: 1200px) {
          }
          @media screen and (max-width: 992px) {
          }
          @media screen and (max-width: 767px) {
            .summer_slide-box {
      flex-direction: column;
  }
       .summer_slide-left {
      flex-basis: 100%;
      padding-right: 0px;
  }
            .summer_slide-right {
      flex-basis: 100%;
              display: none;
  }
            .summer_slide-left h2{
              font-size: 26px;
              margin-bottom:15px;
            }
            .summer_slide-top h3{
               font-size: 20px;
            }
            .summer_slide-bt{
              font-size: 14px;
                  padding-bottom: 30px;
            }
             .summer_slide-bt .summer_slide-img{
    display: block;
  }
          }
</style>
<section>
  <div class="section-{{ section.id }}-padding summer-slide-img">
    <div class="summer_slide-img-container">
      <div class="summer_slide-box">
        <div class="summer_slide-left">
          <h2 class="to-top" style="transition-delay: 0.1s;">{{ section.settings.tle }}</h2>
          {%- for block in section.blocks -%}
            <div
              class="summer_slide-list to-top{% if forloop.index == 1 %} is-active{% endif %}"
              data-index="{{  forloop.index }}"
              style="transition-delay: 0.{{  forloop.index }}s;"
            >
              <div class="summer_slide-top">
                <h3>{{ block.settings.tle }}</h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="21" height="12" viewBox="0 0 21 12" fill="none">
                  <path d="M3.2168 3.29102L11.2168 10.291L18.2168 3.29102" stroke="#86868B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="summer_slide-bt">
                <div class="summer_slide-bt-txt">
                  {{ block.settings.sub_tle }}
                </div>
                {%- if block.settings.image_mobile -%}
                  <img src="{{ block.settings.image_mobile | image_url }}" class="summer_slide-img">
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="summer_slide-right to-top" style="transition-delay: 0.6s;">
          {%- for block in section.blocks -%}
            <picture class="summer_slide-pic">
              {%- if block.settings.image_mobile -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ block.settings.image_mobile | image_url: width: '400x' }} 400w, {{ block.settings.image_mobile | image_url: width: '600x' }} 600w, {{ block.settings.image_mobile | image_url: width: '800x' }} 800w, {{ block.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ block.settings.image_mobile.width }}"
                  height="{{ block.settings.image_mobile.height }}"
                >
              {%- endif -%}
              {%- if block.settings.image -%}
                {{-
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'eager',
                    sizes: '100vw',
                    widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                    class: ''
                -}}
              {%- endif -%}
            </picture>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  $('html').on('click', '.summer_slide-box .summer_slide-top', function () {
       let $this = $(this);
       $this.siblings('.summer_slide-bt').slideToggle();
       $this
         .parents('.summer_slide-list')
         .toggleClass('is-active')
         .siblings('.summer_slide-list')
         .removeClass('is-active')
         .find('.summer_slide-bt')
         .slideUp();

    let index = $this.parents('.summer_slide-list').data('index');
      console.log('Data Index:', index);
      $this.parents('.summer_slide-list').parents('.summer_slide-left').siblings('.summer_slide-right').find('.summer_slide-pic').hide();
      $this.parents('.summer_slide-list').parents('.summer_slide-left').siblings('.summer_slide-right').find('.summer_slide-pic').eq(index-1).show();
     });
</script>
{% schema %}
{
  "name": "Summer Slide Images",
  "class": "shopify-section--summer-slide-img",
  "settings": [
    {
      "type": "richtext",
      "id": "tle",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    },
      {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
     {
        "type": "item",
        "name": "item",
        "settings": [
           {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
           {
      "type": "text",
      "id": "tle",
      "label": "Title"
    },
           {
      "type": "text",
      "id": "sub_tle",
      "label": "subTitle"
    }
        ]
      }
  ],
  "presets": [
    {
      "name": "Summer Slide Images"
    }
  ]
}
{% endschema %}
