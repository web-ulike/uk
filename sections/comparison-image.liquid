<style>
.comparison-image{
  position: relative;
}

.comparison-image .img{
  width: 100%;
  position: relative;
  z-index: 1;
}

.comparison-image .mb-box{
  display: none;
}

.comparison-image .comparison-image-cont{
  position: absolute;
  top: 34.1%;
  right: 7.5%;
  max-width: 35.67%;
  z-index: 2;
}

.comparison-image .comparison-image-sub{
  color:#6C6AB4;
  font-size: 20px;
  line-height: 1.2;
}

.comparison-image .comparison-image-title{
  color: #190A0A;
  font-size: 48px;
  line-height: 1.2;
  margin-top: 14px;
}

.comparison-image .comparison-image-p{
  color: #3F3636;
  font-size: 16px;
  line-height: 1.5;
  margin-top: 25px;
}

.comparison-image .comparison-image-btn{
  position: absolute;
  z-index: 3;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  border: 1px solid #fff;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.comparison-image .comparison-image-btn svg{
  display: block;
}

.comparison-image .comparison-image-btn::after,
.comparison-image .comparison-image-btn:before {
  content: "";
  position: absolute;
  display: block;
  width: 160%;
  height: 160%;
  border: 1px solid #fff;
  border-radius: 50%;
  animation: bounce-circle 1.8s infinite;
  box-sizing: border-box;
  left: -30%;
  top: -30%;
  pointer-events: none;
}

.comparison-image .comparison-image-btn::after{
  animation-delay: 400ms;
}

.comparison-image .comparison-image-btn:hover:after,
.comparison-image .comparison-image-btn:hover:before{
  display: none;
}

@keyframes bounce-circle {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }

  20% {
    opacity: 1;
  }

  80%,
  100% {
    opacity: 0;
    transform: scale(1.3);
  }
}

.comparison-image .comparison-image-btn-left{
  left: 48%;
  top: 59.43%;
}
.comparison-image .comparison-image-btn-right{
  left: 82.24%;
  top: 34.51%;
}

.comparison-image-product .comparison-image-cont{
  max-width: 29.43%;
  right: auto;
  left: 8.75%;
  top: 31.43%;
}

.comparison-image-product .comparison-image-title{
  font-size: 44px;
}

@media (max-width:1700px) {
  .comparison-image .comparison-image-title{
    font-size: 38px;
  }
}


@media (max-width:1500px) {
  .comparison-image .comparison-image-cont{
    right: 0;
    max-width: 42.67%;
  }
  .comparison-image-product .comparison-image-cont{
    left: 0;
  }
}

@media (max-width:1300px) {
  .comparison-image .comparison-image-title{
    font-size: 30px;
    margin-top: 10px;
  }
  .comparison-image .comparison-image-sub{
    font-size: 16px;
  }
  .comparison-image .comparison-image-p{
    font-size: 14px;
    margin-top: 15px;
  }
}


@media (max-width:991px) {
  .comparison-image .pc-box {
    display: none;
  }
  .comparison-image .mb-box {
    display: block;
  }
  .comparison-image .comparison-image-title{
    font-size: 24px;
  }
  .comparison-image .comparison-image-sub{
    margin-top: 7px;
  }
  .comparison-image .comparison-image-p{

    margin-top: 20px;
  }
  .comparison-image .comparison-image-cont{
    width: 100%;
    right: auto;
    left: 0;
    top: 60px;
    max-width: none;
  }
  .comparison-image .comparison-image-btn{
    width: 29px;
    height: 29px;
  }
  .comparison-image .comparison-image-btn-left{
    left: 18.67%;
    top: auto;
    bottom: 21.19%;
  }
  .comparison-image .comparison-image-btn-right{
    right: 18.67%;
    left: auto;
    top: auto;
    bottom: 35.93%;
  }
}
</style>

<section class="section-box">
  <div class="comparison-image to-top {{ section.settings.text }}">
