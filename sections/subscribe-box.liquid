<style>
.subscribe-box {
  padding: 50px 0;
  
}

.subscribe-box .subscribe-box-cont {
  padding: 60px 120px;
  display: flex;
  align-items: center;
  gap: 40px;
  overflow: hidden;
  background: linear-gradient(180deg, #F7F6FF 0%, #E9E5FF 100%);
  position: relative;
  z-index: 1;
}

.subscribe-box .img-bg{
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  object-fit: cover;
  z-index: 0;
}

.subscribe-box .subscribe-box-img {
  width: 45%;
  position: relative;
  z-index: 1;
  margin-bottom: -19%;
}

.subscribe-box .j-img {
  width: 100%;
  position: relative;
  z-index: 2;
  animation: gs 15s linear infinite;
}

.subscribe-box .g-img {
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200%;
  max-width: none;
}

@keyframes gs {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.subscribe-box .s-img {
  width: 100%;
  position: absolute;
  z-index: 3;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  
}

@keyframes gj {
  0% {
    transform: translate(0%, 0%);
  }
  25% {
    transform: translate(-15%, 15%);
  }
  75% {
    transform: translate(15%, -15%);
  }
  100% {
    transform: translate(0%, 0%);
  }
}

.subscribe-box .subscribe-box-text {
  flex: 1;
  position: relative;
  z-index: 2;
  color: #000;
}

.subscribe-box .subscribe-box-title {
  font-size: 44px;
  line-height: 1.3;
  font-family: var(--heading-font-family);
}
.subscribe-box .subscribe-box-title p{
  margin:0;
}
.subscribe-box .subscribe-box-submit {
  max-width: 470px;
  margin-top: 25px;
}

.subscribe-box .subscribe-box-sub {
  font-size: 20px;
  line-height: 1.2;
}

.subscribe-box .subscribe-box-input {
  width: 100%;
  height: 50px;
  border: 0;
  background: #fff;
  font-size: 16px;
  margin-top: 30px;
  padding:0 30px;
  outline: 0;
}

.subscribe-box .subscribe-box-btn {
  width:fit-content;
  height: 47px;
  font-size: 20px;
  color: #fff;
  background: #e0004d;
  font-family: var(--heading-font-family);
  margin-top: 10px;
  cursor: pointer;
  padding:0 39px;
}

.subscribe-box .subscribe-box-btn.disable-box{
  pointer-events: none;
  background: #eee;
}

.subscribe-box .subscribe-box-link{
    color:#3F3636;
    font-size:12px;
    margin-top:10px;
    display: flex;
    align-items: flex-start;
    gap: 8px;
    line-height:1.2;
    text-align: left;
}

.subscribe-box .link-ck {
  border-radius: 1.53px;
  border: 0.612px solid #3f3636;
  position: relative;
  width: 11px;
  height: 11px;
  margin-top: 1px;
  overflow: hidden;
}

.subscribe-box .link-ck span {
  position: absolute;
  display: none;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 3px;
  height: 6px;
  border-bottom: 1px solid #3f3636;
  border-right: 1px solid #3f3636;
  transform: translate(-50%, -50%) rotate(45deg);
  margin-top: -1px;
}

.subscribe-box .link-ck input {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  margin: 0;
  padding: 0;
  opacity: 0;
  cursor: pointer;
}

.link-ck input[type='checkbox']:checked + span {
  display: block;
}

.subscribe-box .subscribe-box-btn .btn-txt::before {
  color: #000;
}

.subscribe-box .subscribe-box-link p{
    margin:0;
}

.subscribe-box .subscribe-box-link a{
    text-decoration: underline;
}

{%- if section.settings.color_w -%}
  .subscribe-box .subscribe-box-text ,
  .subscribe-box .subscribe-box-link{
    color:#fff;
  }

  .subscribe-box .link-ck,
  .subscribe-box .link-ck span {
    border-color:#fff;
  }
{%- endif -%}

.subscribe-box .subscribe-box-btn::before {
  position: absolute;
  content: '';
  display: block;
  width: 200%;
  height: 200%;
  z-index: 2;
  background: linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, 0.5) 50%,
    rgba(255, 255, 255, 0) 60%
  );
  animation: scanning 3s linear infinite;
}

@keyframes scanning {
  0% {
    transform: translate(-100%, -100%);
  }

  100% {
    transform: translate(100%, 100%);
  }
}

@media (max-width: 1400px) {
 .subscribe-box .subscribe-box-cont {
    padding: 60px 40px;
 }
}

@media (max-width: 991px) {
  .subscribe-box {
    background: linear-gradient(180deg, #F7F6FF 0%, #E9E5FF 100%);
    overflow: hidden;
  }

  .subscribe-box .subscribe-box-title {
    font-size: 24px;
    text-align: center;
  }
  .subscribe-box .subscribe-box-cont {
    flex-direction: column;
    background:none;
    overflow: visible;
    padding:0;
  }
  .subscribe-box .subscribe-box-img {
    width: 100%;
    margin-bottom: -47%;
  }
  .subscribe-box .subscribe-box-submit {
    margin-top: 10px;
    font-size: 14px;
    text-align: center;
  }
  .subscribe-box .subscribe-box-input {
    margin-top: 30px;
    height: 42px;
    font-size: 12px;
    padding:0 20px;
  }
  .subscribe-box .subscribe-box-btn {
    height: 42px;
    font-size: 14px;
    text-align: center;
    width:100%;
  }
}

</style>

<section class="section-box">
  <div class="subscribe-box">
    <div class="container">
      <div class="subscribe-box-cont" style="background:{{ section.settings.bg_color }}">
        {%- if section.settings.image3 != blank or section.settings.image4 != blank -%}
          <picture>
              <source srcset="{{section.settings.image4 | image_url }}" media="(max-width: 991px)">
              <img loading="lazy"
                  class="img-bg"
                  width=""
                  height=""
                  {% render 'image-attributes', image: section.settings.image3 %}
                  alt="{{ section.settings.image3.alt | escape }}">
          </picture>
        {%- endif -%}
        <div class="subscribe-box-text">
          <div class="subscribe-box-title">{{ section.settings.text }}</div>
          <div class="subscribe-box-submit">
            <div class="subscribe-box-sub">{{ section.settings.text1 }}</div>
            {%- form 'customer', class: 'form newsletter-modal__form' -%}
                {%- if form.posted_successfully? -%}
                <script>
                    window.addEventListener('DOMContentLoaded', () => {
                    document.getElementById('{{ section.id }}').scrollIntoView();
                    });
                </script>
                <div class="form__banner banner banner--success" style="margin-top: 15px;">
                    <span class="banner__ribbon">{% render 'icon' with 'form-success' %}</span>
                    <p class="banner__content">{{ 'general.newsletter.success' | t }}</p>
                </div>
                {%- else -%}
                {%- if form.errors -%}
                    <div class="form__banner banner banner--error" style="margin-top: 15px;">
                    <span class="banner__ribbon">{% render 'icon' with 'form-error' %}</span>
                    <p class="banner__content">{{ form.errors.messages.email }}</p>
                    </div>
                {%- endif -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    {%- if section.settings.text3 != blank -%}
                        <input
                            type="email"
                            id="newsletter[{{ section.id }}][contact][email]"
                            name="contact[email]"
                            placeholder="{{ section.settings.text3 }}"
                            class="subscribe-box-input"
                            required
                            >
                    {%- endif -%}
                    {%- if section.settings.link_name != blank -%}
                    <div class="subscribe-box-link">
                        <div class="link-ck">
                            <input type="checkbox">
                            <span></span>
                        </div>
                        <div class="link-txt">
                            {{ section.settings.link_name }}
                        </div>
                    </div>
                    {%- endif -%}
                    {%- if section.settings.text2 != blank -%}
                        <button type="submit" is="loader-button" class="subscribe-box-btn btn-diy">
                            <div class="btn-txt" text="{{ section.settings.text2 }}">
                                <span>{{ section.settings.text2 }}</span>
                            </div>
                        </button>
                    {%- endif -%}
                {%- endif -%}
            {%- endform -%}
          </div>
        </div>
        <div class="subscribe-box-img">
          {%- if section.settings.image != blank -%}
            <img loading="lazy" class="j-img" width="" height="" src="{{ section.settings.image | image_url }}">
          {%- endif -%}
          {%- if section.settings.image1 != blank -%}
            <img loading="lazy" class="g-img" width="" height="" src="{{ section.settings.image1 | image_url }}">
          {%- endif -%}
          {%- if section.settings.image2 != blank -%}
            <img loading="lazy" class="s-img" width="" height="" src="{{ section.settings.image2 | image_url }}">
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "subscribe-box",
  "settings": [
    {
      "type": "checkbox",
      "id": "color_w",
      "label": "文字白色",
      "default":false
    },
    {
      "type": "color_background",
      "id": "bg_color",
      "label": "背景颜色"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "背景"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "背景 M"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "券"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "光"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "标题"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "副标题"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "按钮文案"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "输入框提示文案"
    },
    {
      "type": "text",
      "id": "text4",
      "label": "订阅标签"
    },
    {
      "type": "richtext",
      "id": "link_name",
      "label": "规则文案"
    }
  ],
  "presets": [
    {
      "name": "subscribe-box"
    }
  ]
}
{% endschema %}
