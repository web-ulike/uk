<style>
.a2-p-md4 {
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.a2-p-md4 .img {
  position: relative;
  z-index: 1;
  width: 100%;
}

.a2-p-md4 .a2-p-md4-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  padding-top: 5.2vw;
}

.a2-p-md4 .a2-p-md4-cont {
  position: relative;
  z-index: 1;
  max-width: 540px;
}

.a2-p-md4 .a2-p-md4-h3 {
  color: #000;
  font-size: 48px;
  line-height: 1.1;
  margin: 0;
  margin-bottom: 20px;
  font-weight: normal;
}

.a2-p-md4 .a2-p-md4-p {
  color: #3f3636;
  font-size: 18px;
  line-height: 1.3;
}

.a2-p-md4 .a2-p-md4-bottom {
  margin-top: 55px;
}

.a2-p-md4 .icon-img {
  width: 500px;
}

.a2-p-md4 .a2-p-md4-msg {
  color: #000;
  font-size: 20px;
  line-height: 1.1;
  margin-top: 16px;
}

@media (max-width: 1300px) {
  .a2-p-md4 .a2-p-md4-cont {
    width: 35.5%;
  }

  .a2-p-md4 .a2-p-md4-h3 {
    font-size: 35px;
  }

  .a2-p-md4 .a2-p-md4-p {
    font-size: 14px;
  }

  .a2-p-md4 .a2-p-md4-bottom {
    margin-top: 30px;
  }

  .a2-p-md4 .a2-p-md4-msg {
    font-size: 16px;
  }
}

@media (max-width: 991px) {
  .a2-p-md4 .a2-p-md4-text {
    padding: 50px 0 30px 0;
  }

  .a2-p-md4 .container,
  .a2-p-md4 .a2-p-md4-cont {
    height: 100%;
    width: 100%;
    max-width: none;
  }

  .a2-p-md4 .a2-p-md4-cont {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .a2-p-md4 .a2-p-md4-bottom {
    background: #fff;
    padding: 11px;
  }
  .a2-p-md4 .icon-img {
    width: 100%;
  }
  .a2-p-md4 .a2-p-md4-msg {
    font-size: 12px;
    margin-top: 10px;
  }

  .a2-p-md4 .a2-p-md4-h3 {
    font-size: 24px;
    max-width: 235px;
    margin-bottom: 10px;
  }
  .a2-p-md4 .a2-p-md4-p {
    font-size: 12px;
    width: 145px;
  }
}
</style>
<section class="section-box">
    <div class="a2-p-md4">
        {%- if section.settings.image != blank or section.settings.image1 != blank -%}
            <picture>
            <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
            <img loading="lazy"
                class="img"
                width=""
                height=""
                {% render 'image-attributes', image: section.settings.image %}
                alt="{{ section.settings.image.alt | escape }}">
            </picture>
        {%- endif -%}
        <div class="a2-p-md4-text">
        <div class="container">
            <div class="a2-p-md4-cont">
            <div>
                {%- if section.settings.text != blank -%}
                    <h3 class="a2-p-md4-h3">{{ section.settings.text }}</h3>
                {%- endif -%}
                {%- if section.settings.text1 != blank -%}
                     <div class="a2-p-md4-p">{{ section.settings.text1 }}</div>
                {%- endif -%}
            </div>
            <div class="a2-p-md4-bottom">
                {%- if section.settings.image2 != blank or section.settings.image3 != blank -%}
                    <picture>
                    <source srcset="{{section.settings.image3 | image_url }}" media="(max-width: 991px)">
                    <img loading="lazy"
                        class="icon-img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: section.settings.image2 %}
                        alt="{{ section.settings.image2.alt | escape }}">
                    </picture>
                {%- endif -%}
                {%- if section.settings.text2 != blank -%}
                    <div class="a2-p-md4-msg">{{ section.settings.text2 }}</div>
                {%- endif -%}
            </div>
            </div>
        </div>
        </div>
    </div>
</section>
{% schema %}
{
  "name": "a2-p-md4",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "image_picker",
        "id": "image1",
        "label": "M Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
        "type": "image_picker",
        "id": "image2",
        "label": "Icon"
    },
    {
        "type": "image_picker",
        "id": "image3",
        "label": "M Icon"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "a2-p-md4",
      "blocks": []
    }
  ]
}
{% endschema %}
