<style>
.add-support {
  padding-top: 100px;
}

.add-support .add-support-title {
  color: #000;
  font-size: 60px;
  font-family: var(--heading-font-family);
  line-height: 1.2;
  font-weight: normal;
  max-width: 730px;
  margin: 0;
  margin: 0 auto;
  text-align: center;
}

.add-support .add-support-list {
  display: flex;
  margin-top: 70px;
  border-top: 1px solid #000;
  border-bottom: 1px solid #000;
}

.add-support .add-support-item {
  position: relative;
  flex: 1;
}
.add-support .add-support-item:first-child {
  border-right: 1px solid #000;
}
.add-support .add-support-item .img {
  display: block;
  width: 100%;
  position: relative;
  z-index: 0;
}

.add-support .add-support-text {
  position: absolute;
  width: 100%;
  padding: 60px;
  left: 0;
  bottom: 0;
  z-index: 2;
  color: #fff;
}

.add-support .add-support-text-title {
  font-size: 40px;
  line-height: 1.2;
  font-family: var(--heading-font-family);
  font-weight: normal;
  margin: 0;
}

.add-support .add-support-p {
  font-size: 16px;
  line-height: 1.2;
  margin: 0;
  margin-top: 10px;
  max-width: 450px;
}

.add-support .add-support-btn {
  width: 180px;
  height: 46px;
  font-size: 14px;
  color: #fff;
  background: #000;
  border-radius: 46px;
  border: 1.5px solid #000;
  cursor: pointer;
  margin-top: 30px;
}

.add-support .add-support-btn .btn-txt::before {
  color: #000;
}

@media (max-width: 1400px) {
  .add-support .add-support-text {
    padding: 30px;
  }
  .add-support .add-support-text-title {
    font-size: 30px;
  }
  .add-support .add-support-p {
    font-size: 14px;
  }
  .add-support .add-support-btn {
    margin-top: 20px;
  }
}

@media (max-width: 991px) {
  .add-support {
    padding-top: 50px;
  }
  .add-support .add-support-title {
    font-size: 28px;
  }
  .add-support .add-support-list {
    margin-top: 30px;
    flex-direction: column;
  }
  .add-support .add-support-item:first-child {
    border-right: 0;
    border-bottom: 1px solid #000;
  }
  .add-support .add-support-text {
    padding: 24px;
  }
  .add-support .add-support-text-title {
    font-size: 20px;
  }
  .add-support .add-support-p {
    font-size: 12px;
    margin-top: 5px;
  }
  .add-support .add-support-btn {
    margin-top: 10px;
    font-size: 12px;
    height: 40px;
    width: 140px;
  }
}
</style>
<section class="section-box">
  <div class="add-support">
    <div class="container">
      {%- if section.settings.text != blank -%}
        <h3 class="add-support-title">{{ section.settings.text }}</h3>
      {%- endif -%}
    </div>
    <div class="add-support-list">
      {%- for block in section.blocks -%}
        <div class="add-support-item">
          {%- if block.settings.image != blank or block.settings.image1 != blank -%}
            <picture>
              <source srcset="{{ block.settings.image1 | image_url }}" media="(max-width: 991px)">
              <img class="img" width="" height="" src="{{ block.settings.image | image_url }}">
            </picture>
          {%- endif -%}
          <div class="add-support-text">
            {%- if block.settings.text != blank -%}
              <h3 class="add-support-text-title">{{ block.settings.text }}</h3>
            {%- endif -%}
            {%- if block.settings.text1 != blank -%}
              <p class="add-support-p">{{ block.settings.text1 }}</p>
            {%- endif -%}
            {%- if block.settings.btn_txt != blank -%}
              <a href="{{ block.settings.link }}" class="add-support-btn btn-diy">
                <div class="btn-txt" text="{{ block.settings.btn_txt }}">
                  <span>{{ block.settings.btn_txt }}</span>
                </div>
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%} 
    </div>
  </div>
</section>
{% schema %}
{
  "name": "add-support",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Image M"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "btn_txt",
          "label": "Button text",
          "default":"LEARN MORE"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "add-support",
      "blocks": []
    }
  ]
}
{% endschema %}
