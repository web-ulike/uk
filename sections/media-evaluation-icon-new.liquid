<script>
// --- 1. 基础拖动检测 (通用aaaa) ---
function enableDrag(el, onMove, onEnd) {
    let startX = 0, startY = 0, isDragging = false;

    const start = (e) => {
        startX = e.touches ? e.touches[0].clientX : e.clientX;
        startY = e.touches ? e.touches[0].clientY : e.clientY;
        isDragging = true;
    };

    const move = (e) => {
        if (!isDragging) return;
        const x = e.touches ? e.touches[0].clientX : e.clientX;
        const y = e.touches ? e.touches[0].clientY : e.clientY;
        const dx = x - startX;
        const dy = y - startY;

        // 移动端防误触：垂直移动大于水平移动时不触发
        if (e.touches && Math.abs(dy) > Math.abs(dx)) return;
        if (e.touches && e.cancelable) e.preventDefault();

        onMove(dx); // 传输位移差值
        
        startX = x; 
        startY = y;
    };

    const end = () => { isDragging = false; onEnd && onEnd(); };

    el.addEventListener('touchstart', start, { passive: true });
    el.addEventListener('touchmove', move, { passive: false });
    el.addEventListener('touchend', end);
    
    el.addEventListener('mousedown', (e) => { e.preventDefault(); start(e); });
    document.addEventListener('mousemove', move);
    document.addEventListener('mouseup', end);
}

// --- 2. 业务逻辑 ---
function marqueeInit() {
    const box = document.querySelector('.media-evaluation-box');
    const ul = box.querySelector('.media-evaluation-list');
    const bar = box.querySelector('.media-evaluation-scrollbar-container');
    const thumb = box.querySelector('.media-evaluation-scrollbar-thumb');
    
    if (!box || !ul) return;

    const isMobile = window.innerWidth < 992;
    let left = 0;
    let timer = null;
    
    // 1. 计算宽度
    let contentWidth = 0;
    if (!isMobile) {
        ul.innerHTML += ul.innerHTML + ul.innerHTML; // PC端克隆
    }
    
    Array.from(ul.children).forEach(item => {
        contentWidth += item.offsetWidth + parseInt(getComputedStyle(item).marginRight || 0);
    });
    ul.style.width = contentWidth + "px";

    // 2. 功能分支
    if (!isMobile) {
        // === PC端：自动滚动 (保持不变) ===
        const run = () => {
            left -= 1;
            if (Math.abs(left) >= contentWidth / 3) left = 0;
            ul.style.transform = `translateX(${left}px)`;
        };
        timer = setInterval(run, 10);
        
        box.onmouseenter = () => clearInterval(timer);
        box.onmouseleave = () => timer = setInterval(run, 10);

        enableDrag(ul, (dx) => {
            left += dx;
            ul.style.transform = `translateX(${left}px)`;
        });

    } else {
        // === 移动端：手动拖动 + 填充式进度条 ===
        const viewWidth = box.clientWidth;
        const maxScroll = contentWidth - viewWidth; // 最大滚动距离

        // 统一更新函数
        const update = (newLeft) => {
            // 限制边界 (0 到 -maxScroll)
            if (newLeft > 0) newLeft = 0;
            if (newLeft < -maxScroll) newLeft = -maxScroll;
            
            left = newLeft;
            ul.style.transform = `translateX(${left}px)`;
            
            // --- 核心修改：进度条"加满"逻辑 ---
            if (maxScroll > 0 && thumb) {
                // 计算当前滚动了百分之多少 (0.0 - 1.0)
                const percent = Math.abs(left) / maxScroll; 
                // 设置宽度百分比，限制在 0-100%
                thumb.style.width = Math.min(100, percent * 100) + '%';
                // 确保没有位移，固定在左侧
                thumb.style.transform = 'none'; 
            }
        };

        // 绑定列表拖动
        enableDrag(ul, (dx) => update(left + dx));
        
        // 绑定进度条拖动 (支持拖拽进度条来滚动)
        if (thumb && bar) {
            enableDrag(bar, (dx) => { // 监听整个 bar 的拖动会更灵敏
                // 计算拖动了 bar 总宽度的多少比例
                const barWidth = bar.clientWidth;
                if (barWidth > 0) {
                    const movePercent = dx / barWidth; 
                    // 反推列表应该移动多少像素 (-movePercent * maxScroll)
                    // 注意方向：向右拖动进度条 -> 列表向左滚 -> left 减小
                    update(left - (movePercent * maxScroll));
                }
            });
        }
    }
}

document.addEventListener('DOMContentLoaded', marqueeInit);
</script>

