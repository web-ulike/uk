<style>
  .join-us {
      padding: 90px 0 45px 0;
      overflow: hidden;
  }

  .join-us .join-us-h3 {
      color: #190A0A;
      text-align: center;
      font-size: 44px;
      line-height: 1.25;
      font-family: var(--heading-font-family);
      font-weight: normal;
      margin: 0;
      margin-bottom: 15px;
  }

  .join-us .join-us-sub {
      color: #3F3636;
      text-align: center;
      font-size: 16px;
      line-height: 1.5;
  }

  .join-us .join-us-sub p {
      margin: 0;
  }

  .join-us .join-us-sub a {
      color: #408BFA;
      text-decoration: underline;
  }

  .join-us .join-us-swiper {
      margin-top: 70px;
  }

  .join-us .join-us-list {
      display: flex;
      /* gap: 20px; */
  }

  .join-us .join-us-item {
      width: calc(25% - 15px);
      min-width: 268px;
      flex-shrink: 0;
  }

  .join-us .img {
      width: 90px;
      margin-bottom: 30px;
  }

  .join-us .join-us-item-sub {
      color: #E0004D;
      font-size: 20px;
      line-height: 1;
      margin-bottom: 20px;
  }

  .join-us .join-us-item-h3 {
      color: #190A0A;
      font-size: 22px;
      line-height: 1;
      font-weight: normal;
      font-family: var(--heading-font-family);
      margin: 0;
      margin-bottom: 30px;
  }

  .join-us .join-us-item-p {
      color: #190A0A;
      font-size: 16px;
      line-height: 1.5;
  }

  .join-us .join-us-item-p p {
      margin: 0;
  }

  .join-us .join-us-item-p ul{
    padding-left:16px;
  }

  .join-us .join-us-icon-list {
      display: flex;
      gap: 20px;
      margin-top: 20px;
  }

  .join-us .join-us-icon-item {
      width: 30px;
  }

  .join-us .join-us-icon-item .icon-img {
      width: 100%;
      height: auto;
      display: block;
  }

  @media (max-width: 1400px) {
      .join-us .join-us-swiper {
      margin-top: 50px;
      }

      .join-us .img {
      width: 80px;
      margin-bottom: 20px;
      }

      .join-us .join-us-item-sub {
      font-size: 18px;
      margin-bottom: 15px;
      }

      .join-us .join-us-item-h3 {
      font-size: 18px;
      margin-bottom: 20px;
      }

      .join-us .join-us-item-p {
      font-size: 14px;
      }

  }

  @media (max-width:991px) {
      .join-us {
      padding: 50px 0 34px 0;
      }

      .join-us .join-us-h3 {
      font-size: 24px;
      text-align: left;
      margin-bottom: 10px;
      }

      .join-us .join-us-sub {
      font-size: 12px;
      text-align: left;
      }

      .join-us .join-us-swiper {
      margin-top: 35px;
      }

      .join-us .img {
      width: 70px;
      margin-bottom: 27px;
      }

      .join-us .join-us-item-sub {
      font-size: 14px;
      margin-bottom: 16px;
      }

      .join-us .join-us-item-h3 {
      font-size: 16px;
      margin-bottom: 22px;
      }

      .join-us .join-us-item-p {
      font-size: 12px;
      }
  }
</style>
<section class="section-box">
  <div class="join-us">
    <div class="container">
      {%- if section.settings.text3 != blank -%}
        <h3 class="join-us-h3">{{ section.settings.text3 }}</h3>
      {%- endif -%}
      {%- if section.settings.text4 != blank -%}
        <div class="join-us-sub">{{ section.settings.text4 }}</div>
      {%- endif -%}
      <div class="join-us-swiper">
        <div class="join-us-list swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="join-us-item swiper-slide">
              {%- if block.settings.image != blank -%}
                <img
                  loading="lazy"
                  class="img"
                  width=""
                  height=""
                  {% render 'image-attributes', image: block.settings.image %}
                  alt="{{ block.settings.image.alt | escape }}"
                >
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="join-us-item-sub">{{ block.settings.text }}</div>
              {%- endif -%}
              {%- if block.settings.text1 != blank -%}
                <h3 class="join-us-item-h3">{{ block.settings.text1 }}</h3>
              {%- endif -%}
              {%- if block.settings.text2 != blank -%}
                <div class="join-us-item-p">
                  {{ block.settings.text2 }}
                </div>
              {%- endif -%}
              {%- if block.settings.image1 != blank
                or block.settings.image2 != blank
                or block.settings.image3 != blank
                or block.settings.image4 != blank
              -%}
                <div class="join-us-icon-list">
                  {%- if block.settings.image1 != blank -%}
                    <a href="{{ block.settings.link }}" class="join-us-icon-item">
                      <img
                        loading="lazy"
                        class="icon-img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image1 %}
                        alt="{{ block.settings.image1.alt | escape }}"
                        >
                    </a>
                  {%- endif -%}
                  {%- if block.settings.image2 != blank -%}
                    <a href="{{ block.settings.link1 }}" class="join-us-icon-item">
                      <img
                        loading="lazy"
                        class="icon-img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image2 %}
                        alt="{{ block.settings.image2.alt | escape }}"
                        >
                    </a>
                  {%- endif -%}
                  {%- if block.settings.image3 != blank -%}
                    <a href="{{ block.settings.link2 }}" class="join-us-icon-item">
                      <img
                        loading="lazy"
                        class="icon-img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image3 %}
                        alt="{{ block.settings.image3.alt | escape }}"
                        >
                    </a>
                  {%- endif -%}
                  {%- if block.settings.image4 != blank -%}
                    <a href="{{ block.settings.link3 }}" class="join-us-icon-item">
                      <img
                        loading="lazy"
                        class="icon-img"
                        width=""
                        height=""
                        {% render 'image-attributes', image: block.settings.image4 %}
                        alt="{{ block.settings.image4.alt | escape }}"
                        >
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
  {% render 'u-tc-popup' %}
</section>
<script>
    new Swiper(".join-us-swiper", {
        slidesPerView: "auto",
        spaceBetween: 20,
    });
    $('.join-us .join-us-sub a').click(function (event) {
      event.preventDefault(); // 阻止默认事件（例如链接跳转）
      $('.step-box-popup').fadeIn();
    });
</script>
