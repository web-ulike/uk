                fill="#190A0A" />
            </g>
            <defs>
                <clipPath id="clip0_4710_364">
                <rect width="30" height="22.9683" fill="white" />
                </clipPath>
            </defs>
            </svg>
        </div>
        </div>
    {%- endif -%}
  </div>
</section>
<script>
    window.onload = function () {
      let swiper = new Swiper('.ifa-swiper-cont', {
        autoplay: false,
        speed: 1000,
        spaceBetween: 20,
        autoplayDisableOnInteraction: false,
        loop: false,
        centeredSlides: false,
        slidesPerView: "auto",
        pagination: {
          el: ".ifa-swiper-pagination",
          clickable: true,
        },
        navigation: {
          nextEl: ".ifa-swiper-button-next",
          prevEl: ".ifa-swiper-button-prev",
        },
        breakpoints: {
          768: {
            slidesPerView: 2,
            spaceBetween: 50,
            centeredSlides: true,
            loop: true,
          }
        }
      });
    }
</script>
{% schema %}
{
  "name": "ifa-swiper",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "image1",
            "label": "M Image"
        },
        {
            "type": "video",
            "id": "video",
            "label": "Video",
            "info": "Replaces the external video if both are set."
        },
        {
            "type": "video",
            "id": "mobile_video",
            "label": "Mobile Video",
            "info": "Replaces the external video if both are set."
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "ifa-swiper",
      "blocks": []
    }
  ]
}
{% endschema %}
