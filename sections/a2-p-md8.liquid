<style>
.a2-p-md8 {
  padding: 100px 0;
}

.a2-p-md8 .a2-p-md8-cont {
  display: flex;
  gap: 40px;
  align-items: center;
}

.a2-p-md8 .a2-p-md8-text {
  flex: 1;
}

.a2-p-md8 .a2-p-md8-img {
  width: 50%;
}

.a2-p-md8 .img {
  width: 100%;
}

.a2-p-md8 .a2-p-md8-h3 {
  color: #000;
  font-size: 48px;
  line-height: 1.1;
  font-weight: normal;
  margin: 0;
  margin-bottom: 20px;
}

.a2-p-md8 .a2-p-md8-p {
  color: #3f3636;
  font-size: 18px;
  line-height: 1.3;
  width: 477px;
  max-width: 100%;
}

@media (max-width: 991px) {
  .a2-p-md8 {
    padding: 50px 0;
  }

  .a2-p-md8 .a2-p-md8-cont {
    flex-direction: column;
    align-items: normal;
    text-align: center;
  }

  .a2-p-md8 .a2-p-md8-h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .a2-p-md8 .a2-p-md8-p {
    font-size: 14px;
    margin: 0 auto;
  }

  .a2-p-md8 .a2-p-md8-img {
    overflow-x: scroll;
    width: 100%;
    padding-bottom: 30px;
  }

  .a2-p-md8 .a2-p-md8-img::-webkit-scrollbar {
    height: 4px; /* 横向滚动条高度 */
  }

  .a2-p-md8 .a2-p-md8-img::-webkit-scrollbar-track {
    /* background: #eee; */
  }

  .a2-p-md8 .a2-p-md8-img::-webkit-scrollbar-thumb {
    background: #190a0a;
  }

  .a2-p-md8 .img {
    width: 475px;
    max-width: none;
  }
}
</style>
<section class="section-box">
    <div class="a2-p-md8">
      <div class="container">
        <div class="a2-p-md8-cont">
          <div class="a2-p-md8-text">
            {%- if section.settings.text != blank -%}
                <h3 class="a2-p-md8-h3">
                {{ section.settings.text }}
                </h3>
            {%- endif -%}
            {%- if section.settings.text1 != blank -%}
                <div class="a2-p-md8-p">{{ section.settings.text1 }}</div>
            {%- endif -%}
          </div>
          {%- if section.settings.image != blank or section.settings.image1 != blank -%}
            <div class="a2-p-md8-img">
                <picture>
                <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
                <img loading="lazy"
                    class="img"
                    width=""
                    height=""
                    {% render 'image-attributes', image: section.settings.image %}
                    alt="{{ section.settings.image.alt | escape }}">
                </picture>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
</section>
{% schema %}
{
  "name": "a2-p-md8",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "image_picker",
        "id": "image1",
        "label": "M Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
  ],
  "presets": [
    {
      "name": "a2-p-md8",
      "blocks": []
    }
  ]
}
{% endschema %}
