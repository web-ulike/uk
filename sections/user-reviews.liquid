<style>
.user-reviews {
  padding: 80px 0;
  background: #f6f6f6;
  position: relative;
  overflow: hidden;
}

.user-reviews .user-reviews-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30px;
  margin-bottom: 50px;
}

.user-reviews .user-reviews-title {
  color: #2f2e36;
  font-size: 50px;
  font-family: var(--heading-font-family);
  line-height: 1.15;
  letter-spacing: -0.64px;
  margin: 0;
  font-weight: normal;
}

.user-reviews .user-reviews-arraw {
  display: flex;
  align-items: center;
  gap: 40px;
}

.user-reviews .user-reviews-arraw-item {
  width: 40px;
  cursor: pointer;
  outline: 0;
}

.user-reviews .swiper-button-disabled {
  opacity: 0.5;
  pointer-events: none;
}

.user-reviews .user-reviews-arraw-item svg {
  display: block;
  width: 100%;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.user-reviews .user-reviews-arraw-item:hover svg {
  background: #fff;
}

.user-reviews .user-reviews-list {
  display: flex;
  /* gap: 20px; */
}

.user-reviews .user-reviews-item {
  width: 365px;
  height: auto;
  flex-shrink: 0;
  background: #fff;
  display:flex;
  flex-direction: column;
}

.user-reviews .user-reviews-img {
  display: flex;
  gap: 6px;
  position: relative;
  padding-top: 59.89%;
  overflow: hidden;
}

.user-reviews .user-reviews-img-item {
  flex: 1;
  position: relative;
}
.user-reviews .user-reviews-img .img {
  position: absolute;
  z-index: 1;
  width: 100%;
  display: block;
  top: 0;
  left: 0;
}
.user-reviews .user-reviews-img-item .img {
  position: relative;
  z-index: 1;
  width: 100%;
  display: block;
}

.user-reviews .user-reviews-tag {
  width: 80px;
  height: 30px;
  color: #fff;
  font-size: 16px;
  line-height: 1.5;
  font-family: var(--heading-font-family);
  border-radius: 80px;
  background: #190a0a;
  backdrop-filter: blur(2px);
  position: absolute;
  left: 10px;
  bottom: 10px;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-reviews .user-reviews-tag:last-child {
  left: auto;
  right: 10px;
  background: #e0004d;
}

.user-reviews .user-reviews-img-item:last-child .user-reviews-tag {
  left: auto;
  right: 10px;
  background: #e0004d;
}

.user-reviews .user-reviews-info {
  padding: 32px 20px 8px 20px;
}

.user-reviews .user-reviews-star {
  display: flex;
  align-items: center;
  gap: 10px;
  color: #1c1c1c;
  font-size: 14px;
  line-height: 1.4;
  font-family: var(--heading-font-family);
}

.user-reviews .star-img{
  width:76px;
  display:block;
}

.user-reviews .user-reviews-h3 {
  color: #000;
  font-size: 20px;
  line-height: 1.37;
  font-family: var(--heading-font-family);
}

.user-reviews .user-reviews-p {
  color: #333;
  font-size: 13px;
  line-height: 1.7;
  margin-top: 8px;
}

.user-reviews .user-reviews-det {
  display: flex;
  align-items: center;
  gap: 12px;
  color: var(--olaplex-com-black, #000);
  font-size: 12px;
  line-height: 1.66;
  margin-top: 24px;
}

.user-reviews .user-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.user-reviews .user-reviews-product {
  border-top: 1px solid #e5e5e5;
  padding: 4px 10px 20px 0;
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-reviews .product-img {
  width: 68px;
  height: 68px;
}

.user-reviews .user-reviews-product-h3 {
  color: #000;
  font-size: 16px;
  line-height: 1.12;
  font-family: var(--heading-font-family);
  letter-spacing: 0.36px;
}

.user-reviews .user-reviews-product-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #190a0a;
  font-size: 12px;
  line-height: 1.5;
  letter-spacing: 0.36px;
  background: linear-gradient(0deg, #190a0a, #190a0a) no-repeat;
  background-size: 100% 1.5px;
  background-position: left bottom;
  transition: all 0.3s;
}

.user-reviews .user-reviews-product-link:hover {
  /* background-position: right bottom;
  background-size: 0 1.5px; */
  color: #3F3636;
  background: linear-gradient(0deg, #3F3636, #3F3636) no-repeat;
  background-size: 100% 1.5px;
  background-position: left bottom;
}

  .user-reviews .user-reviews-product-link:hover path{
    stroke:#3F3636;
  }

  .user-reviews .user-reviews-bottom{
    flex:1;
    display:flex;
    flex-direction: column;
  }

  .user-reviews .user-reviews-info{
    flex:1;
    display:flex;
    flex-direction: column;
    justify-content: space-between;
  }



@media (max-width: 991px) {
  .user-reviews {
    padding: 50px 0 66px 0;
  }
  .user-reviews .user-reviews-top {
    margin-bottom: 30px;
  }
  .user-reviews .user-reviews-title {
    font-size: 28px;
    line-height: 1.25;
  }
}

@media (max-width: 768px) {
  .user-reviews .user-reviews-item {
    width: 273px;
  }
  .user-reviews .user-reviews-tag {
    width: 60px;
    height: 22px;
    font-size: 12px;
    bottom: 7px;
    left: 7px;
  }
  .user-reviews .user-reviews-img-item:last-child .user-reviews-tag {
    right: 7px;
  }
  .user-reviews .user-reviews-arraw {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 13px;
  }
  .user-reviews .user-reviews-arraw-item {
    width: 36px;
  }
  .user-reviews .user-reviews-info {
    padding: 18px 15px 16px 15px;
  }
  .user-reviews .user-reviews-star {
    font-size: 12px;
    gap: 8px;
  }
  .user-reviews .star-img {
    width: 57px;
  }
  .user-reviews .user-reviews-h3 {
    font-size: 16px;
    line-height: 1.28;
  }
  .user-reviews .user-reviews-p {
    font-size: 14px;
    margin-top: 6px;
    line-height: 1.5;
  }
  .user-reviews .user-reviews-det {
    margin-top: 18px;
    font-size: 13px;
    gap: 9px;
  }
  .user-reviews .user-img {
    width: 30px;
    height: 30px;
  }
  .user-reviews .user-reviews-product {
    padding: 8px 8px 14px 0;
    gap: 9px;
  }
  .user-reviews .product-img {
    width: 51px;
    height: 51px;
  }
}
</style>
<section class="section-box">
  <div class="user-reviews">
    <div class="container">
      <div class="user-reviews-top">
        <h3 class="user-reviews-title">{{ section.settings.title }}</h3>
        <div class="user-reviews-arraw">
          <div class="user-reviews-arraw-item user-reviews-arraw-left">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none">
              <path fill-rule="evenodd" clip-rule="evenodd"
                d="M23.6003 33.9318L24.1054 34.4369L25.1155 33.4267L24.6104 32.9217L19.9992 28.3104L15.6526 23.9638C15.0947 23.406 14.1902 23.406 13.6323 23.9638L18.9891 29.3206L23.6003 33.9318ZM11.1003 20.4217C10.8213 20.7006 10.8213 21.1529 11.1003 21.4318C11.1942 21.5257 11.3078 21.588 11.4278 21.6187L11.4278 21.641L11.6038 21.641L11.6069 21.641L12.1421 21.641L19.4639 21.641L26.7857 21.641L28.5715 21.641C29.3605 21.641 30.0001 21.0014 30.0001 20.2125L26.7857 20.2125L13.3298 20.2125L24.6104 8.93182L25.1155 8.42674L24.1054 7.41659L23.6003 7.92166L11.1003 20.4217Z"
                fill="#190A0A" />
              <circle cx="20" cy="20.8655" r="19.2857" stroke="#190A0A" stroke-width="1.42857" />
            </svg>
          </div>
          <div class="user-reviews-arraw-item user-reviews-arraw-right">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none">
              <path fill-rule="evenodd" clip-rule="evenodd"
                d="M16.3997 7.79914L15.8946 7.29407L14.8845 8.30422L15.3896 8.8093L20.0008 13.4205L24.3474 17.7671C24.9053 18.325 25.8098 18.325 26.3677 17.7671L21.011 12.4104L16.3997 7.79914ZM28.8997 21.3093C29.1787 21.0303 29.1787 20.5781 28.8997 20.2991C28.8058 20.2052 28.6922 20.1429 28.5722 20.1122V20.0899H28.3962H28.3931H27.8579H20.5361H13.2143H11.4285C10.6395 20.0899 9.99995 20.7295 9.99995 21.5185H13.2143H26.6702L15.3896 32.7991L14.8845 33.3042L15.8946 34.3144L16.3997 33.8093L28.8997 21.3093Z"
                fill="#190A0A" />
              <circle cx="20" cy="20.8655" r="19.2857" stroke="#190A0A" stroke-width="1.42857" />
            </svg>
          </div>
        </div>
      </div>
      <div class="user-reviews-cont">
        <div class="user-reviews-list swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="user-reviews-item swiper-slide">
              <div class="user-reviews-img">
                {%- if block.settings.image != blank -%}
                  <img
                    loading="lazy"
                    class="img"
                    height=""
                    width=""
                    {% render 'image-attributes', image: block.settings.image %}
                    alt="{{ block.settings.image.alt | escape }}"
                  >
                {%- endif -%}
                {%- if section.settings.text != blank -%}
                  <div class="user-reviews-tag">
                    {{ section.settings.text }}
                  </div>
                {%- endif -%}
                {%- if section.settings.text1 != blank -%}
                  <div class="user-reviews-tag">
                    {{ section.settings.text1 }}
                  </div>
                {%- endif -%}
              </div>
              <div class="user-reviews-bottom">
                <div class="user-reviews-info">
                  <div>
                    {%- if block.settings.image2 != blank or block.settings.text -%}
                      <div class="user-reviews-star">
                        {%- if block.settings.image2 != blank -%}
                          <img
                            loading="lazy"
                            class="star-img"
                            height=""
                            width=""
                            {% render 'image-attributes', image: block.settings.image2 %}
                            alt="{{ block.settings.image2.alt | escape }}"
                          >
                        {%- endif -%}
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                    <div class="user-reviews-h3">{{ block.settings.text1 }}</div>
                    <div class="user-reviews-p">{{ block.settings.text2 }}</div>
                  </div>
                  {%- if block.settings.image3 != blank or block.settings.text3 -%}
                    <div class="user-reviews-det">
                      {%- if block.settings.image3 != blank -%}
                        <img
                          loading="lazy"
                          class="user-img"
                          height=""
                          width=""
                          {% render 'image-attributes', image: block.settings.image3 %}
                          alt="{{ block.settings.image3.alt | escape }}"
                        >
                      {%- endif -%}
                      {{ block.settings.text3 }}
                    </div>
                  {%- endif -%}
                </div>
                <div class="user-reviews-product">
                  {%- if block.settings.image4 != blank -%}
                    <img
                      loading="lazy"
                      class="product-img"
                      height=""
                      width=""
                      {% render 'image-attributes', image: block.settings.image4 %}
                      alt="{{ block.settings.image4.alt | escape }}"
                    >
                  {%- endif -%}
                  <div class="user-reviews-product-info">
                    <div class="user-reviews-product-h3">{{ block.settings.text4 }}</div>
                    {%- if block.settings.link_txt != blank -%}
                      <a class="user-reviews-product-link" href="{{ block.settings.link }}">
                        {{ block.settings.link_txt }}
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12" viewBox="0 0 14 12" fill="none">
                          <path d="M0 5.59607L13.087 5.59546" stroke="#190A0A" stroke-width="0.608696" />
                          <path d="M10.3477 2.85632L13.553 5.59606L10.3477 8.26641" stroke="#190A0A" stroke-width="0.608696"
                            stroke-linejoin="round" />
                        </svg>
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
