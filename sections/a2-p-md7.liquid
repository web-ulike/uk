<style>
.a2-p-md7 .a2-p-md7-cont {
  position: relative;
  z-index: 1;
}

.a2-p-md7 .img {
  position: relative;
  z-index: 1;
  width: 100%;
}

.a2-p-md7 .a2-p-md7-text {
  position: absolute;
  top: 50%;
  left: 11.45%;
  width: 34.87%;
  max-width: 530px;
  transform: translateY(-50%);
  text-align: center;
  z-index: 2;
}

.a2-p-md7 .a2-p-md7-p {
  color: #569ac9;
  font-size: 26px;
  line-height: 1.3;
}

.a2-p-md7 .a2-p-md7-h3 {
  color: #000;
  font-size: 48px;
  line-height: 1.1;
  margin: 0;
  font-weight: normal;
}

.a2-p-md7 .a2-p-md7-bottom {
  margin-top: 45px;
}

.a2-p-md7 .img-icon {
  width: 100%;
}

.a2-p-md7 .a2-p-md7-msg {
  color: #383838;
  font-size: 14px;
  line-height: 1.2;
  margin-top: 28px;
}

@media (max-width: 1300px) {
  .a2-p-md7 .a2-p-md7-p {
    font-size: 20px;
  }
  .a2-p-md7 .a2-p-md7-h3 {
    font-size: 35px;
  }
  .a2-p-md7 .a2-p-md7-bottom {
    margin-top: 25px;
  }
  .a2-p-md7 .a2-p-md7-msg {
    font-size: 12px;
    margin-top: 15px;
  }
}

@media (max-width: 991px) {
  .a2-p-md7 {
    overflow: hidden;
  }
  .a2-p-md7 .img {
    max-width: none;
    width: calc(100% + 48px);
    margin-left: -24px;
  }
  .a2-p-md7 .a2-p-md7-text {
    padding: 36px 0 30px 0;
    height: 100%;
    width: 100%;
    max-width: none;
    top: 0;
    left: 0;
    transform: translateY(0);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
  }
  .a2-p-md7 .a2-p-md7-p {
    font-size: 16px;
  }
  .a2-p-md7 .a2-p-md7-h3 {
    font-size: 28px;
  }
}
</style>
<section class="section-box">
    <div class="a2-p-md7">
      <div class="container">
        <div class="a2-p-md7-cont">
            {%- if section.settings.image != blank or section.settings.image1 != blank -%}
                <picture>
                <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
                <img loading="lazy"
                    class="img"
                    width=""
                    height=""
                    {% render 'image-attributes', image: section.settings.image %}
                    alt="{{ section.settings.image.alt | escape }}">
                </picture>
            {%- endif -%}
          <div class="a2-p-md7-text">
            <div class="a2-p-md7-top">
              {%- if section.settings.text != blank -%}
                    <div class="a2-p-md7-p">{{ section.settings.text }}</div>
                {%- endif -%}
                {%- if section.settings.text1 != blank -%}
                     <h3 class="a2-p-md7-h3">{{ section.settings.text1 }}</h3>
                {%- endif -%}
            </div>
            <div class="a2-p-md7-bottom">
              {%- if section.settings.image2 != blank or section.settings.image3 != blank -%}
                    <picture>
                    <source srcset="{{section.settings.image3 | image_url }}" media="(max-width: 991px)">
                    <img loading="lazy"
                        class="img-icon"
                        width=""
                        height=""
                        {% render 'image-attributes', image: section.settings.image2 %}
                        alt="{{ section.settings.image2.alt | escape }}">
                    </picture>
                {%- endif -%}
              {%- if section.settings.text2 != blank -%}
                    <div class="a2-p-md7-msg">{{ section.settings.text2 }}</div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
{% schema %}
{
  "name": "a2-p-md7",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "image_picker",
        "id": "image1",
        "label": "M Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
        "type": "image_picker",
        "id": "image2",
        "label": "Icon"
    },
    {
        "type": "image_picker",
        "id": "image3",
        "label": "M Icon"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "a2-p-md7",
      "blocks": []
    }
  ]
}
{% endschema %}
