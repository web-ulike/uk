<style>
    #shopify-section-{{ section.id }}{
      position: sticky;
      top: 80px;
      z-index: 3;
    }
    .bf-tab-box{
      background:#000;
    }
  .bf-tab-box .bf-tab-cont{
    border-bottom: 1px solid #666666;
  }

  .bf-tab-box .bf-tab-scroll{
    overflow: hidden;
  }

  .bf-tab-box .bf-tab-list{
    display: flex;
  }
  .bf-tab-box .bf-tab-item{
    flex: 1;
    text-align: center;
    color: #666;
    font-size: 24px;
    /* margin-bottom: -1px; */
    padding: 8px 0;
    cursor: pointer;
  }

  .bf-tab-box .bf-tab-item.active{
    font-family: var(--heading-font-family);
    color: #fff;
    border-bottom: 1px solid #DEB581;
  }
  .bf-2024.bf-tab-box{
    background: linear-gradient(180deg, rgba(244, 52, 90, 1) -13.5%, #b4003e 113.5%);
  }
  .bf-2024 .bf-tab-cont{
    border:0;
  }
    .bf-2024 .bf-tab-item{
      color:#fff;
      padding: 18px 0;
      cursor: url('https://cdn.shopify.com/s/files/1/0656/9079/6273/files/cu3.svg'), auto;
    }
   .bf-2024 .bf-tab-item.active{
      border:0;
     color: #FFF3D4;
     font-family: var(--text-font-family);
    }
    .chr-2024.bf-tab-box{
      background: linear-gradient(180deg, #E9EFF9 0.3%, #F3F4F7 99.48%);
    }
    .chr-2024 .bf-tab-item{
      color:#000;
      flex:none;
    }

    .chr-2024 .bf-tab-item.active{
      border:0;
      color:#e0004d;
    }

    .chr-2024 .bf-tab-cont{
      border:0;
    }
    .results-diy {
      background: #fff;
      border-top: 1px solid  #EBEBEB;
      border-bottom: 1px solid  #EBEBEB;
    }
    .results-diy .bf-tab-item{
      color: #190A0A;
      font-size:14px;
      flex:none;
      height: 65px;
      display: flex;
      align-items: center;
      border-bottom:2.5px solid transparent;
    }

    .results-diy .bf-tab-list{
      gap:clamp(0px, 3.125vw, 60px);
    }

    .results-diy .bf-tab-item.active{
      color: #190A0A;
      border-bottom:2.5px solid #86868B;
    }

    .results-diy .bf-tab-cont{
      border:0;
    }

    .new-2025.bf-tab-box{
      background: linear-gradient(0deg, #B00427 -25%, #8F1224 125%);;
    }
    .new-2025 .bf-tab-item{
      color:#fff;
    }
    .seo-diy.bf-tab-box{
      background: #F9F9F9;
    }
    .seo-diy .bf-tab-item{
      color: #000;
    }
    .seo-diy .bf-tab-item.active{
      color: #E0004D;
    }
    .seo-diy .bf-tab-cont{
      border:0;
    }
    @media (min-width:999px) {
      .chr-2024 .bf-tab-list{
        justify-content: center;
        gap: 90px;
      }
    }
  @media (max-width:999px) {
    .bf-tab-box .bf-tab-cont{
      border: 0;
    }
    .bf-tab-box .bf-tab-item{
      color: #9D9D9D;
      font-size: 16px;
      flex-shrink: 0;
      white-space: nowrap;
      padding: 8px 10px;
    }
    .seo-diy .bf-tab-item {
      color: #000;
    }
     .chr-2024 .bf-tab-item{
      color:#000;
    }
     .bf-2024 .bf-tab-item{
       color:#fff;
     }
    .bf-tab-box .bf-tab-item.active{
      color: #DEB581;
    }

    .bf-2024 .bf-tab-item.active{
       color:#FFF3D4;
     }
    .bf-tab-box .bf-tab-scroll{
      overflow-x: auto;
    }
    .bf-tab-box .bf-tab-scroll::-webkit-scrollbar {
      display: none;
    }

    .chr-2024 .bf-tab-item.active{
      color: #e0004d;
    }
    .new-2025 .bf-tab-item ,.new-2025 .bf-tab-item.active{
      color: #fff;
    }
    .results-diy  .bf-tab-item{
      color: #190A0A;
      font-size: 14px;
    }
    .results-diy  .bf-tab-item.active{
      color: #190A0A;
    }
    .seo-diy .bf-tab-item.active{
      color: #E0004D;
    }
  }
  @media (max-width:740px) {
    #shopify-section-{{ section.id }}{
      top: 61px;
    }
  }
</style>
<section class="section-box">
  <div class="bf-tab-box {{ section.settings.text }}" style="background:{{ section.settings.bg_color }};">
    <div class="container">
      <div class="bf-tab-cont">
        <div class="bf-tab-scroll">
          <div class="bf-tab-list">
            {%- for block in section.blocks -%}
              <a class="bf-tab-item" href="{{ block.settings.text1 }}">{{ block.settings.text }}</a>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "bf-tab-seo",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_background",
      "id": "bg_color",
      "label": "背景颜色"
    },
    {
      "type": "text",
      "id": "text",
      "label": "自定义Class"
    }
  ],
  "presets": [
    {
      "name": "bf-tab-seo",
      "blocks": []
    }
  ]
}
{% endschema %}
