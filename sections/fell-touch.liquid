<section class="fell_touch-box">
  <div class="fell_touch-wrapper">
    <div class="touch_txt-bix">
      <div class="tle1 tle_touch">{{ section.settings.title_1 | escape }}</div>
      <div class="tle2 tle_touch">{{ section.settings.title_2 | escape }}</div>
      <div class="fell_touch-subtle">{{ section.settings.subHeading | escape }}</div>
    </div>
    <div class="fell_touch-img">
      {%- if section.settings.product_img != blank -%}
      <img class="pt_img to-top" src="{{ section.settings.product_img | image_url }}">
      {%- endif -%}
      {%- if section.settings.light_img != blank -%}
      <img class="light_img" src="{{ section.settings.light_img | image_url }}">
      {%- endif -%}
    </div>
    <div class="touch_txt-box">
      {%- for block in section.blocks -%}
      <div class="touch_txt-list">
        <div class="touch_txt-1">{{ block.settings.scroll_tle | escape }}</div>
        <div class="touch_txt-2">{{ block.settings.scroll_txt | escape }}</div>
      </div>
      {%- endfor -%}
    </div>
    <div class="full_image-touch">
      {%- if section.settings.touch_img != blank -%}
      <img class="pt_img ptimg-mb-visibile to-top" src="{{ section.settings.touch_img | image_url }}">
      {%- endif -%}
      {%- if section.settings.mobile_touch_img != blank -%}
      <img class="pt_img ptimg-mb-show to-top" src="{{ section.settings.mobile_touch_img | image_url }}">
      {%- endif -%}
      <div class="full_touch-txtbox">
        <h4 class="to-top">{{ section.settings.touch_tle | escape }}</h4>
        <div class="full_touch-txt to-top" style="transition-delay: 0.2s">{{ section.settings.touch_subHeading | escape }}</div>
      </div>
      </div>
  </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/ScrollTrigger.min.js"></script>
<script>
  window.addEventListener("load", function () {
    let screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
    let imgtrantop,tp1,het,touchTxt,fullImg;
    // 获取图片元素
  const myImage = document.querySelector(".light_img");
  const myTouch = document.querySelectorAll(".touch_txt-list");
// 获取图片底部距离文档顶部的距离
function getImageBottomPosition() {
  const rect = myImage.getBoundingClientRect();
  const bottomPosition = rect.bottom + window.scrollY;
  return bottomPosition;
}
function getTouch() {
  let aa = getImageBottomPosition();
  myTouch.forEach(function(touch,index){
    if((parseInt(touch.getBoundingClientRect().top + window.scrollY)) < aa && (parseInt(touch.getBoundingClientRect().top + window.scrollY) + het) < aa  ){
        document.querySelectorAll('.touch_txt-list').forEach(steplist=>{
      steplist.classList.remove('active')
    })
    document.querySelectorAll('.touch_txt-list')[index].classList.add('active')
    document.querySelectorAll('.touch_txt-list .touch_txt-2')[index].classList.add('active')
    }
  })
}
gsap.registerPlugin(ScrollTrigger);
    if( screenWidth < 992 ) {
      imgtrantop = '-48vh';
      tp1 = '-100';
      het = 50;
      touchTxt = '-160%'
      fullImg = '-100%'
      ScrollTrigger.create({
      trigger: '.fell_touch-box',
      start: 'top top',
      end: '+=200%',
      scrub: true,
      pin:true
    });
      ScrollTrigger.create({
      trigger: '.fell_touch-box',
      start: 'top top',
      end: '+=100%',
      scrub: true,
      animation:
      gsap.timeline().to('.tle1', { x: '61vw' })
      .to('.tle2', { x: '-37vw' }, "<")
      .to('.fell_touch-img', { y: imgtrantop }, "<")
      .set('.fell_touch-subtle', { opacity: 1 })
      .set('.touch_txt-box', { opacity: 1 })
      .to('.tle1', { top: tp1,opacity: 0 })
      .to('.tle2', { top: tp1,opacity: 0 },"<")
      .to('.fell_touch-subtle', { top: tp1,opacity: 0 },"<")
      .to('.light_img',{ opacity: 1 },"<")
    });

  //   ScrollTrigger.create({
