  //     markers: false,
  //     scrub: true,
  //     animation:
  //     gsap.to('.full_image-touch', { y: fullImg })
  //   });
        ScrollTrigger.create({
      trigger: '.fell_touch-wrapper',
      start: '+=60%',
      end: '+=100%',
      markers: false,
      scrub: true,
      onUpdate: (self) => {
    getTouch()
  },
      animation:
      gsap.to('.touch_txt-box', { y: touchTxt })
    });
    ScrollTrigger.create({
      trigger: '.fell_touch-wrapper',
      start: '+=90%',
      end: '+=100%',
      markers: false,
      scrub: true,
      animation:
      gsap.to('.full_image-touch', { y: fullImg })
    });
    } else {
      imgtrantop = '-56vh'
      tp1 = '-200'
      het = 150;
      touchTxt = '-150%'
      fullImg = '-100%'
      ScrollTrigger.create({
      trigger: '.fell_touch-box',
      start: 'top top',
      end: '+=190%',
      scrub: true,
      pin:true
    });
      ScrollTrigger.create({
      trigger: '.fell_touch-box',
      start: 'top top',
      end: '+=100%',
      scrub: true,
      animation:
      gsap.timeline().to('.tle1', { x: '37vw' })
      .to('.tle2', { x: '-23vw' }, "<")
      .to('.fell_touch-img', { y: imgtrantop }, "<")
      .set('.fell_touch-subtle', { opacity: 1 })
      .set('.touch_txt-box', { opacity: 1 })
      .to('.tle1', { top: tp1,opacity: 0 })
      .to('.tle2', { top: tp1,opacity: 0 },"<")
      .to('.fell_touch-subtle', { top: tp1,opacity: 0 },"<")
      .to('.light_img',{ opacity: 1 })
    });

  //   ScrollTrigger.create({
