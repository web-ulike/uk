<style>
.title-diy{
  font-size: 40px;
}

@media (max-width: 991px) {
  .title-diy {
    font-size: 28px;
  }
}
.labs-product{
  padding: 130px 0;
}

.labs-product .labs-product-cont{
  display: flex;
  align-items: center;
  gap: 20px;
}

.labs-product .labs-product-img,.labs-product .labs-product-text{
  flex: 1;
}

.labs-product .labs-product-text{
  display: flex;
  justify-content: center;
}

.labs-product .labs-product-text-cont{
  max-width: 310px;
}

.labs-product .labs-product-img img{
  width: 100%;
  display: block;
}

.labs-product .labs-product-title{
  text-align: left;
  font-weight: normal;
  margin:0;
}

.labs-product .labs-product-txt{
  font-size: 20px;
  margin-top: 25px;
  color: #000;
  line-height: 1.3;
}

.labs-product .labs-product-p{
  font-size: 16px;
  margin-top: 30px;
  color: #000;
  line-height: 1.5;
}
.labs-product .labs-product-p ul{
    padding-left:18px;
  }
.labs-product .labs-product-link{
  width: 210px;
  height: 60px;
  background: #000;
  color: #fff;
  font-size: 18px;
  margin-top: 40px;
  border: 2px solid #000;
}

.labs-product .labs-product-link .btn-txt::before{
  color: #000;
}

@media (max-width:991px) {
  .labs-product {
    padding: 50px 0;
  }
  .labs-product .labs-product-cont{
    flex-direction: column;
    gap: 30px;
    align-items: normal;
  }
  .labs-product .labs-product-text{
    justify-content: flex-start;
  }
  .labs-product .labs-product-text-cont{
    max-width: none;
  }
  .labs-product .labs-product-txt{
    margin-top: 15px;
    font-size: 18px;
  }
  .labs-product .labs-product-p{
    margin-top: 20px;
    font-size: 14px;
  }
  
  .labs-product .labs-product-link{
    margin-top: 30px;
    font-size: 14px;
    height: 45px;
    width: 100%;
  }
}

@media (max-width:640px) {
  .labs-product .labs-product-text-cont{
    width: 100%;
  }
}

</style>

<section class="section-box">
   <div class="labs-product">
    <div class="container">
      <div class="labs-product-cont to-top">
        <a href="{{ section.settings.link }}" class="labs-product-img to-top">
          {%- if section.settings.image != blank -%}
             <img loading="lazy" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" {% render 'image-attributes', image: section.settings.image %} alt="{{ section.settings.image.alt | escape }}" >
          {%- endif -%}
        </a>
        <div class="labs-product-text to-top" style="transition-delay: 0.1s">
          <div class="labs-product-text-cont">
            <h2 class="labs-product-title title-diy">{{ section.settings.title }}</h2>
            {%- if section.settings.text != blank -%}
              <div class="labs-product-txt">{{ section.settings.text }}</div>
            {%- endif -%}
            <div class="labs-product-p">
              {{ section.settings.text1 }}
            </div>
            {%- if section.settings.text2 != blank -%}
              <a href="{{ section.settings.link }}" class="labs-product-link btn-diy">
                <div class="btn-txt" text="{{ section.settings.text2 }}">
                  <span>{{ section.settings.text2 }}</span>
                </div>
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "labs-product",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Btn Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "labs-product"
    }
  ]
}
{% endschema %}