<style>
.summer-compare {
  padding-bottom: 90px;
}

.summer-compare .summer-compare-cont {
  position: relative;
  z-index: 1;
}

.summer-compare .summer-compare-img {
  position: relative;
  z-index: 1;
  display: block;
  width: 100%;
}

.summer-compare .summer-compare-text {
  position: absolute;
  left: 85px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  max-width: 400px;
}

.summer-compare .summer-compare-h3 {
  color: {{ section.settings.title_color }};
  font-size: 44px;
  line-height: 1.2;
  font-weight: normal;
  margin: 0;
  font-family: var(--heading-font-family);
}

.summer-compare .summer-compare-btn {
  display: flex;
  width: 275px;
  height: 65px;
  align-items: center;
  justify-content: center;
  background: #190a0a;
  border: 1px solid #190a0a;

  color: #fff;
  font-size: 24px;
  line-height: 1.25;
  font-family: var(--heading-font-family);
  margin-top: 65px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.summer-compare .summer-compare-btn:hover {
  background: none;
  color: #190a0a;
}

@media (max-width: 991px) {
  .summer-compare .summer-compare-text {
    max-width: 245px;
    top: 45px;
    left: 50%;
    transform: translateX(-50%);
  }
  .summer-compare .summer-compare-h3 {
    font-size: 24px;
    text-align: center;
  }
  .summer-compare .summer-compare-btn {
    height: 42px;
    width: 136px;
    font-size: 14px;
    margin: 0 auto;
    margin-top: 10px;
  }
}

.summer-compare-popup {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999999;
  display: none;
}

.summer-compare-popup .summer-compare-popup-cont {
  width: 1520px;
  max-width: 100%;
  max-height: 100vh;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  background: #e6f4ff;
  padding: 76px 52px 80px 52px;
  display: flex;
  flex-direction: column;
}

.summer-compare-popup .summer-compare-popup-close {
  width: 30px;
  top: 40px;
  left: 40px;
  cursor: pointer;
  position: absolute;
}

.summer-compare-popup .summer-compare-popup-close svg {
  width: 100%;
  height: auto;
  display: block;
}

.summer-compare-popup .summer-compare-popup-top {
  display: flex;
  gap: 30px;
  margin-bottom: 35px;
}

.summer-compare-popup .summer-compare-popup-top-right {
  flex: 1;
  display: flex;
  gap: 30px;
}

.summer-compare-popup .summer-compare-popup-pitem {
  flex: 1;
}

.summer-compare-popup .img-p {
  display: block;
  width: 250px;
  margin: 0 auto;
}

.summer-compare-popup .summer-compare-popup-pt {
  color: #190a0a;
  text-align: center;
  font-size: 36px;
  line-height: 1.25;
  font-family: var(--heading-font-family);
  margin-top: 9px;
}

.summer-compare-popup .summer-compare-popup-price {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-top: 5px;
}

.summer-compare-popup .n-price {
  color: #e0004d;
  font-size: 30px;
  line-height: 1.3;
  font-family: var(--heading-font-family);
}

.summer-compare-popup .d-price {
  color: rgba(63, 54, 54, 0.5);
  font-size: 24px;
  line-height: 1.3;
  text-decoration: line-through;
}

.summer-compare-popup .summer-compare-popup-btn {
  width: 212px;
  height: 40px;
  background: #3f3636;
  max-width: 100%;
  margin: 0 auto;
  margin-top: 6px;
  color: #fff;
  font-size: 14px;
  line-height: 1.25;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border: 1px solid #3f3636;
  transition: all 0.3s ease;
}

.summer-compare-popup .summer-compare-popup-btn:hover {
  background: none;
  color: #3f3636;
}

.summer-compare-popup .summer-compare-popup-bottom {
  flex: 1;
  overflow-x: hidden;
  overflow-y: auto;
  margin-right: -45px;
  padding-right: 45px;
}

.summer-compare-popup .summer-compare-popup-bottom::-webkit-scrollbar {
  width: 6px;
}

.summer-compare-popup .summer-compare-popup-bottom::-webkit-scrollbar-track {
  background: none;
}

.summer-compare-popup .summer-compare-popup-bottom::-webkit-scrollbar-thumb {
  background: #9e9e9e;
  border-radius: 4px;
}

.summer-compare-popup .summer-compare-popup-list {
  padding: 40px 0;
  border-top: 1px solid #d9d9d9;
}

.summer-compare-popup .summer-compare-popup-bitem {
  display: flex;
  align-items: flex-end;
  gap: 30px;
}

.summer-compare-popup .summer-compare-popup-bt {
  color: #190a0a;
  text-align: center;
  font-size: 18px;
  line-height: 1.2;
  font-family: var(--heading-font-family);
  width: 180px;
}

.summer-compare-popup .summer-compare-popup-bt span {
  font-family: var(--text-font-family);
}

.summer-compare-popup .summer-compare-popup-right {
  flex: 1;
  display: flex;
  align-items: flex-end;
  gap: 30px;
}

.summer-compare-popup .summer-compare-popup-sitem {
  flex: 1;
}

.summer-compare-popup .summer-compare-popup-sitem svg {
  display: block;
  margin: 0 auto;
}

.summer-compare-popup .summer-compare-popup-sp {
  color: #190a0a;
  text-align: center;
  font-size: 18px;
  line-height: 1.2;
  margin-top: 20px;
}

.summer-compare-popup-down {
  display: none;
}

@media (max-width: 1100px) {
  .summer-compare-popup .summer-compare-popup-top {
    gap: 15px;
    margin-bottom: 17px;
  }

  .summer-compare-popup .summer-compare-popup-top-right {
    gap: 15px;
  }

  .summer-compare-popup .img-p {
    width: 100px;
  }

  .summer-compare-popup .summer-compare-popup-pt {
    font-size: 24px;
  }

  .summer-compare-popup .summer-compare-popup-price {
    gap: 5px;
  }

  .summer-compare-popup .n-price {
    font-size: 14px;
  }

  .summer-compare-popup .d-price {
    font-size: 12px;
  }

  .summer-compare-popup .summer-compare-popup-btn {
    width: 100px;
    height: 29px;
    font-size: 12px;
  }

  .summer-compare-popup .summer-compare-popup-bitem {
    gap: 15px;
  }

  .summer-compare-popup .summer-compare-popup-right {
    gap: 15px;
  }

  .summer-compare-popup .summer-compare-popup-list {
    padding: 20px 0;
    gap: 15px;
  }

  .summer-compare-popup .summer-compare-popup-bt {
    font-size: 14px;
    width: 100px;
    min-height: 35px;
  }

  .summer-compare-popup .summer-compare-popup-sitem svg {
    width: 32px;
    height: auto;
  }

  .summer-compare-popup .summer-compare-popup-sp {
    font-size: 14px;
    margin-top: 9px;
    min-height: 35px;
  }
}

@media (max-width: 640px) {
  .summer-compare-popup .summer-compare-popup-cont {
    padding: 35px 20px;
    max-height: 80vh;
    top: auto;
    transform: translateY(0);
    bottom: 0;
  }

  .summer-compare-popup .summer-compare-popup-close {
    width: 20px;
    top: 20px;
    left: 20px;
  }

  .summer-compare-popup .summer-compare-popup-pt {
    display: none;
  }

  .summer-compare-popup .summer-compare-popup-down {
    display: block;
    margin-top: 5px;
    position: relative;
  }

  .summer-compare-popup .summer-compare-popup-down-bt {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    color: #190a0a;
    font-size: 24px;
    line-height: 1;
    cursor: pointer;
  }

  .summer-compare-popup .summer-compare-popup-down-bt svg {
    width: 27px;
    display: block;
    height: auto;
  }

  .summer-compare-popup .summer-compare-popup-down-list {
    padding: 18px 25px;
    border-radius: 7px;
    background: #fff;
    box-shadow: 0px 2.135px 10.036px 0px #d1d2e3;
    color: #3f3636;
    text-align: center;
    font-size: 20px;
    line-height: 1.2;
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 18px;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 30px;
    z-index: 3;
  }

  .summer-compare-popup .open-l .summer-compare-popup-down-list {
    display: flex;
  }

  .summer-compare-popup .open-l .summer-compare-popup-down-bt svg {
    transform: rotate(180deg);
  }

  .summer-compare-popup .summer-compare-popup-down-item {
    cursor: pointer;
    white-space: nowrap;
  }

  .summer-compare-popup .summer-compare-popup-down-list .active {
    font-family: var(--heading-font-family);
    text-decoration: underline;
  }

  .summer-compare-popup .hide-a2 .a2,
  .summer-compare-popup .hide-a10 .a10,
  .summer-compare-popup .hide-a3 .a3 {
    display: none;
  }

  .summer-compare-popup .row-reverse .summer-compare-popup-top-right,
  .summer-compare-popup .row-reverse .summer-compare-popup-right {
    flex-direction: row-reverse;
  }

  .summer-compare-popup
    .hide-a2
    .a10
    .summer-compare-popup-down-item:nth-child(2),
  .summer-compare-popup
    .hide-a2
    .a3
    .summer-compare-popup-down-item:first-child,
  .summer-compare-popup
    .hide-a3
    .a10
    .summer-compare-popup-down-item:nth-child(3),
  .summer-compare-popup
    .hide-a3
    .a2
    .summer-compare-popup-down-item:first-child,
  .summer-compare-popup
    .hide-a10
    .a3
    .summer-compare-popup-down-item:nth-child(3),
  .summer-compare-popup
    .hide-a10
    .a2
    .summer-compare-popup-down-item:nth-child(2) {
    opacity: 0.6;
    pointer-events: none;
  }
}
</style>
<section class="section-box">
  <div class="summer-compare">
    <div class="container">
      <div class="summer-compare-cont">
        <picture>
          <source srcset="{{ section.settings.image1 | image_url }}" media="(max-width: 991px)">
          <img class="summer-compare-img" src="{{ section.settings.image | image_url }}" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" alt="{{ section.settings.image.alt }}">
        </picture>
        <div class="summer-compare-text">
          {%- if section.settings.text != blank -%}
            <h3 class="summer-compare-h3">{{ section.settings.text }}</h3>
          {%- endif -%}
          {%- if section.settings.text1 != blank -%}
            <div class="summer-compare-btn">{{ section.settings.text1 }}</div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  {%- if section.settings.popup_html != blank -%}
    {{ section.settings.popup_html }}
  {%- endif -%}
</section>
<script>
  window.addEventListener('load', function () {
    $('.summer-compare-popup .summer-compare-popup-btn').click(function () {
      let id = $(this).attr('data-id')
      let code = $(this).attr('data-code')
      if(id){
        addToCartPromise(id,'',{},code).then(()=>{
        })
      }
      $('.summer-compare-popup').fadeOut(300)
    })

    $('.summer-compare .summer-compare-btn').click(function () {
      $('.summer-compare-popup').fadeIn(300)
    })
    $('.summer-compare-popup .summer-compare-popup-close,.summer-compare-popup').click(function () {
      $('.summer-compare-popup').fadeOut(300)
      $('.summer-compare-popup .summer-compare-popup-down').removeClass('open-l')
    })
    $('.summer-compare-popup .summer-compare-popup-cont').click(function (e) {
      e.stopPropagation()
      $('.summer-compare-popup .summer-compare-popup-down').removeClass('open-l')
    })
    $('.summer-compare-popup .summer-compare-popup-down-bt').click(function (e) {
      e.stopPropagation()
      $('.summer-compare-popup .summer-compare-popup-down').removeClass('open-l')
      $(this).parents('.summer-compare-popup-down').toggleClass('open-l')
    })
    $('.summer-compare-popup .summer-compare-popup-down-item').click(function () {
      let $cls = $(this).closest('.summer-compare-popup-cont')
      let $cls1 = $(this).closest('.summer-compare-popup-pitem')
      let pIndex = $cls1.index()
      $(this).parents('.summer-compare-popup-down').removeClass('open-l')

      if ($cls.hasClass('hide-a2')) {
        if ($cls.hasClass('row-reverse')) {
          if (pIndex == 0 && $(this).index() == 2) {
            $cls.removeClass('hide-a2 row-reverse').addClass('hide-a10')
          }
          if (pIndex == 1 && $(this).index() == 2) {
            $cls.removeClass('hide-a2 row-reverse').addClass('hide-a3 row-reverse')
          }
        } else {
          if (pIndex == 0 && $(this).index() == 2) {
            $cls.removeClass('hide-a2 row-reverse').addClass('hide-a10 row-reverse')
          }
          if (pIndex == 1 && $(this).index() == 2) {
            $cls.removeClass('hide-a2 row-reverse').addClass('hide-a3')
          }
        }
        return
      }

      if ($cls.hasClass('hide-a3')) {
        if ($cls.hasClass('row-reverse')) {
          if (pIndex == 0 && $(this).index() == 1) {
            $cls.removeClass('hide-a3 row-reverse').addClass('hide-a10 row-reverse')
          }
          if (pIndex == 2 && $(this).index() == 1) {
            $cls.removeClass('hide-a3 row-reverse').addClass('hide-a2 row-reverse')
          }
        } else {
          if (pIndex == 0 && $(this).index() == 1) {
            $cls.removeClass('hide-a3 row-reverse').addClass('hide-a10')
          }
          if (pIndex == 2 && $(this).index() == 1) {
            $cls.removeClass('hide-a3 row-reverse').addClass('hide-a2')
          }
        }
        return
      }

      if ($cls.hasClass('hide-a10')) {
        if ($cls.hasClass('row-reverse')) {
          if (pIndex == 1 && $(this).index() == 0) {
            $cls.removeClass('hide-a10 row-reverse').addClass('hide-a3 row-reverse')
          }
          if (pIndex == 2 && $(this).index() == 0) {
            $cls.removeClass('hide-a10 row-reverse').addClass('hide-a2')
          }
        } else {
          if (pIndex == 2 && $(this).index() == 0) {
            $cls.removeClass('hide-a10 row-reverse').addClass('hide-a2 row-reverse')
          }
        }
        return
      }
    })
  })
</script>
