<script>
  window.addEventListener('load', function () {
    if (window.innerWidth < 991) {
      function sellingPointsSwiper() {
        let $p = $('.selling-points-intr')
        let $list = $p.find('.selling-points-swiper')
        let $item = $list.find('.selling-points-swiper-item')
        let $dot = $p.find('.selling-points-dot')
        let $arraw = $p.find('.selling-points-arraw-item')
        let content = document.querySelector('.selling-points-intr .selling-points-intr-right')
        let rw = $p.find('.selling-points-intr-right').width()
        let length = $item.length
        let index = 0
        let width = $item.width() * 1
        let pw = length * (width + 10) - 10
        let leftMax = pw - rw + width
        let bolR = false

        function changeSwiper() {
          let left = index * (width + 10)
          if (left >= pw - rw) {
            left = pw - rw
            bolR = true
          } else {
            bolR = false
          }
          let bfb = (left + width) / leftMax
          $dot.attr('style', `--bf-width:${bfb * 100}%`)
          $list.css({ transform: `translateX(-${left}px)`, transition: 'all .5s cubic-bezier(0.645, 0.045, 0.355, 1)', })
        }
        changeSwiper()
        $arraw.click(function () {
          let sindex = $(this).index()
          if (sindex && !bolR) index++
          if (!sindex && index > 0) index--
          changeSwiper()
        })

        detectSwipe(content, () => {
          if (bolR) return
          index++
          changeSwiper()
        }, () => {
          isLast = false
          index--
          if (index < 0) index = 0
          changeSwiper()
        });

        function detectSwipe(element, onSwipeLeft, onSwipeRight) {
          let startX = 0;

          const getEventX = (event) => {
            return event.touches ? event.touches[0].clientX : event.clientX;
          };

          const handleTouchStart = (e) => {
            startX = getEventX(e);
          };

          const handleTouchMove = (e) => {
            const deltaX = getEventX(e) - startX;
            if (Math.abs(deltaX) > 10 && e.cancelable) {
              e.preventDefault();
            }
          };

          const handleTouchEnd = (e) => {
            const deltaX = getEventX(e.changedTouches ? e.changedTouches[0] : e) - startX;
            if (deltaX > 10) {
              onSwipeRight();
            } else if (deltaX < -10) {
              onSwipeLeft();
            }
          };

          element.addEventListener('touchstart', handleTouchStart);
          element.addEventListener('touchmove', handleTouchMove);
          element.addEventListener('touchend', handleTouchEnd);

          // Add mouse event listeners for PC compatibility
          element.addEventListener('mousedown', handleTouchStart);
          element.addEventListener('mousemove', handleTouchMove);
          element.addEventListener('mouseup', handleTouchEnd);
        }
      }
      sellingPointsSwiper()

    }

  })

</script>
