<style>
  #shopify-section-{{ section.id }} {
    --bg: {{ section.settings.custom_background }};
    --heading-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
    --text-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .banner-conainter-position{
    position:absolute;
    left:210px;
    top:45%;
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
  .banner-conainter-position{
    position: absolute;
    left: 50%;
    top: 80%;
    width: 275px;
    transform: translate(-50%, -50%);
  }
}
  .banner_image-box{
    background: var(--bg);
  }
  .banner_image-box h2{
    margin-bottom: 15px;
  }
  .banner_image-box .banner_image-txt {
    margin: 0;
    line-height: 18px;
  }
  .banner_image-box .banner_image-img{
    margin: 68px 0;
  }
  @media (max-width: 740px){
  .banner_image-box .banner_image-img{
   
  }
  }
</style>

<section class="banner_image-box section-{{ section.id }}-padding to-top">
  <div class="container" style="position: relative;left:0;top:0;">
    <div class="banner-conainter-position {% if section.settings.mobile_image != blank %} hidden-phone{% endif %}">
      <h2 class="heading heading--large text--{{section.settings.text_alignment}}"> {{- section.settings.title -}}</h2>
    <p class="banner_image-txt text--{{section.settings.text_alignment}}"> {{- section.settings.banner_txt -}}</p>
    </div>
    <div class="banner-conainter-position hidden-tablet-and-up">
      <h2 class="heading heading--large text--{{section.settings.text_alignment-m}}"> {{- section.settings.title -}}</h2>
    <p class="banner_image-txt text--{{section.settings.text_alignment-m}}"> {{- section.settings.banner_txt -}}</p>
    </div>
    {%- if section.settings.image != blank -%}
      <div class="banner_image-img{% if section.settings.mobile_image != blank %} hidden-phone{% endif %}">
        {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: '', sizes: '100vw', widths: '600,700,800,1000,1200,1400,1600' -}}
      </div>
    {%- endif -%}
    {%- if section.settings.mobile_image != blank -%}
      <div class="banner_image-img hidden-tablet-and-up">
        {{- section.settings.mobile_image | image_url: width: section.settings.mobile_image.width | image_tag: loading: '', sizes: '100vw', widths: '300,400,500,600,700,800' -}}
      </div>
   {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Banner Image",
  "class": "shopify-section--banner-image",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Banner Image Title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "banner_txt",
      "default": "Banner Image Text",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "text_alignment-m",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "text",
      "id": "custom_background",
      "label": "Custom Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Banner Image"
    }
  ]
}
{% endschema %}