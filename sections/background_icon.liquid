.background_icon-box{
  position: relative;
  overflow: hidden;
  height: 750px;
  clip-path: inset(0 0 0 0);
}
.banner_bgimg{
  position: fixed;
    width: 100%;
    height: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    z-index: -1000;
}
.banner_bgimg img{
  display: block;
  width: 100%;
    height: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    -o-object-position: center;
    object-position: center;
}
.background_icon-cnt {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.background_icon-cnt img{
  max-width: 336px;
}
.background_icon-cnt .background_icon-tle{
  color: #FFF;
text-align: center;
font-size: 44px;
font-style: normal;
font-weight: 500;
line-height: 120%;
margin-top: 40px;
      font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
}
.background_icon-cnt .background_icon-text{
  color: #FFF;
text-align: center;
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 150%;
max-width: 700px;
margin: 10px auto 0;
}
@media screen and (max-width: 992px){

}
@media screen and (max-width: 768px){
  /* .banner_bgimg {
    max-height: 667px;
    height: 667px;
} */
.background_icon-box{
  height: 667px;
}
  .background_icon-cnt img {
    max-width: 160px;
}
  .background_icon-cnt .background_icon-tle {
    font-size: 28px;
}
.background_icon-cnt .background_icon-text{
  font-size: 14px;
}
}
</style>

<section class="background_icon-box">
<div class="banner_bgimg">
{%- if section.settings.background_image != blank -%}
  <img loading="lazy" class="to-opacity{% if section.settings.background_image_mobile != blank %} hidden-pocket{% endif %}" src="{{ section.settings.background_image | image_url }}"/>
{%- endif -%}
{%- if section.settings.background_image_mobile != blank -%}
  <img loading="lazy" class="to-opacity hidden-lap-and-up" src="{{ section.settings.background_image_mobile | image_url }}"/>
  {%- endif -%}
</div>
  <div class="background_icon-cnt">
    <div class="container">
      {%- if section.settings.icon_image != blank -%}
        <img class="to-top" src="{{ section.settings.icon_image | image_url }}" style="transition-delay: 0.2s"/>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <div class="background_icon-tle to-top" style="transition-delay: 0.4s">{{ section.settings.title }}</div>
      {%- endif -%}
      {%- if section.settings.content != blank -%}
        <div class="background_icon-text to-top" style="transition-delay: 0.6s">{{ section.settings.content }}</div>
      {%- endif -%}
    </div>
  </div>
</section>
