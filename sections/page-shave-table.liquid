<style>
  .container-table {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .unleash-container {
      max-width: 100%;
      height: 800px;
      background-color: #fff;
      padding-top: 99px;
      padding-bottom: 115px;
      overflow-x: auto;
      overflow-y: hidden;
    }
  .unleash-container .table-active__title {
      margin-bottom: 60px;
      width: 600px;
      height: 110px;
      color: #000;
      text-align: center;
      font-family: var(--heading-font-family);
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: 125%;
    }
  .unleash-container .table-active__title h1 {
      text-align: center;
    }
  .unleash-container td {
      display: table-cell;
      vertical-align: inherit;
    }
  .unleash-container th {
      text-align: inherit;
    }
  .unleash-container .table-box {
      max-width: 100%;
      /* height: 100%; */
      overflow-x: auto;
      overflow-y: hidden;
      flex-shrink: 0;
      flex: 1;
    }
  .unleash-container .table__block {
      width: 1200px;
      height: 416px;
      margin: 0 auto;

      animation-duration: .7s;
      visibility: visible;
      animation-fill-mode: both;
      flex-shrink: 0;
    }
  .unleash-container .table__block:last-child {
      padding-bottom: 0;
    }
  .unleash-container table {
      width: 100%;
      table-layout: fixed;
      border-collapse: collapse;
    }
  .unleash-container .table__block table tr {
      border-bottom: solid 1px #d5d5d5;
      height: 70px;
    }
  .unleash-container table thead tr th {
      vertical-align: center;
      text-align: center;
      color: #000;
      font-family: var(--text-font-family);
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 70px;
    }
  .unleash-container table tbody tr th {
      color: #000;
      font-family: var(--text-font-family);
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 70px;
    }
  .unleash-container .table__block table tr th:not(:last-child) {
      border-right: solid 1px #d5d5d5;
    }
  .unleash-container .table tr th:first-child {
      width: 169px;
      padding: 15px 10px 15px 0;
    }
  .unleash-container .table__block table tr td {
      font-family: sohne-buch;
      font-size: 18px;
      line-height: 1.38;
      padding: 15px 10px;
    }
  .unleash-container .table__block table tr td:not(:last-child) {
      border-right: solid 1px #d5d5d5;
    }
  .unleash-container .table__block table img {
      width: 25px;
      margin: 0 auto;
      display: block;
    }
  @media (max-width: 1000px) {
   
    .container {
        width: 100%;
      }

      .tip-container {
        display: none;
      }

      .nav-menu-container {
        width: 100%;
        height: 3.25rem;
        background-color: #fff;
      }

      .banner-container {
        width: 100%;
        height: 41.6875rem;
        flex-shrink: 0;
        background-color: antiquewhite;
      }
    .unleash-container {
        width: 100%;
        height: 41.6875rem;
        flex-shrink: 0;
        padding-top: 3.81rem;
        padding-bottom: 3.63rem;
      }
    .unleash-container .table-active__title {
        width: 19.125rem;
        margin-bottom: 2.5rem;
      }
    .unleash-container .table-active__title  {
        color: #000;
        text-align: center;
        font-family: var(--heading-font-family);
        font-size: 26px;
        font-style: normal;
        font-weight: 400;
        line-height: 120%;
      }
    .unleash-container .table-box {
        height: 25.375rem;
        width: 100%;
        padding: 0rem 0.8rem;
        padding-bottom: 2.5rem;
        flex-shrink: 0;
      overflow-x:inherit;
      }
    .unleash-container .table__block {
        width: 30rem;
        height: 22.875rem;
        flex-shrink: 0;
      }
    .unleash-container .table__block table tr {
        border-bottom: solid 1px #d5d5d5;
        height: 3.75rem;
      }
    .unleash-container table thead tr th {
        height: 3.75rem;
        font-family: var(--heading-font-family);
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: 125%;
      }
    .unleash-container table tbody tr th {
        color: #000;
        font-family: var(--heading-font-family);
        font-size:  14px;
        font-style: normal;
        font-weight: 400;
        line-height: 125%;
        height: 3.75rem;
      }
    .unleash-container .table__block table img {
        width: 1.375rem;
        height: 1.375rem;
        flex-shrink: 0;
      }
    .unleash-container .table__block table tr td{
      padding:4px 6px;
    }
  }
</style>

<section class="shopify-section shopify-section--video">
    <div class="container-table unleash-container">
    <div class="table-active__title">
        {%- if section.settings.title != blank -%}
          {{ section.settings.title }}
          {%- endif -%}
    </div>
    <div class="table-box">
      <div class="table__block">
        <table>
          <thead>
            <tr>
              <th></th>
              <th>{{ section.settings.theadone }}</th>
              <th>{{ section.settings.theadtwo }}</th>
              <th>{{ section.settings.theadthree }}</th>
              <th>{{ section.settings.theadfour }}</th>
            </tr>
          </thead>
          <tbody>
            {%- for block in section.blocks -%}
            <tr>
              <th>{{ section.settings.tbodyone }}</th>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
            </tr>
            <tr>
              <th>{{ section.settings.tbodytwo }}</th>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
            </tr>
            <tr>
              <th>{{ section.settings.tbodythree }}</th>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
            </tr>
            <tr>
              <th>{{ section.settings.tbodyfour }}</th>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavefalse | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
            </tr>
            <tr>
              <th>{{ section.settings.tbodyfive }}</th>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
              <td>{{ block.settings.shavetrue | image_url: 'master' | img_tag }}</td>
            </tr>
               {%- endfor -%}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
