<style>
 .suitable-skin {
  padding: 110px 0;
}

.suitable-skin .suitable-skin-cont {
  display: flex;
  justify-content: space-between;
  gap: 40px;
}

.suitable-skin .suitable-skin-test {
  margin-bottom: 20px;
}

.suitable-skin .suitable-skin-name {
  color: #3f3636;
  font-size: 20px;
  line-height: 1.2;
  font-family: var(--heading-font-family);
}

.suitable-skin .suitable-skin-flex {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: 15px;
}

.suitable-skin .suitable-skin-img {
  position: relative;
  width: 115px;
  height: 115px;
}

.suitable-skin .suitable-skin-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: relative;
  z-index: 1;
  border-radius: 0 0 50% 50%;
}

.suitable-skin .suitable-skin-icon {
  position: absolute;
  z-index: 2;
  bottom: 0;
  right: 0;
}

.suitable-skin .suitable-skin-icon svg {
  display: block;
}

.suitable-skin .suitable-skin-text {
  color: #190a0a;
  text-align: center;
  font-size: 16px;
  line-height: 1.5;
  margin-top: 5px;
}

.suitable-skin .suitable-skin-p {
  color: #625959;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.8;
  margin-top: 45px;
}

.suitable-skin .suitable-skin-right {
  max-width: 580px;
}

.suitable-skin .suitable-skin-title {
  color: #190a0a;
  font-size: 50px;
  line-height: 1.25;
}

.suitable-skin .suitable-skin-sub {
  color: #484846;
  font-size: 20px;
  line-height: 1.2;
  max-width: 435px;
  margin-top: 40px;
}
.suitable-skin .mb-box {
  display: none;
}

@media (max-width: 991px) {
  .suitable-skin {
    padding: 60px 0;
  }
  .suitable-skin .suitable-skin-cont {
    flex-direction: column-reverse;
    gap: 20px;
  }
  .suitable-skin .suitable-skin-right {
    max-width: none;
  }
  .suitable-skin .suitable-skin-title {
    font-size: 28px;
    text-align: center;
  }
  .suitable-skin .suitable-skin-sub {
    max-width: none;
    font-size: 12px;
    margin-top: 0;
    margin-bottom: 25px;
  }
  .suitable-skin .pc-box {
    display: none;
  }
  .suitable-skin .mb-box {
    display: block;
  }
  .suitable-skin .suitable-skin-left {
    border-radius: 12px;
    background: #fbfaf4;
    padding: 30px 10px;
  }
  .suitable-skin .suitable-skin-name {
    font-size: 16px;
  }
  .suitable-skin .suitable-skin-flex {
    gap: 19px;
  }
  .suitable-skin .suitable-skin-img {
    width: 66px;
    height: 66px;
  }
  .suitable-skin .suitable-skin-text {
    font-size: 12px;
  }
  .suitable-skin .suitable-skin-icon svg {
    width: 17px;
  }
  .suitable-skin .suitable-skin-p {
    font-size: 12px;
    margin-top: 20px;
  }
}
</style>

<section>
  <div class="suitable-skin to-top" style="background:{{ section.settings.bg_color }}">
    <div class="container">
      <div class="suitable-skin-cont">
        <div class="suitable-skin-left">
          <div class="suitable-skin-sub mb-box">
            {{ section.settings.text1 }}
          </div>
          <div class="suitable-skin-test">
            <div class="suitable-skin-name">{{ section.settings.text2 }}</div>
            <div class="suitable-skin-flex">
              {%- for block in section.blocks -%}
                {% if block.type == 'skin' %}
                  <div class="suitable-skin-item">
                    <div class="suitable-skin-img">
                      {%- if block.settings.image != blank -%}
                        <img loading="lazy" width="" height="" {% render 'image-attributes', image: block.settings.image %}>
                      {%- endif -%}
                      <div class="suitable-skin-icon">
                      {%- if block.settings.isTrue -%}
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 26 26" fill="none">
                          <circle cx="12.914" cy="12.914" r="12.914" fill="#6C6AB4" />
                          <path d="M6.11865 13.8534L10.7002 18.3516L20.392 8.83606" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                        </svg>
                        {%- else -%}
                        <svg xmlns="http://www.w3.org/2000/svg" width="27" height="26" viewBox="0 0 27 26" fill="none">
                          <circle cx="13.226" cy="12.914" r="12.914" fill="#E7004C" />
                          <path d="M8.5542 18.1341L18.4458 8.24255" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                          <path d="M18.4478 18.1341L8.55618 8.24255" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                        </svg>
                      {%- endif -%}
                      </div>
                    </div>
                    <div class="suitable-skin-text">
                      {{ block.settings.text }}
                    </div>
                  </div>
                {% endif %}
              {%- endfor -%} 
            </div>
          </div>
          <div class="suitable-skin-test">
            <div class="suitable-skin-name">{{ section.settings.text3 }}</div>
            <div class="suitable-skin-flex">
              {%- for block in section.blocks -%}
                {% if block.type == 'hair' %}
                  <div class="suitable-skin-item">
                    <div class="suitable-skin-img">
                      {%- if block.settings.image != blank -%}
                        <img loading="lazy" width="" height="" {% render 'image-attributes', image: block.settings.image %}>
                      {%- endif -%}
                      <div class="suitable-skin-icon">
                      {%- if block.settings.isTrue -%}
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 26 26" fill="none">
                          <circle cx="12.914" cy="12.914" r="12.914" fill="#6C6AB4" />
                          <path d="M6.11865 13.8534L10.7002 18.3516L20.392 8.83606" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                        </svg>
                        {%- else -%}
                        <svg xmlns="http://www.w3.org/2000/svg" width="27" height="26" viewBox="0 0 27 26" fill="none">
                          <circle cx="13.226" cy="12.914" r="12.914" fill="#E7004C" />
                          <path d="M8.5542 18.1341L18.4458 8.24255" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                          <path d="M18.4478 18.1341L8.55618 8.24255" stroke="white" stroke-width="2.03905"
                            stroke-linecap="round" />
                        </svg>
                      {%- endif -%}
                      </div>
                    </div>
                    <div class="suitable-skin-text">
                      {{ block.settings.text }}
                    </div>
                  </div>
                {% endif %}
              {%- endfor -%}  
            </div>
          </div>
          <div class="suitable-skin-p">{{ section.settings.text4 }}</div>
        </div>
        <div class="suitable-skin-right">
          <div class="suitable-skin-title">{{ section.settings.text }}</div>
          <div class="suitable-skin-sub pc-box">
            {{ section.settings.text1 }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
