<style>
.a2-p-md6 {
  padding: 80px 0 95px 0;
  background: #ecf8ff;
}

.a2-p-md6 .a2-p-md6-h3 {
  color: #000;
  text-align: center;
  font-size: 48px;
  line-height: 1.1;
  margin: 0;
  font-weight: normal;
  margin-bottom: 20px;
}

.a2-p-md6 .a2-p-md6-p {
  color: #3f3636;
  text-align: center;
  font-size: 18px;
  line-height: 1.3;
  max-width: 1072px;
  margin: 0 auto;
}

.a2-p-md6 .img {
  display: block;
  width: 1280px;
  margin: 0 auto;
  margin-top: 92px;
}

@media (max-width: 991px) {
  .a2-p-md6 {
    padding: 50px 0;
  }
  .a2-p-md6 .a2-p-md6-h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }
  .a2-p-md6 .a2-p-md6-p {
    font-size: 12px;
  }

  .a2-p-md6 .img {
    margin-top: 37px;
  }
}
</style>
<section class="section-box">
    <div class="a2-p-md6">
      <div class="container">
        {%- if section.settings.text != blank -%}
            <h3 class="a2-p-md6-h3">
            {{ section.settings.text }}
            </h3>
        {%- endif -%}
        {%- if section.settings.text1 != blank -%}
            <div class="a2-p-md6-p">{{ section.settings.text1 }}</div>
        {%- endif -%}
        {%- if section.settings.image != blank or section.settings.image1 != blank -%}
            <picture>
            <source srcset="{{section.settings.image1 | image_url }}" media="(max-width: 991px)">
            <img loading="lazy"
                class="img"
                width=""
                height=""
                {% render 'image-attributes', image: section.settings.image %}
                alt="{{ section.settings.image.alt | escape }}">
            </picture>
        {%- endif -%}
      </div>
    </div>
</section>
{% schema %}
{
  "name": "a2-p-md6",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "image_picker",
        "id": "image1",
        "label": "M Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
  ],
  "presets": [
    {
      "name": "a2-p-md6",
      "blocks": []
    }
  ]
}
{% endschema %}
