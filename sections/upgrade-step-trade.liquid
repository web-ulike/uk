<style>
.media-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
@media screen and (max-width: 768px){
  .media-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.mobile_padding_top }}px);
    padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px);
  }
}
.upgrade-step-module{
  overflow: hidden;
}
.upgrade-step-module .upgrade-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 64px;
}
.upgrade-step-module h3{
      font-family: var(--heading-font-family);
  color: #190A0A;
font-size: 48px;
font-style: normal;
font-weight: 570;
line-height: 1.25;
margin-bottom:0;
}
.upgrade-step-module .upgrade-step-wrapper{
  display: flex;
}
.upgrade-step-module .upgrade-step-item{
  width: 25%;
}
.upgrade-step-module .upgrade-step-tle{
font-family: var(--heading-font-family);
color: #190A0A;
font-size: 24px;
font-style: normal;
font-weight: 570;
line-height: 100%;
display: flex;
gap: 20px;
margin-top: 30px;
margin-bottom: 20px;
max-width: 358px;
}
.upgrade-step-module .upgrade-step-tle strong{
      font-family: var(--text-font-family);
  color:  #E0004D;
  font-style: normal;
font-style: normal;
font-weight: 380;
  padding-right:15px;
}
.upgrade-step-module .upgrade-step-txt{
  color: #190A0A;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 1.5;
max-width: 358px;
}
.upgrade-step-module .upgrade-libk{
  display: block;
  color: #E0004D;
font-size: 18px;
font-style: normal;
font-weight: 380;
line-height: 150%; 
text-decoration: underline;
margin-top: 30px;
}
.upgrade-step-module .upgrade-check{
  display: flex;
  align-items: center;
  gap: 40px;
}
.upgrade-step-module .upgrade-check svg{
  cursor: pointer;
}
.upgrade-step-module .upgrade-check svg.swiper-button-disabled{
  opacity: 0.5;
}
@media (min-width: 992px) and (max-width: 1450px) {
  .upgrade-step-module .upgrade-top {
    margin-bottom: 51px;
}
.upgrade-step-module h3 {
    font-size: 38px;
}
.upgrade-step-module .upgrade-step-tle{
  font-size: 19px;
  gap: 16px;
  margin-top: 24px;
  margin-bottom: 16px;
}
.upgrade-step-module .upgrade-step-txt {
    font-size: 14px;
}
.upgrade-step-module .upgrade-libk {
    font-size: 14px;
    margin-top: 24px;
}
.upgrade-step-module .upgrade-check{
  gap: 32px;
}
.upgrade-step-module .upgrade-check svg{
  transform: scale(0.8);
}
}
@media (max-width: 991px) {
  .upgrade-step-module .upgrade-top{
    margin-bottom: 58px;
  }
.upgrade-step-module h3 {
    font-size: 24px;
}
.upgrade-step-module .upgrade-step-tle{
  font-size: 12px;
  margin-top: 15px;
  margin-bottom: 6px;
}
.upgrade-step-module .upgrade-step-txt{
  font-size: 12px;
}
.upgrade-step-module .upgrade-libk{
  font-size: 12px;
  margin-top: 15px;
}
}
@media (max-width: 768px) {
.upgrade-step-module .upgrade-check{
  display: none;
}
}
</style>
<section class="section-box media-{{ section.id }}-padding">
 <div class="upgrade-step-module">
  <div class="container">
      <custom-swiper
      slides-per-view="1.3" 
      space-between="15" 
      loop="false" 
      centered-slides="false"
      pagination="false"
      navigation="true"
      disable-on=""
      breakpoints='{"768":{"slidesPerView": 3.4,"spaceBetween": 20}}'
    >
   <div class="upgrade-top">
    <h3>{{ section.settings.text }}</h3>
    <div class="upgrade-check">
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none" class="swiper-prev">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M23.6003 33.9318L24.1054 34.4369L25.1155 33.4267L24.6104 32.9217L19.9992 28.3104L15.6526 23.9638C15.0947 23.406 14.1902 23.406 13.6323 23.9638L18.9891 29.3206L23.6003 33.9318ZM11.1003 20.4217C10.8213 20.7006 10.8213 21.1529 11.1003 21.4318C11.1942 21.5257 11.3078 21.588 11.4278 21.6187L11.4278 21.641L11.6038 21.641L11.6069 21.641L12.1421 21.641L19.4639 21.641L26.7857 21.641L28.5715 21.641C29.3605 21.641 30.0001 21.0014 30.0001 20.2125L26.7857 20.2125L13.3298 20.2125L24.6104 8.93182L25.1155 8.42674L24.1054 7.41659L23.6003 7.92166L11.1003 20.4217Z" fill="#190A0A"></path>
      <circle cx="20" cy="20.8655" r="19.2857" stroke="#190A0A" stroke-width="1.42857"></circle>
    </svg>
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none" class="swiper-next">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M16.3997 7.79914L15.8946 7.29407L14.8845 8.30422L15.3896 8.8093L20.0008 13.4205L24.3474 17.7671C24.9053 18.325 25.8098 18.325 26.3677 17.7671L21.011 12.4104L16.3997 7.79914ZM28.8997 21.3093C29.1787 21.0303 29.1787 20.5781 28.8997 20.2991C28.8058 20.2052 28.6922 20.1429 28.5722 20.1122V20.0899H28.3962H28.3931H27.8579H20.5361H13.2143H11.4285C10.6395 20.0899 9.99995 20.7295 9.99995 21.5185H13.2143H26.6702L15.3896 32.7991L14.8845 33.3042L15.8946 34.3144L16.3997 33.8093L28.8997 21.3093Z" fill="#190A0A"></path>
      <circle cx="20" cy="20.8655" r="19.2857" stroke="#190A0A" stroke-width="1.42857"></circle>
    </svg>
    </div>
   </div>
   <div class="upgrade-bt">
    <div class="swiper-container upgrade-step-swiper-container">
      <div class="swiper-wrapper upgrade-step-wrapper">
          {%- for block in section.blocks -%}
        <div class="swiper-slide upgrade-step-item">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url  }}" alt="" width="{{ block.settings.image.width  }}" height="{{  block.settings.image.height }}" />
           {% endif %}
              {%- if block.settings.tle != blank -%}
          <div class="upgrade-step-tle">{{ block.settings.tle }}</div>
           {%- endif -%}
             {%- if block.settings.txt != blank -%}
          <div class="upgrade-step-txt">{{ block.settings.txt }}</div>
           {%- endif -%}
           {%- if block.settings.button_text != blank -%}
            <a href="{{ block.settings.button_link }}" class="upgrade-libk">{{ block.settings.button_text }}</a>
           {%- endif -%}
        </div>
         {%- endfor -%}
        

      </div>
    </div>
   </div>
   </custom-swiper>
  </div>
 </div>
</section>
{% schema %}
{
"name": "upgrade-step-trade",
    "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
         {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
        {
          "type": "richtext",
          "id": "tle",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "txt",
          "label": "Text"
        },
             {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
     {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 10
    }
  ],
  "presets": [
  {
    "name": "upgrade-step-trade",
    "blocks": []
  }
]
}
{% endschema %}