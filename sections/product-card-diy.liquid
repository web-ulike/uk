<style>
.product-card-diy{
  padding: 90px 0;
  /* background: #000; */
}

.product-card-diy .product-card-diy-cont{
  display: flex;
  align-items: center;
  border-radius: 10px;
  background: linear-gradient(140deg, #3D220F -1.33%, #0E0402 97.91%);
  padding: 53px 0 44px 0;
  position: relative;
}

.product-card-diy .product-card-diy-cont::before{
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 1px;
  border-radius: 15px;
  background: linear-gradient(135deg, #DBB685, #664127);
  -webkit-mask-image: linear-gradient(135deg, #DBB685, #664127), linear-gradient(135deg, #DBB685, #664127);
  -webkit-mask-clip: content-box, padding-box;
  -webkit-mask-composite: destination-out;
  pointer-events: none;
}

.product-card-diy .product-card-diy-img,.product-card-diy .product-card-diy-text{
  width: 50%;
}

.product-card-diy .product-card-diy-img{
  padding: 0 30px;
}

.product-card-diy .product-card-diy-img img{
  display: block;
  margin: 0 auto;
}

.product-card-diy .product-card-diy-title{
  color: #EEE;
  font-size: 40px;
  font-weight: 500;
  line-height: 1.25;
  font-family: var(--heading-font-family);
  max-width: 567px;
}

.product-card-diy .product-card-diy-p{
  color: #EEE;
  font-size: 16px;
  line-height: 1.5;
  max-width: 567px;
  margin-top: 20px;
}

.product-card-diy .product-card-diy-p p{
  margin:0;
}

.product-card-diy .product-card-diy-price{
  display: flex;
  align-items: center;
  margin-top: 20px;
}

.product-card-diy .n-price{
  color: #E0004D;
  font-size: 24px;
  line-height: 1.3;
  letter-spacing: -0.28px;
  font-family: var(--heading-font-family);
}

.product-card-diy .d-price{
  color: #E0E0E0;
  font-size: 16px;
  line-height: 1.3;
  margin-left: 10px;
  text-decoration: line-through;
}

.product-card-diy .product-card-diy-btn{
  display: flex;
  width: 167px;
  height: 51px;
  justify-content: center;
  align-items: center;
  border: 1px solid #887156;
  background: #000;
  color: #FFF;
  font-size: 14px;
  letter-spacing: 1.4px;
  margin-top: 20px;
  cursor: pointer;
}

@media (max-width:1300px) {
  .product-card-diy .product-card-diy-text{
    padding-right: 30px;
  }
  .product-card-diy .product-card-diy-title{
    font-size: 30px;
  }
}

@media (max-width:991px) {
  .product-card-diy{
    padding: 0 0 50px;
  }
  .product-card-diy .product-card-diy-cont{
    padding: 53px 0;
  }
  .product-card-diy .product-card-diy-cont{
    display: block;
  }
  .product-card-diy .product-card-diy-img, .product-card-diy .product-card-diy-text{
    width: 100%;
  }
  .product-card-diy .product-card-diy-text{
    margin-top: 20px;
    padding: 0 15px;
    text-align: center;
  }
  .product-card-diy .product-card-diy-title,.product-card-diy .product-card-diy-p{
    max-width: none;
  }
  .product-card-diy .product-card-diy-title{
    font-size: 22px;
  }
  .product-card-diy .product-card-diy-p{
    font-size: 14px;
  }
  .product-card-diy .product-card-diy-price{
    justify-content: center;
    margin-top: 15px;
  }
  .product-card-diy .product-card-diy-btn{
    width: calc(100% - 60px);
    height: 50px;
    margin: 0 auto;
    margin-top: 16px;
  }
  .product-card-diy .d-price{
    color: #9B9B9B;
  }
  .product-card-diy .product-card-diy-cont::before{
    background: linear-gradient(155deg, #DBB685, #664127);
    -webkit-mask-image: linear-gradient(155deg, #DBB685, #664127), linear-gradient(155deg, #DBB685, #664127);
    -webkit-mask-clip: content-box, padding-box;
    -webkit-mask-composite: destination-out;
  }
}
</style>
<section class="section-box">
  <div class="product-card-diy">
    <div class="container">
      <div class="product-card-diy-cont">
        <div class="product-card-diy-img">
          {%- if section.settings.image != blank -%}
             <img loading="lazy" class="img" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" {% render 'image-attributes', image: section.settings.image %} alt="{{ section.settings.image.alt | escape }}" >
          {%- endif -%}
        </div>
        <div class="product-card-diy-text">
          <div class="product-card-diy-title">{{ section.settings.text }}</div>
          <div class="product-card-diy-p">
           {{ section.settings.text1 }}
          </div>
          <div class="product-card-diy-price">
            <span class="n-price">{{ section.settings.text2 }}</span>
            <span class="d-price">{{ section.settings.text3 }}</span>
          </div>
          {%- if section.settings.text5 != blank -%}
            <a href="{{ section.settings.link }}" class="product-card-diy-btn">
              {{ section.settings.text5 }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  <script>
    window.addEventListener('load',function(){
      $('#shopify-section-{{ section.id }} .product-card-diy .product-card-diy-btn').click(function(){
        // addToCart('{{ section.settings.text4 }}');
        commonGtmEvent('Buy-A2','','')
      })
    })
  </script>
</section>
{% schema %}
{
  "name": "product-card-diy",
  "blocks": [],
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Price"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Discount Price"
    },
    {
      "type": "text",
      "id": "text4",
      "label": "Product ID"
    },
    {
      "type": "text",
      "id": "text5",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "product-card-diy",
      "blocks": []
    }
  ]
}
{% endschema %}



