<style>
     {%- assign text_position = section.settings.text_position | split: '_' | first -%}
      {%- assign mobile_text_position = section.settings.mobile_text_position | split: '_' | first -%}

      {%- case text_position -%}
        {%- when 'top' -%}
          {%- assign section_items_alignment = 'flex-start' -%}
        {%- when 'middle' -%}
          {%- assign section_items_alignment = 'center' -%}
        {%- when 'bottom' -%}
          {%- assign section_items_alignment = 'flex-end' -%}
      {%- endcase -%}

      {%- case mobile_text_position -%}
        {%- when 'top' -%}
          {%- assign mobile_section_items_alignment = 'flex-start' -%}
        {%- when 'middle' -%}
          {%- assign mobile_section_items_alignment = 'center' -%}
        {%- when 'bottom' -%}
          {%- assign mobile_section_items_alignment = 'flex-end' -%}
      {%- endcase -%}
      #shopify-section-{{ section.id }} {
        --section-blocks-alignment: {{ section_items_alignment }};
        --section-mobile-blocks-alignment: {{ mobile_section_items_alignment }};
      }
.media-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
@media screen and (max-width: 768px){
  .media-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.mobile_padding_top }}px);
    padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px);
  }
}
.images_txt-inner{
    position: relative;
    display: flex;
    align-items: var(--section-blocks-alignment);
    width: 100%;
    height: 100%;
    min-height: 600px;
}
.images_txt-inner .img-wrapper{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.images_txt-inner picture,.images_txt-inner picture img{
  display: block;
  width: 100%;
  height: 100%;
}
