}
.images_txt-inner .content-img-wrapper{
  padding: 55px 0;
}
.images_txt-inner .content-img-box{
  width: 500px;
  margin-left: auto;
  margin-right: auto;
}
.images_txt-inner .content-img-box.content-img--left{
  margin-left: 100px;
}
  .images_txt-inner .content-img-box.content-img--right{
  margin-right: 100px;
}
   .images_txt-inner .content-img-box.content-img--text-center{
     text-align:center;
   }
     .images_txt-inner .content-img-box.content-img--text-right{
      text-align:right;
   }
.images_txt-inner .content-img-box h3{
  font-family: var(--heading-font-family);
  color: #190A0A;
font-size: 44px;
font-style: normal;
font-weight: 570;
line-height: 1.1;
margin-bottom: 17px;
}

.images_txt-inner .content-img-box  .content-img-text{
  color: #190A0A;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 1.5;
}
@media screen and (max-width: 749px){
  .images_txt-inner{
    align-items: var(--section-mobile-blocks-alignment);
}
  .images_txt-inner .content-img-box h3{
    font-size: 24px;
    margin-bottom: 10px;
  }
  .images_txt-inner .content-img-box .content-img-text{
    font-size: 12px;
  }
  .images_txt-inner .content-img-box {
    width: auto;
    margin-left: 24px;
    margin-right: 24px;
}
.mobile-full-container{
  padding: 0;
}
.images_txt-inner .img-container  {
padding-left: 0;
    padding-right: 0;
}
  .images_txt-inner .img-container.mobile-container  {
padding-left: var(--container-gutter);
    padding-right: var(--container-gutter);
}
.images_txt-inner .content-img-box.mobile-content-img--left{
  margin-left: 20px;
}
  .images_txt-inner .content-img-box.mobile-content-img--center{
  margin-left: auto;
    margin-right: auto;
}
  .images_txt-inner .content-img-box.mobile-content-img--right{
  margin-right: 20px;
}
   .images_txt-inner .content-img-box.mobile-content-img--text-left{
     text-align:left;
   }
   .images_txt-inner .content-img-box.mobile-content-img--text-center{
     text-align:center;
   }
     .images_txt-inner .content-img-box.mobile-content-img--text-right{
      text-align:right;
   }
  
}

</style>
<section class="section-box media-{{ section.id }}-padding">
 <div class="images-in-text">
           <div class="images_txt-inner to-top">
              <div class="img-wrapper to-opacity">
              <picture class="img-container {% if section.settings.background_type == 'boxed' %}container{% endif %} {% if section.settings.mobile_background_type == 'boxed' %}mobile-container{% endif %}">
                <source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url}}">
                <img src="{{ section.settings.image | image_url}}" alt="" width="{{ section.settings.width }}" height="{{ section.settings.height }}">
              </picture>
              </div>
              <div class="container">
                {%- assign text_alignment = section.settings.text_position | split: '_' | first -%}
                {%- assign text_position = section.settings.text_position | split: '_' | last -%}
  
                {%- assign mobile_text_alignment = section.settings.mobile_text_position | split: '_' | first -%}
                {%- assign mobile_text_position = section.settings.mobile_text_position | split: '_' | last -%}
                
                <div class="content-img-wrapper  content-img__text-wrapper--{{ text_alignment }} mobile-content-img__text-wrapper--{{ mobile_text_alignment }}">
                <div class="content-img-box content-img--{{ text_position }} mobile-content-img--{{ mobile_text_position }} content-img--text-{{ text_position }} mobile-content-img--text-{{ mobile_text_position }}">
                  <h3>{{ section.settings.tle }}</h3>
                  <div class="content-img-text">{{ section.settings.text }}</div>
                </div>
              </div>
              </div>
           </div>
  </div>
</section>
