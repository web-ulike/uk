<style>
  .step-box-popup {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 99999;
    background: rgba(0, 0, 0, 0.5);
    display: none;
  }

  .step-box-popup .step-box-popup-cont {
    position: absolute;
    width: 1100px;
    max-width: 90%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    padding: 0 20px;
    border-radius: 10px;
  }
  .step-box-popup .step-popup-close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    top: 30px;
    right: 30px;
  }
  .step-box-popup .step-popup-close svg {
    display: block;
    width: 25px;
  }

  .step-box-popup .step-box-popup-text {
    max-width: 800px;
    padding: 80px 0 40px 0;
    margin: 0 auto;
  }

  .step-box-popup .step-box-popup-title {
    color: #000;
    font-size: 36px;
    line-height: 1.1;
    font-family: var(--heading-font-family);
    text-align: center;
  }

  .step-box-popup .step-box-popup-scoll {
    max-height: 50vh;
    overflow-x: hidden;
    overflow-y: auto;
    color: #000;
    font-size: 16px;
    line-height: 1.3;
    margin-top: 40px;
    padding-right: 10px;
    margin-right: -10px;
  }

  .step-box-popup .step-box-popup-scoll::-webkit-scrollbar {
    width: 5px;
  }

  .step-box-popup .step-box-popup-scoll::-webkit-scrollbar-thumb {
    background-color: #959595;
    border-radius: 6px;
  }

  .step-box-popup .step-box-popup-scoll::-webkit-scrollbar-thumb:hover {
    background-color: #959595;
  }

  .step-box-popup .step-box-popup-scoll p {
    margin: 0;
  }

  .step-box-popup .step-box-popup-scoll strong {
    font-weight: normal;
    font-size: 18px;
    line-height: 3;
    font-family: var(--heading-font-family);
    margin-bottom: 10px;
  }
  .step-box-popup .step-box-popup-btn {
    width: 100%;
    height: 54px;
    color: #fff;
    font-size: 16px;
    line-height: 1.5;
    font-family: var(--heading-font-family);
    display: none;
    align-items: center;
    justify-content: center;
    background: #000;
    position: absolute;
    left: 0;
    bottom: -65px;
  }

  @media screen and (max-width: 992px) {
    .step-box-popup .step-box-popup-cont {
      border-radius: 0;
    }
    .step-box-popup .step-box-popup-text {
      padding: 37px 0 15px 0;
    }
    .step-box-popup .step-popup-close {
      top: 15px;
      right: 15px;
      display: none;
    }
    .step-box-popup .step-popup-close svg {
      width: 18px;
    }
    .step-box-popup .step-box-popup-title {
      font-size: 28px;
    }
    .step-box-popup .step-box-popup-scoll {
      margin-top: 10px;
    }
    .step-box-popup .step-box-popup-scoll {
      font-size: 14px;
    }
    .step-box-popup .step-box-popup-scoll::-webkit-scrollbar-thumb {
      background-color: #000;
    }
    .step-box-popup .step-box-popup-scoll::-webkit-scrollbar {
      width: 3px;
    }
    .step-box-popup .step-box-popup-scoll strong {
      font-size: 16px;
    }
    .step-box-popup .step-box-popup-btn {
      display: flex;
    }
  }
</style>

<div class="step-box-popup">
  <div class="step-box-popup-cont">
    <div class="step-popup-close">
      <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" viewBox="0 0 46 46" fill="none">
        <path
          d="M23 0C10.304 0 0 10.304 0 23C0 35.696 10.304 46 23 46C35.696 46 46 35.696 46 23C46 10.304 35.696 0 23 0ZM23 44.16C11.316 44.16 1.84 34.684 1.84 23C1.84 11.316 11.316 1.84 23 1.84C34.684 1.84 44.16 11.316 44.16 23C44.16 34.684 34.684 44.16 23 44.16Z"
          fill="#959595"></path>
        <path
          d="M30.452 15.5481C30.084 15.1801 29.532 15.1801 29.164 15.5481L23 21.7121L16.836 15.5481C16.468 15.1801 15.916 15.1801 15.548 15.5481C15.18 15.9161 15.18 16.4681 15.548 16.8361L21.712 23.0001L15.548 29.1641C15.18 29.5321 15.18 30.0841 15.548 30.4521C15.732 30.6361 16.008 30.7281 16.192 30.7281C16.376 30.7281 16.652 30.6361 16.836 30.4521L23 24.2881L29.164 30.4521C29.348 30.6361 29.624 30.7281 29.808 30.7281C29.992 30.7281 30.268 30.6361 30.452 30.4521C30.82 30.0841 30.82 29.5321 30.452 29.1641L24.288 23.0001L30.452 16.8361C30.82 16.4681 30.82 15.9161 30.452 15.5481Z"
          fill="#959595"></path>
      </svg>
    </div>
    <div class="step-box-popup-text">
      <div class="step-box-popup-title">
        {{ section.settings.text }}
      </div>
      <div class="step-box-popup-scoll">
        {{ section.settings.text1 }}
      </div>
    </div>
    {%- if section.settings.text2 != blank -%}
      <div class="step-box-popup-btn">
        {{ section.settings.text2 }}
      </div>
    {%- endif -%}
  </div>
</div>

<script>
    $('.step-box-popup .step-popup-close,.step-box-popup .step-box-popup-btn').click(function () {
        $('.step-box-popup').fadeOut()
    })
</script>
